<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Publish to a local folder -->
  <PropertyGroup>
    <!-- Name of the publish method -->
    <WebPublishMethod>FileSystem</WebPublishMethod>

    <!-- Output folder for published files -->
    <publishUrl>$(MSBuildProjectDirectory)\..\publish</publishUrl>

    <!-- Remove old files before publishing -->
    <DeleteExistingFiles>true</DeleteExistingFiles>

    <!-- Build configuration -->
    <Configuration>Release</Configuration>

    <!-- Target framework -->
    <TargetFrameworkVersion>v4.8</TargetFrameworkVersion>

    <!-- Do not run after publish -->
    <LaunchSiteAfterPublish>false</LaunchSiteAfterPublish>

    <!-- Do not exclude app_data -->
    <ExcludeApp_Data>false</ExcludeApp_Data>
  </PropertyGroup>
</Project>
