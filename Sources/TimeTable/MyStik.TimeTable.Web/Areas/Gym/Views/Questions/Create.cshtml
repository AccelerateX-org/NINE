@model MyStik.TimeTable.Web.Areas.Gym.Models.QuestionCreateModel

@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4>Neue Frage anlegen</h4>
            </div>

            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row mb-3">
                        @Html.LabelFor(model => model.CatalogId, new { @class = "col-form-label col-md-2" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.CatalogId, new { @class = "form-control" } )
                            @Html.ValidationMessageFor(model => model.CatalogId, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-4">
                            Vergabe von Kennzeichnung nach persönlichen Vorlieben
                        </div>
                    </div>

                    <div class="row mb-3">
                        @Html.LabelFor(model => model.Title, new { @class = "col-form-label col-md-2" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" } )
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-4">
                            Eigener Titel, wird in den Quizzes nicht angezeigt
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-form-label col-md-2">Fragestellung</label>
                        <div class="col-md-6">
                            @Html.TextAreaFor(model => model.Problem, new { @class = "form-control", rows = 5 } )
                            @Html.ValidationMessageFor(model => model.Problem, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-4">
                            Frage- oder Aufgabenstellung
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-form-label col-md-2">Beschreibung</label>
                        <div class="col-md-6">
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 5 })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-4">
                            Zusätzliche Beschreibung oder Erläuterung für Studierende.
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-2 form-label">Antworten (Es müssen mindestens zwei Antworten angegeben werden)
                        </div>
                        <div class="col-md-10">
                            <div class="row">
                                <div class="col-md-1">Antwort ist korrekt</div>
                                <div class="col-md-6">Antwortstext</div>
                            </div>
                            <div class="row">
                                <div class="col-md-1">
                                    @Html.CheckBoxFor(m => m.IsAnswerACorrect, new { @class = "form-control-check" })
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.AnswerA, new { @class = "form-control", placeholder = "Antwortstext" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-1">
                                    @Html.CheckBoxFor(m => m.IsAnswerBCorrect, new { @class = "form-control-check" })
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.AnswerB, new { @class = "form-control", placeholder = "Antwortstext" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-1">
                                    @Html.CheckBoxFor(m => m.IsAnswerCCorrect, new { @class = "form-control-check" })
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.AnswerC, new { @class = "form-control", placeholder = "Antwortstext" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-1">
                                    @Html.CheckBoxFor(m => m.IsAnswerDCorrect, new { @class = "form-control-check" })
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.AnswerD, new { @class = "form-control", placeholder = "Antwortstext" })
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-outline-primary"><i class="bi-save"></i> Änderungen speichern</button>
                            <a class="btn btn-outline-secondary" href="@Url.Action("Index")"><i class="bi-x"></i> Abbrechen</a>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>



