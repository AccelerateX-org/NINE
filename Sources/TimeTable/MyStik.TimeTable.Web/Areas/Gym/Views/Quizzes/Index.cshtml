@model IEnumerable<MyStik.Gym.Data.Quiz>

@{
    ViewBag.Title = "Index";
}

<h2>Quizzes</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-outline-primary"><i class="bi-plus"></i> Neues Quiz</a>
    <a href="@Url.Action("Upload")" class="btn btn-outline-primary"><i class="bi-upload"></i> Import</a>
</p>

<table id="tabQuizzes" class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th># Sektionen</th>
            <th># Fragen</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td></td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @item.Sections.Count()
                </td>
                <td>
                    @item.Sections.Sum(x => x.Questions.Count())
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
