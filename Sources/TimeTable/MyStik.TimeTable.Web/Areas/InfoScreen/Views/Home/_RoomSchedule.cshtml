@using MyStik.TimeTable.Web.Helpers
@model MyStik.TimeTable.Web.Areas.InfoScreen.Models.InfoscreenModel


<div>
    @if (Model.Page != null)
    {
        <h4>@Model.Page.Name</h4>
    }
    else
    {
        <h4>Raumbelegung</h4>
    }
    @if (Model.RoomSchedules.Any())
    {
        <div class="infoscreen">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Raum</th>
                        <th>Aktuell</th>
                        <th>Anschließend</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var roomSchedule in Model.RoomSchedules)
                    {
                        <tr>
                            <td>@roomSchedule.Room.Number</td>
                            @if (roomSchedule.CurrentDates.Any() || roomSchedule.NextDates.Any())
                            {
                                if (roomSchedule.CurrentDates.Any())
                                {
                                    <td>
                                        @foreach (var date in roomSchedule.CurrentDates)
                                        {
                                            if (date.Occurrence != null && date.Occurrence.IsCanceled)
                                            {
                                                <div class="text-danger">
                                                    @Html.TimeSpan(date) - @date.Activity.Name (abgesagt)
                                                </div>
                                            }
                                            else
                                            {
                                                <div>
                                                    @Html.TimeSpan(date) - @date.Activity.Name
                                                </div>
                                            }
                                        }
                                    </td>
                                }
                                else
                                {
                                    <td><span class="text-success">frei</span></td>
                                }
                                if (roomSchedule.NextDates.Any())
                                {
                                    <td>
                                        @foreach (var date in roomSchedule.NextDates)
                                        {
                                            if (date.Occurrence != null && date.Occurrence.IsCanceled)
                                            {
                                                <div class="text-danger">
                                                    @Html.TimeSpan(date) - @date.Activity.Name (abgesagt)
                                                </div>
                                            }
                                            else
                                            {
                                                <div>
                                                    @Html.TimeSpan(date) - @date.Activity.Name
                                                </div>
                                            }
                                        }
                                    </td>
                                }
                                else
                                {
                                    <td><span class="text-success">frei</span></td>
                                }
                            }
                            else
                            {
                                <td><span class="text-success">frei</span></td>
                                <td><span class="text-success">frei</span></td>
                            }
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    }
    else
    {
        <h4>Keine Räume</h4>
    }
</div>



