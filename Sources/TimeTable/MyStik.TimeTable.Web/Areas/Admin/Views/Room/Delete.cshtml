@model MyStik.TimeTable.Web.Models.RoomDeleteModel
@{
    ViewBag.Title = "LV löschen";
}

<h4>Lehrveranstaltung @Model.Room.Number löschen</h4>

<div class="alert alert-danger">
    <h4>Bestätigung</h4>
    <p>Wollen Sie diesen Raum löschen?</p>
    <p><strong>Diese Aktion kann nicht rückgängig gemacht werden!</strong></p>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <fieldset>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            @Html.HiddenFor(m => m.Room.Id)
            <div class="form-group">
                <div class="col-md-offset-4 col-md-10">
                    <input type="submit" value="Ja" class="btn btn-danger" />
                    <a href="@Url.Action("Index", "Room")" class="btn btn-default">Nein</a>
                </div>
            </div>
        </fieldset>
    }
</div>



