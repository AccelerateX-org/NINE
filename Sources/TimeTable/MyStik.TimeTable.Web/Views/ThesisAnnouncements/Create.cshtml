@model MyStik.TimeTable.Data.ThesisAnnouncement

@{
    ViewBag.Title = "Create";
}

@section styles{

<link rel="stylesheet" type="text/css" href="@Url.Content("~/Assets/fillter/css/style.css")" />

    }

<form action="#Contact" id="theme1">
    <h2>Einstellen einer Masterarbeit</h2>
    <h5>Zur Verfügung gestellt durch:</h5>
    <div class="row">
        <div class="radio">
            <input id="radio-1" name="radio" type="radio" checked>
            <label for="radio-1" class="radio-label">Firma</label>
        </div>
        <div class="radio">
            <input id="radio-2" name="radio" type="radio">
            <label for="radio-2" class="radio-label">Professor</label>
        </div>
    </div>
    <br>
    <h5>Anschrift</h5>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="input-group">
                <div class="input-group-addon">
                    <i>Straße</i>
                </div>
                <input type="text" class="form-control" placeholder="Musterweg" title="Straße">
                <div class="input-group-addon">
                    <i>Nr.</i>
                </div>
                <input type="number" class="form-control" placeholder="5" title="Hausnummer">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="input-group">
                <div class="input-group-addon">
                    <i>Postleitzahl</i>
                </div>
                <input type="number" class="form-control" placeholder="82211" title="Postleitzahl">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="input-group">
                <div class="input-group-addon">
                    <i>Stadt</i>
                </div>
                <input type="text" class="form-control" placeholder="München" title="Stadt">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="input-group">
                <div class="input-group-addon">
                    <i>Land</i>
                </div>
                <input type="text" class="form-control" placeholder="Deutschland" title="Land">
            </div>
        </div>
    </div>
    <br>
    <h5>Ansprechpartner</h5>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <select name="anrede">
                <option value="none" selected>Anrede</option>
                <option value="heer">Herr</option>
                <option value="frau">Frau</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="input-group">
                <div class="input-group-addon">
                    <i class="fa fa-tag"></i>
                </div>
                <input type="text" class="form-control" placeholder="Name" title="Name">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="input-group">
                <div class="input-group-addon">
                    <i class="fa fa-tag"></i>
                </div>
                <input type="text" class="form-control" placeholder="Vorname" title="Vorname">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="input-group">
                <div class="input-group-addon">
                    <i class="glyphicon glyphicon-earphone"></i>
                </div>
                <input type="email" class="form-control" placeholder="Telefonnummer" title="Telefonnummer">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="input-group">
                <div class="input-group-addon">
                    <i class="fa fa-at"></i>
                </div>
                <input type="email" class="form-control" placeholder="Email-Adresse" title="Email-Adresse">
            </div>
        </div>
    </div>
    <br>
    <h5>Beschreibung Masterarbeit</h5>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="input-group">
                <div class="input-group-addon">
                    <i>Thema</i>
                </div>
                <input type="text" class="form-control" placeholder="Thema der Masterarbeit" title="Titel">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <select name="anrede">
                <option value="none" selected>Abteilung</option>
                <option value="Entwicklung">Entwicklung</option>
                <option value="Einkauf">Einkauf</option>
                <option value="Vertrieb">Vertrieb</option>
                <option value="Produktion">Produktion</option>
                <option value="Sostiges">Sonstiges</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="input-group">
                <div class="input-group-addon">
                    <i>Standort</i>
                </div>
                <input type="text" class="form-control" placeholder="Standort, an dem die Masterarbeit ausgeführt wird" title="Standort">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="input-group">
                <div class="input-group-addon">
                    <i>Stelle</i>
                </div>
                <input type="text" class="form-control" placeholder="z.B. Entwickler" title="Stelle">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <select name="Startzeitpunkt">
                <option value="none" selected>Startzeitpunkt</option>
                <option value="1617">SS 17</option>
                <option value="1718">WS 17/18</option>
                <option value="1718">SS 18</option>
                <option value="1718">WS 17/18</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <textarea placeholder="Kurzbeschreibung der Masterarbeit"></textarea>
        </div>
    </div>
    <br>
    <h5>Anhang</h5>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <label for="file2"><input type="file" id="file2" required></label><br />
        </div>
    </div>
    <br>
    <br>
    <input type="button" value="Arbeit abschicken">
    <br>
    <br>
</form>






<div>
    @Html.ActionLink("Back to List", "Index")
</div>

