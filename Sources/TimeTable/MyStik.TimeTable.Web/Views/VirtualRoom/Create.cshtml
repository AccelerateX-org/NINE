@model MyStik.TimeTable.Data.VirtualRoom
@{
    ViewBag.Title = "Virtueller Raum";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4><i class="fa fa-info-circle"></i> Informationen</h4>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        <fieldset>
                            <div class="form-group">
                                <label for="Name" class="col-md-2 control-label">Bezeichnung</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.Name, new {@class = "form-control", placeholder = "z.B. Video, Chat"})
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Description" class="col-md-2 control-label">Beschreibung</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.Description, new {@class = "form-control", placeholder = "z.B. Zweck"})
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="AccessUrl" class="col-md-2 control-label">URL (mit Angabe http(s)://...)</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.AccessUrl, new {@class = "form-control", placeholder = "Link zum virtuellen Raum"})
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="TokenName" class="col-md-2 control-label">Bezeichnung der Zugangsdaten</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.TokenName, new {@class = "form-control", placeholder = "z.B. Benutzername/Passwort oder Zugangsschlüssel"})
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Token" class="col-md-2 control-label">Zugangsdaten</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.Token, new {@class = "form-control", placeholder = "z.B. user/passwort"})
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-8">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Anlegen</button>
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


