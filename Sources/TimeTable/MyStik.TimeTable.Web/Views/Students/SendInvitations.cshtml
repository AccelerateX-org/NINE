@model MyStik.TimeTable.Web.Models.OccurrenceMailingModel

@{
    ViewBag.Title = "Versand der Einladungen";
}
@section styles
{
    <link href="@Styles.Url("~/Assets/global/plugins/cleditor/jquery.cleditor.css")" rel="stylesheet" type="text/css" />

}


<div class="panel panel-default">
    <div class="panel-body bg-fillter-lecturer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Studierende - Versand der Einladungen</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("SendInvitations", null, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)
                <fieldset>
                    @Html.ValidationSummary()
                    <div class="form-group">
                        @Html.LabelFor(m => m.TemplateLanguage, new { @class = "col-md-2 control-label" })
                        <div class="col-md-2">
                            @Html.DropDownListFor(m => m.TemplateLanguage, (IEnumerable<SelectListItem>)ViewBag.Languages, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Body, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            <p>Zusätzlicher Text. Persönliche Anrede wird automatisch eingefügt.</p>
                            @Html.TextAreaFor(m => m.Body, new { @class = "form-control", placeholder = "Mail", rows = "10" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">Allgemeiner Hinweis als Fußnote bei neuen Benutzerkonten</label>
                        <div class="col-md-10">

                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs" role="tablist">
                                <li role="presentation" class="active"><a href="#de" aria-controls="home" role="tab" data-toggle="tab">deutsch</a></li>
                                <li role="presentation"><a href="#en" aria-controls="profile" role="tab" data-toggle="tab">englisch</a></li>
                            </ul>

                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane active" id="de">
                                    <p>Ihr Benutzerkonto wurde angelegt. Als Benutzername verwenden Sie bitte die E-Mail Adresse, an die diese Nachricht gesendet wurde.</p>
                                    <p>
                                        Zur Eingabe Ihres persönlichen Passworts verwenden Sie bitte den folgenden Link
                                        <i>Passwort setzen</i>
                                        oder nutzen die Funktion <i>Passwort vergessen</i> auf der Anmeldeseite.
                                    </p>
                                    <p><strong>Wichtiger Hinweis:</strong> Das Passwort muss eine Länge von mindestens 8 Zeichen besitzen, Klein- und Großbuchstaben, Ziffern sowie Sonderzeichen enthalten, z.B. Pas12345?.</p>
                                    
                                </div>
                                <div role="tabpanel" class="tab-pane" id="en">
                                    <p>Your user account is created. Please use the email adress this message was sent to as user name.</p>
                                    <p>
                                        For setting your personal password pleas follow the link
                                        <i>set password</i>
                                        or use the function <i>forgor password</i> from the login screen.
                                    </p>
                                    <p><strong>Please note:</strong> The passwort must have a length of at least 8 characters, including lower an upper cases, digits and special symbols, i.e. Pas12345?.</p>
                                    
                                </div>
                            </div>


                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">Anhänge</label>
                        <div class="col-md-10">
                            <div>
                                <input type="file" name="Attachments" id="Attachment1" />
                            </div>
                            <div>
                                <input type="file" name="Attachments" id="Attachment2" />
                            </div>
                            <div>
                                <input type="file" name="Attachments" id="Attachment3" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Senden" class="btn btn-default" />
                        </div>
                    </div>
                </fieldset>
            }

        </div>
    </div>
</div>

@section scripts
{
<script src="@Url.Content("~/Assets/global/plugins/cleditor/jquery.cleditor.min.js")" type="text/javascript"></script>

<script>
        jQuery(document).ready(function() {
            $("#Body").cleditor();
        });
</script>
}