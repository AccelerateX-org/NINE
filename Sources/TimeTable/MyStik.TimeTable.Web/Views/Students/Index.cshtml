@using MyStik.TimeTable.Web.Models
@model ICollection<MyStik.TimeTable.Data.ActivityOrganiser>
@{
    ViewBag.Title = "Studierende";
}

<div class="panel panel-default">
    <div class="panel-body bg-fillter-lecturer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Studierende</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
    @if (ViewBag.UserRight.IsOrgMember || ViewBag.UserRight.IsOrgAdmin)
            {
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            @using (Ajax.BeginForm("Persons", "Organiser", null,
                                new AjaxOptions
                                {
                                    HttpMethod = "Post",
                                    InsertionMode = InsertionMode.Replace,
                                    UpdateTargetId = "StudList"
                                },
                                new {@class = "form", role = "form"}))
                            {
                                <div class="form-group">
                                    <label for="searchString">Suche nach:</label>
                                    <input type="text" name="searchString" id="searchString" class="form-control"/>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Suchen" class="btn btn-primary"/>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">

                        <div class="panel panel-default">
                            <ul class="nav">
                                <li>
                                    <a href="@Url.Action("Invitation")"><i class="icon-present"></i> Einladen</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
        
            }


        </div>

        <div class="col-md-10">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <table class="table table-condensed">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Kurzname</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var org in Model)
                                {
                                    <tr>
                                        <td>@Html.ActionLink(org.Name, "Details", "Union", new {id = org.Id}, null)</td>
                                        <td>@org.ShortName</td>
                                        @if (ViewBag.UserRight.User.MemberState != MemberState.Student ||
                                             (ViewBag.MyOrganisation != null && ViewBag.MyOrganisation.Id == org.Id))
                                        {
                                            <td></td>
                                        }
                                        else
                                        {
                                            <td><a href="@Url.Action("GetMember", "Union", new {id = org.Id})" class="btn btn-default btn-xs"><i class="fa fa-paw"></i> Mitmachen</a></td>
                                        }
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div id="StudList">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>

    </script>
}









