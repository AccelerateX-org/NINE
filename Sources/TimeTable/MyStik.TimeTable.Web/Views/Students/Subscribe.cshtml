@model  MyStik.TimeTable.Web.Models.StudentSubscriptionModel

@{
    ViewBag.Title = "Subscribe";
}

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")"><i class="bi bi-grid"></i></a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Students")">Studierende</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.User.FirstName @Model.User.LastName</li>
            </ol>
        </nav>
    </div>
</div>


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>In Lehrveranstaltung eintragen</h5>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { role = "form" }))
                    {
                        <fieldset>
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.Student.Id)
                            @Html.HiddenFor(m => m.User.Id)
                            @Html.ValidationSummary(true)
                            <div class="row mb-3">
                                @Html.LabelFor(m => m.SemesterName, new { @class = "col-md-4 col-form-label" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.SemesterName, new { @class = "form-control", placeholder = "Name des Semesters" })
                                    @Html.ValidationMessageFor(m => m.SemesterName)
                                </div>
                            </div>
                            <div class="row mb-3">
                                @Html.LabelFor(m => m.OrgName, new { @class = "col-md-4 form-label" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.OrgName, new { @class = "form-control", placeholder = "Kurzname der Einrichtung" })
                                    @Html.ValidationMessageFor(m => m.OrgName)
                                </div>
                            </div>
                            <div class="row mb-3">
                                @Html.LabelFor(m => m.CourseShortName, new { @class = "col-md-4 form-label" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.CourseShortName, new { @class = "form-control", placeholder = "z.B. 0105" })
                                    @Html.ValidationMessageFor(m => m.CourseShortName)
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="offset-4 col-md-8">
                                    <button type="submit" class="btn btn-outline-primary"><i class="bi-save"></i> Eintragen</button>
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

