@model MyStik.TimeTable.Web.Models.InvitationCheckModel
@{
    ViewBag.Title = "Einladung";
}

<div class="panel panel-default">
    <div class="panel-body bg-fillter-lecturer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Studierende - Einladung</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @if (!string.IsNullOrEmpty(Model.Error))
            {
                <div class="alert alert-danger">
                    <h4>FEHLER BEIM EINLESEN DER DATEI</h4>
                    <p>@Model.Error</p>
                </div>
            }

                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <h4 class="panel-title">Folgende Studierenden werden nicht eingeladen</h4>
                    </div>
                    <div class="panel-body">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>E-Mail</th>
                                    <th>Ebene</th>
                                    <th>Kohorte</th>
                                    <th>Status</th>
                                    <th>Bemerkung</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var invitation in Model.Invitations)
                                {
                                    <tr>
                                        <td>@invitation.Email</td>
                                        <td>@invitation.LabelLevel</td>
                                        <td>@invitation.LabelName</td>
                                        @if (invitation.Invite)
                                        {
                                            <td>ok</td>
                                        }
                                        else
                                        {
                                            <td>FEHLER</td>
                                        }
                                        <td>@invitation.Remark</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
        </div>
    </div>
</div>

