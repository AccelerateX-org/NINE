@model MyStik.TimeTable.Web.Models.ThesisMarkingModel
@{
    ViewBag.Title = "Abschlussarbeiten";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>bewertung Abschlussarbeit</h4>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form form-horizontal" }))
                    {
                        <fieldset>
                            @Html.HiddenFor(model => model.Thesis.Id)
                            <div class="form-group">
                                @Html.LabelFor(model => model.Mark, new { @class = "col-sm-3 control-label" })
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(m => m.Mark, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Notenmeldung anfordern</button>
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

