@using MyStik.TimeTable.Web.Helpers
@model MyStik.TimeTable.Web.Models.OfficeHourSubscriptionViewModel
@{
    ViewBag.Title = "Termine";
}

<div class="panel panel-default">
    <div class="panel-body bg-fillter-lecturer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Host.Name - Sprechstundentermine im Semester @Model.Semester.Name</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet light bordered">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-legal"></i>Sprechstunde nach Vereinbarung
                            </div>
                            <div class="actions">
                            </div>
                        </div>
                        <div class="portlet-body">
                            @if (string.IsNullOrEmpty(Model.OfficeHour.Description))
                            {
                                <h4>Keine Zusatzinformationen</h4>
                            }
                            else
                            {
                                <div>@Html.Raw(Model.OfficeHour.Description)</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




