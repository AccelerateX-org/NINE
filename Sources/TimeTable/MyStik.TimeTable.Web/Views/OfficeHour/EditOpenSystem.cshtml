@model MyStik.TimeTable.Web.Models.OfficeHourCreateModel
@{
    ViewBag.Title = "Einstellungen Sprechstunde";
}


@section styles
{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Assets/libs/cleditor/jquery.cleditor.css")" />
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4>Einstellungen Sprechstunde im @Model.Semester.Name</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm(null, null, FormMethod.Post, null))
                {
                    <fieldset>
                        @Html.ValidationSummary()
                        @Html.HiddenFor(model => model.OfficeHourId)
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label>Anzahl zukünftig buchbarer Termine</label>
                            </div>
                            <div class="col-sm-2">
                                @Html.DropDownListFor(model => model.MaxFutureSlots, (IEnumerable<SelectListItem>)ViewBag.FutureSlotLimits, new { @class = "form-select" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(m => m.Description, new { @class = "" })
                            </div>
                            <div class="col-sm-8">
                                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Beschreibung", rows = "10" })
                            </div>
                        </div>
                        <div>
                            <div class="offset-sm-4 col-md-6">
                                <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Speichern</button>
                                <a href="@Url.Action("OfficeHour", "Lecturer", new {id=Model.OfficeHourId})" class="btn btn-outline-secondary"><i class="bi bi-x"></i> Abbrechen</a>
                            </div>
                        </div>
                    </fieldset>
                }


            </div>
        </div>
    </div>
</div>






@section scripts
{
    <script type="text/javascript" src="@Url.Content("~/Assets/libs/cleditor/jquery.cleditor.min.js")" type="text/javascript"></script>

    <script>
        $(document).ready(function () {

            $("#Description").cleditor();
        });

    </script>

}