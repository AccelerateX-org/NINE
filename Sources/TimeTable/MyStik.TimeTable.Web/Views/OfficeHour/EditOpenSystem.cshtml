@model MyStik.TimeTable.Web.Models.OfficeHourCreateModel
@{
    ViewBag.Title = "Einstellungen Sprechstunde";
}


@section styles
{
    <link rel="stylesheet" href="@Url.Content("~/Assets/global/plugins/Jquery-ui/jquery-ui.min.css")" />
    <link href="@Styles.Url("~/Assets/global/plugins/cleditor/jquery.cleditor.css")" rel="stylesheet" type="text/css" />
}


<div class="panel panel-default">
    <div class="panel-body bg-fillter-lecturer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Einstellungen Sprechstunde im @Model.Semester.Name</h1>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-headphones"></i>
                        <span class="caption-subject bold uppercase"> Allgemeine Einstellungen</span>
                    </div>
                </div>
                <div class="portlet-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new {@class = "form-horizontal"}))
                    {
                    <fieldset>
                        @Html.ValidationSummary()
                        @Html.HiddenFor(model => model.OfficeHourId)
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Anzahl zukünftig buchbarer Termine</label>
                            <div class="col-sm-6">
                                @Html.DropDownListFor(model => model.MaxFutureSlots, (IEnumerable<SelectListItem>)ViewBag.FutureSlotLimits, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Description, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-6">
                                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Beschreibung", rows = "10" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-4 col-md-6">
                                <input type="submit" value="speichern" class="btn btn-primary" />
                                <a href="@Url.Action("OfficeHour", "Lecturer", new {id=Model.OfficeHourId})" class="btn btn-default">Abbrechen</a>
                            </div>
                        </div>
                    </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>






@section scripts
{
    <script src="@Url.Content("~/Assets/global/plugins/cleditor/jquery.cleditor.min.js")" type="text/javascript"></script>

    <script>
        $(document).ready(function() {

            $("#Description").cleditor();
        });

    </script>

}