@model MyStik.TimeTable.Web.Models.LoginViewModel

@{
    // Layout = "~/Views/Shared/_LayoutDashboardSidebar.cshtml";
    ViewBag.Title = Resources.LoginTab;
}

<div class="container" style="margin-top: 80px">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4>@Resources.LoginHeading</h4>
                </div>
                <div class="card-body">
                    @*
