@model MyStik.TimeTable.Web.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_LayoutPublicNew.cshtml";
    ViewBag.Title = Resources.LoginTab;
}

<div class="container" style="margin-top: 20px">
    <div class="row">
        <div class="col-lg-offset-4 col-lg-4 col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>@Resources.LoginHeading</h4>
                </div>
                <div class="panel-body">
                    @*
                        <ul class="list-inline pull-right">
                            <li>
                                <a href="@Url.Action("SetCulture", new {culture = "en"})">
                                    <img src="~/Assets/global/img/flags/gb.png"/>
                                </a>
                                <a href="@Url.Action("SetCulture", new {culture = "de"})">
                                    <img src="~/Assets/global/img/flags/de.png"/>
                                </a>
                                <a href="@Url.Action("SetCulture", new {culture = "fr"})">
                                    <img src="~/Assets/global/img/flags/fr.png"/>
                                </a>
                            </li>
                        </ul>
                    *@
                    @using (Html.BeginForm("Login", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form", role = "form"}))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new {@class = "alert alert-danger"})

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                                @Html.TextBoxFor(m => m.Email, new {@class = "form-control", placeholder = Resources.EmailPlaceholder})
                            </div>
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                                @Html.PasswordFor(m => m.Password, new {@class = "form-control", placeholder = Resources.PasswordPlaceholder})
                            </div>
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">
                                @Resources.LoginButton <i class="icon icon-login"></i>
                            </button>
                        </div>
                    }
                    <ul class="fa-ul">
                        <li><i class="fa fa-question fa-li text-primary"></i>@Html.ActionLink(Resources.ForgotPasswordLink, "ForgotPassword")</li>
                        <li><i class="fa fa-pencil fa-li text-primary"></i>@Html.ActionLink(Resources.RegisterLink, "Register")</li>
                    </ul>
                    
                    <div class="alert alert-info">
                        <h5>Wichtiger Hinweis:</h5>
                        <p class="text-danger">NINE ist KEIN hochschulweites System. Anfragen an die zentrale IT sind daher zwecklos.</p>
                        <p>Alle Anfragen bitte direkt an <a href="https://www.wi.hm.edu/02_fakultaet/personen/professorinnen/hinz.de.html" target="_blank">Prof. Dr.-Ing.Olav Hinz</a> stellen.</p>
                    </div>
                    @*
                        <hr/>
                        <div class="form-group">
                            @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel {ReturnUrl = ViewBag.ReturnUrl})
                        </div>
                    *@
                </div>
            </div>
        </div>
    </div>
</div>



