@model MyStik.TimeTable.Web.Models.ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutNewPublic.cshtml";
    ViewBag.Title = "Passwort zurücksetzen";
}

<div class="row">
    <div class="col-lg-offset-4 col-lg-4 col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8">
        <div class="panel panel-default login-form">
            <div class="panel-heading">
                <h4 class="panel-title">Passwort zurücksetzen</h4>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-Mail Adresse eingeben" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Passwort eingeben" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Passwortwiederholung eingeben" })
                        </div>
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-primary pull-right">
                                Passwort zurücksetzen <i class="fa fa-arrow-circle-o-right"></i>
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

