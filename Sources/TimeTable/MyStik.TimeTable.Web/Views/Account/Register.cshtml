@model MyStik.TimeTable.Web.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_LayoutNewPublic.cshtml";
    ViewBag.Title = "Registerierung";
}

<div class="row">
    <div class="col-lg-offset-4 col-lg-4 col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">Neues Benutzerkonto anlegen</h4>
            </div>
            <div class="panel-body">
                <div class="alert alert-info ">
                    <strong>Wichtige Information für Erstsemester:</strong>
                    <ul>
                        <li>Verwenden Sie nach Möglichkeit zur Registrierung Ihre hm.edu E-Mail Adresse.</li>
                        <li>Ihr HM-Postfach (E-Mail Adresse ....@@hm.edu) steht i.d.R. erst 24 h nach Ihrer Immatrikulation zur Verfügung.</li>
                        <li>Bitte prüfen Sie zuerst die Funktionsfähigkeit Ihres HM-Postfachs bevor Sie sich hier registrieren.</li>
                        <li><strong>ACHTUNG</strong>: Bitte keine <strong>hotmail.de/com</strong> oder <strong>outlook.de</strong> Adressen verwenden. Diese Dienste verweigern die Annahme von E-Mails, die von hm.edu gesendet werden.</li>
                    </ul>
                </div>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@class = "form", role = "form"}))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "Es ist ein Fehler aufgetreten", new {@class = "alert alert-danger"})
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                            @Html.TextBoxFor(m => m.Email, new {@class = "form-control", placeholder = "E-Mail Adresse als Benutzername eingeben"})
                        </div>
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                            @Html.PasswordFor(m => m.Password, new {@class = "form-control", placeholder = "Passwort eingeben"})
                        </div>
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                            @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control", placeholder = "Passwortwiederholung eingeben"})
                        </div>
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-fw"></i></span>
                            @Html.TextBoxFor(m => m.FirstName, new {@class = "form-control", placeholder = "Vorname eingeben"})
                        </div>
                        @Html.ValidationMessageFor(m => m.FirstName)
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-fw"></i></span>
                            @Html.TextBoxFor(m => m.LastName, new {@class = "form-control", placeholder = "Nachname eingeben"})
                        </div>
                        @Html.ValidationMessageFor(m => m.LastName)
                    </div>
