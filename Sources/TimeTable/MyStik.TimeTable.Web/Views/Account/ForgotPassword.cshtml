@model MyStik.TimeTable.Web.Models.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutPublicNew.cshtml";
    ViewBag.Title = Resources.ForgotPasswordHeading;
}

<div class="container" style="margin-top: 20px">
    <div class="row">
        <div class="col-lg-offset-4 col-lg-4 col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">@Resources.ForgotPasswordHeading</h4>
                </div>
                <div class="panel-body">

                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <p>@Resources.ForgotPasswordMessage</p>
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="input-group">

                                <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = Resources.EmailPlaceholder })
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">
                                @Resources.ForgotPasswordSubmitButton
                            </button>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
