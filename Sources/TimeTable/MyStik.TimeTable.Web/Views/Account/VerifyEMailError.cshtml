@model MyStik.TimeTable.Web.Models.VerifyEMailModel
@{
    ViewBag.Title = "Bestätigung E-Mail Adresse";
}


<div class="container" style="margin-top: 80px">
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="card">
                <div class="card-header">
                    <h4>Registrierung erfolgreich</h4>
                </div>
                <div class="card-body">
                    <p class="fw-bold text-danger">Die Verifikation Ihrer E-Mail Adresse @Model.EMail ist fehlgeschlagen.</p>
                    <p>Grund: @Model.Message</p>
                    <p>Für Rückfragen wenden Sie sich an <a href="https://www.wi.hm.edu/02_fakultaet/personen/professorinnen/hinz.de.html" target="_blank">Prof. Dr.-Ing.Olav Hinz</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
