@model MyStik.TimeTable.Web.Models.VerifyEMailModel
@{
    ViewBag.Title = "Bestätigung E-Mail Adresse";
}

<div class="container" style="margin-top: 80px">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4>Registrierung erfolgreich</h4>
                </div>
                <div class="card-body">
                    <p class="fw-bold">Ihre E-Mail Adresse @Model.EMail wurde erfolgreich bestätigt. Ihr Benutzerkonto ist aktiviert.</p>
                    <p>Sie können sich jetzt  @Html.ActionLink("anmelden", "Login", "Account").</p>
                </div>
            </div>
        </div>
    </div>
</div>








