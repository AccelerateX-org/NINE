@model MyStik.TimeTable.Web.Models.VerifyEMailModel
@{
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
    ViewBag.Title = "Bestätigung E-Mail Adresse";
}

<div class="row">
    <div class="col-lg-offset-4 col-lg-4 col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h4 class="panel-title">Änderung der E-Mail Adresse erfolgreich</h4>
            </div>
            <div class="panel-body">
                <h4>Ihre E-Mail Adresse @Model.EMail wurde erfolgreich geändert.</h4>
                <p>Sie können sich jetzt mit Ihrer neuen E-Mail Adresse @Html.ActionLink("anmelden", "Login", "Account").</p>
            </div>
        </div>
    </div>
</div>







