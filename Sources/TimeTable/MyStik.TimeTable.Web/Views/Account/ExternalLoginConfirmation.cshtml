@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            $("#dlgRegister").hide();
            $("#dlgHmAccount").hide();
        });


        function onConfirmRegister() {
            $("#dlgRegister").show();
        }


        function onUseHmAccount() {
            $("#dlgSelect").hide();
            $("#dlgHmAccount").show();
        }
    </script>
