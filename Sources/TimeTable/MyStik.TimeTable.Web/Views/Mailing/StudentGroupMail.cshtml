@using MyStik.TimeTable.Data
@using MyStik.TimeTable.Web.Models
@model MyStik.TimeTable.Web.Models.OccurrenceMailingModel

@{
    ViewBag.Title = "Gruppe von Studierenden";
}

@section styles
{
    <link href="@Styles.Url("~/Assets/global/plugins/cleditor/jquery.cleditor.css")" rel="stylesheet" type="text/css" />

}





<div class="panel panel-default">
    <div class="panel-body bg-fillter-events">
        <div class="row">
            <div class="col-md-12">
                <h1>Mailing - Semestergruppen</h1>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">

    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-calendar"></i>Die Mail soll an folgende Gruppen gesendet werden
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                    @if (ViewBag.GroupList != null)
                    {
                        var nStud = 0;
                        var groupList = ViewBag.GroupList as ICollection<SemesterGroupViewModel>;
                        <table class="table table-condensed">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Anzahl Studierende</th>
                            </tr>
                            </thead>
                            <tbody>

                            @foreach (var group in groupList.Where(g => g.Group.CapacityGroup != null).OrderBy(g => g.Group.CapacityGroup.CurriculumGroup.Curriculum.Name).ThenBy(g => g.Group.CapacityGroup.CurriculumGroup.Name).ThenBy(g => g.Group.Name))
                            {
                            nStud += group.UserIds.Count;

                            <tr>
                                <td>@group.Group.FullName</td>
                                <td>
                                    @group.UserIds.Count
                                </td>
                            </tr>
                            }
                            <tr>
                                <td><strong>Total</strong></td>
                                <td><strong>@nStud</strong></td>
                            </tr>
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <h4>Es sind keine Gruppen ausgewählt. Die Mail hat keine Empfänger!</h4>
                        </div>
                    }
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("StudentGroup", null, FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal"}))
            {
                @Html.ValidationSummary(true)
                <fieldset>
                    @Html.ValidationSummary()
                    <div class="form-group">
                        @Html.LabelFor(m => m.Subject, new {@class = "col-md-4 control-label"})
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Subject, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Body, new {@class = "col-md-4 control-label"})
                        <div class="col-md-8">
                            @Html.TextAreaFor(m => m.Body, new {@class = "form-control", rows = "10"})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(m => m.IsImportant)
                                    Diese Nachricht als <strong>"WICHTIG FÜR DAS STUDIUM"</strong> an alle Studierenden senden. <br/>
                                    Die individuellen Einstellungen im Benutzerprofil der Studierenden zur Steuerung der Benachrichtungen werden nicht berücksichtigt.
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Anhänge</label>
                        <div class="col-md-8">
                            <div>
                                <input type="file" name="Attachments" id="Attachment1"/>
                            </div>
                            <div>
                                <input type="file" name="Attachments" id="Attachment2"/>
                            </div>
                            <div>
                                <input type="file" name="Attachments" id="Attachment3"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            <input type="submit" value="Senden" class="btn btn-default"/>
                        </div>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>



        @section scripts
{
            <script src="@Url.Content("~/Assets/global/plugins/cleditor/jquery.cleditor.min.js")" type="text/javascript"></script>

            <script>
                jQuery(document).ready(function () {
                    $("#Body").cleditor();
                });
            </script>
        }

