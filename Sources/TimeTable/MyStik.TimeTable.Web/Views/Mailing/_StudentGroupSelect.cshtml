@model MyStik.TimeTable.Web.Models.SemesterOverviewModel

@{
    var nStud = 0;
}
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Kohorten im @Model.Semester.Name</h5>
            </div>
            <div class="panel-body">
                <div id="groupTable">
                    <table class="table">
                        <thead>
                        <tr>
                            <th></th>
                            <th>Name</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var curr in Model.Organiser.Curricula.Where(x => !x.IsDeprecated && x.LabelSet != null))
                        {
                            foreach (var itemLabel in curr.LabelSet.ItemLabels)
                            {
                                <tr>
                                    <td><input id="@itemLabel.Id" type="checkbox" onclick="toggleDateCheck(this)" value=""></td>
                                    <td>@curr.ShortName::@itemLabel.Name</td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                    <a id="btnNext" class="btn btn-outline-primary disabled" id="send" href="javascript:onSend()"><i class="fa fa-save"></i> Auswahl speichern und weiter</a>
                </div>
            </div>
        </div>
    </div>
</div>


