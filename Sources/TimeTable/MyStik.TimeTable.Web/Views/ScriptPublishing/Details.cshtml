@using MyStik.TimeTable.Web.Helpers
@model MyStik.TimeTable.Data.ScriptDocument
@{
    ViewBag.Title = "Skript";
}


@section styles
{
    <link href="@Url.Content("~/Assets/libs/datatables/dataTables.min.css")" rel="stylesheet" type="text/css" />
}


@section scripts
{
    <script src="@Url.Content("~/Assets/libs/moment/moment.js")" type="module"></script>
    <script src="@Url.Content("~/Assets/libs/datatables/dataTables.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/libs/datatables/plugins/sorting/datetime-moment.js")" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $('#tabCourses').DataTable({
                "paging": false
            });
        });
    </script>
}



<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4>Skript "@Model.Title" (@Model.Version)</h4>
            </div>
            <div class="list-group">
                <div class="list-group-item">
                    <div class="btn-group">
                        <a class="btn btn-outline-primary text-center" href="@Url.Action("Index")"><i class="bi-arrow-left"></i><br />Zurück</a>
                        <a class="btn btn-outline-primary text-center" href="@Url.Action("GetDocument", "Storage", new {id = Model.Storage.Id})"><i class="bi-download"></i><br />Download</a>
                        <a class="btn btn-outline-primary text-center" href="@Url.Action("Edit", new {id = Model.Id})"><i class="bi-gear"></i><br />Titel / Version ändern</a>
                        <a class="btn btn-outline-primary text-center" href="@Url.Action("Add", new {id = Model.Id})"><i class="bi-share"></i><br />Für weitere Lehrveranstaltung publizieren</a>
                        @if (Model.Orders.Count == 0)
                        {
                            <a class="btn btn-outline-danger text-center" href="@Url.Action("Delete", "ScriptPublishing", new {id = Model.Id})"><i class="bi-trash"></i><br />Löschen</a>
                        }
                        else
                        {
                            <div class="btn btn-outline-danger disabled">Löschen</div>
                        }

                    </div>
                </div>
            </div>
            <table id="tabCourses" class="table">
                <thead>
                    <tr>
                        <th>Lehrveranstaltung</th>
                        <th>Gruppen</th>
                        <th>Publiziert seit</th>
                        <th>Publiziert für Semester</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pub in Model.Publishings)
                    {
                        var semester = pub.Course.SemesterGroups.Select(x => x.Semester).Distinct().ToList();

                        <tr>
                            <td><a href="@Url.Action("Details", "Course", new {id = pub.Course.Id})">@pub.Course.Name</a></td>
                            <td>@Html.GroupList(pub.Course.SemesterGroups, false, true)</td>
                            <td>@pub.Published.ToShortDateString()</td>
                            <td>
                                @foreach (var s in semester)
                                {
                                    <div>@s.Name</div>
                                }
                            </td>
                            <td>
                                <a class="btn btn-outline-danger text-center" href="@Url.Action("Withdraw", new {id = pub.Id})"><i class="bi-x-circle"></i> Publikation zurückziehen</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
