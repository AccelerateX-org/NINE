@model MyStik.TimeTable.Web.Models.ScriptCreatetModel
@{
    ViewBag.Title = "Neues Skript";
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                Skript publizieren
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <h5>Hinweis:</h5>
                    <p>Die Verknüpfung des Skripts zu Modulen und Lehrveranstaltungen kann später noch beliebig ergänzt und verändert werden.</p>
                </div>
                @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                {
                    @Html.HiddenFor(m => m.SemesterId)
                    @Html.HiddenFor(m => m.DocId)
                    <div class="form-group row">
                        <label for="Semester" class="col-sm-6 col-form-label">Semester</label>
                        <div class="col-sm-6">
                            <input class="form-control" type="text" value="@Model.Semester.Name" aria-label="readonly input example" readonly name="Semester">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Module" class="col-sm-6 col-form-label">Modul</label>
                        <div class="col-sm6">
                            @Html.DropDownListFor(m => m.Module, (IEnumerable<SelectListItem>)ViewBag.Modules, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12">
                            @Html.CheckBoxFor(m => m.AllCourses)
                            <label for="IsAvailable" class="col-sm-10 col-form-label">Für alle Lehrveranstaltung gleichen Namens</label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-6">
                            <button type="submit" class="btn btn-outline-primary"><i class="fas fa-save"></i> Speichern</button>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary"><i class="fas fa-times"> </i>Abbrechen</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

