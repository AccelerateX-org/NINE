@model IEnumerable<MyStik.TimeTable.Data.PackageOption>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    var name = string.IsNullOrEmpty(item.Name) ? "(Standard)" : item.Name;
    <tr>
        <td>
            <a href="@Url.Action("Index", "CurriculumRequirement", new {id = item.Id})">@name</a>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
            @Html.ActionLink("Details", "Details", new {id = item.Id}) |
            @Html.ActionLink("Delete", "Delete", new {id = item.Id})
        </td>
    </tr>
}

</table>
