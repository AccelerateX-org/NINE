@model MyStik.TimeTable.Web.Models.AlumniViewModel
@{
    ViewBag.Title = "Alumni";
}




<div class="container-fluid">
    <div class="row" style="margin-top: 20px">
        <div class="col-md-12">
            <div class="alert alert-info">
                <h4><i class="fa fa-info-circle"></i> Hinweis:</h4>
                <p>Mit der Bestätigung willigen Sie in die Nutzungsbedingungen von NINE ein.</p>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4><i class="fa fa-graduation-cap"></i> Einwilligung als Alumni des Studiengangs @Model.Student.Curriculum.Name</h4>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Accept", null, FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                        @Html.HiddenFor(m => m.Student.Id)
                    <fieldset>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Studiengang</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">@Model.Student.Curriculum.Name (@Model.Student.Curriculum.ShortName)</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Abschlusssemester</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">@Model.Student.LastSemester.Name</p>
                            </div>
                        </div>
                        <div class="alert alert-info">
                            <p><strong>Wichtige Hinweise zur Speicherung Ihre Daten:</strong></p>
                            <p>Alle Informationen zu Ihren Eintragungen, Abschlussarbeit, Studiengängen 
                                sowie der Alumni-Eintrag sind ausschließlich über Ihr Benutzerkonto mit einander gekoppelt.</p>
                            <p>Wenn Sie Ihr Benutzerkonto löschen, dann bleiben die zugehörigen einzelnen Daten zwar bestehen, 
                                die Zusammenhänge können aber nicht mehr mit Ihrer Person in Verbindung gebracht werden.</p>
                        </div>

                        <button type="submit" class="col-sm-offset-4 btn btn-default"><i class="fa fa-check text-success"></i> Ja, ich möchte Alumni werden</button>
                        <a href="@Url.Action("Curricula", "Subscription")" class="btn btn-default"><i class="fa fa-trash-o text-danger"></i> Nein, ich möchte kein Alumni werden</a>
                        <a href="@Url.Action("Curricula", "Subscription")" class="btn btn-default"><i class="fa fa-times"></i> Abbrechen</a>
                    </fieldset>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
