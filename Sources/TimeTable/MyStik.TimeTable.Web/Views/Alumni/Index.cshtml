@model ICollection<MyStik.TimeTable.Web.Models.AlumniViewModel>
@{
    ViewBag.Title = "Alumni";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Alumni</h4>
                </div>
                <div class="panel-body">
                    <table class="table table-condensed">
                        <thead>
                        <tr>
                            <th>Studiengang</th>
                            <th>Semester</th>
                            <th>Name</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in @Model)
                        {
                            <tr>
                                <td>@item.Alumni.Curriculum.Name</td>
                                <td>@item.Alumni.Semester.Name</td>
                                @if (item.User != null)
                                {
                                    <td>@item.User.FullName</td>
                                }
                                else
                                {
                                    <td>Kein Benutzerkonto vorhanden</td>
                                }
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


