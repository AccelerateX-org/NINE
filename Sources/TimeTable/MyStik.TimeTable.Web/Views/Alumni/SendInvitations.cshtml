@model MyStik.TimeTable.Web.Models.OccurrenceMailingModel

@{
    ViewBag.Title = "Versand der Einladungen";
}
@section styles
{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Assets/libs/cleditor/jquery.cleditor.css")" />

}


<div class="panel panel-default">
    <div class="panel-body bg-fillter-lecturer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Studierende - Versand der Einladungen</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        @using (Html.BeginForm("SendInvitations", null, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true)
            <fieldset>
                @Html.ValidationSummary()
                <div class="form-group">
                    @Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Body, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <p>Zusätzlicher Text. Persönliche Anrede wird automatisch eingefügt.</p>
                        @Html.TextAreaFor(m => m.Body, new {@class = "form-control", placeholder = "Mail", rows = "10"})
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Allgemeiner Hinweis als Fußnote bei neuen Benutzerkonten</label>
                    <div class="col-md-10">
                        <p>Es wurde ein neues Benutzerkonto angelegt. Der Benutzername ist die E-Mail Adresse, an die diese E-Mail gesendet wurde.</p>
                        <p>Sie müssen <i>hier</i> noch Ihr Passwort festlegen.</p>
                        <p>Das Passwort muss eine Länge von mindestens 8 Zeichen besitzen, Klein- und Großbuchstaben, Ziffern sowie Sonderzeichen enthalten, z.B. Pas12345?.</p>
                        <p>Alternativ können Sie die Funktion <i>Passwort vergessen</i> verwenden, um ein die Eingabe eines neuen Passworts anzufordern.</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Anhänge</label>
                    <div class="col-md-10">
                        <div>
                            <input type="file" name="Attachments" id="Attachment1" />
                        </div>
                        <div>
                            <input type="file" name="Attachments" id="Attachment2" />
                        </div>
                        <div>
                            <input type="file" name="Attachments" id="Attachment3" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Senden" class="btn btn-default" />
                    </div>
                </div>
            </fieldset>
        }
        
    </div>
</div>

@section scripts
{
<script type="text/javascript" src="@Url.Content("~/Assets/libs/cleditor/jquery.cleditor.min.js")" type="text/javascript"></script>

<script>
        jQuery(document).ready(function() {
            $("#Body").cleditor();
        });
</script>
}