@model MyStik.TimeTable.Data.CurriculumModule
@{
    ViewBag.Title = "Modulbeschreibung";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                Modulbeschreibung 
            </div>
            <ul class="nav bg-light text-dark">
                <li class="nav-item">
                    <a class="nav-link text-center disabled" href="@Url.Action("Admin", new {id=Model.Id})"><i class="fas fa-cogs fa-fw"></i><br />Verwaltung</a>
                </li>
                
                @foreach (var sem in ViewBag.SemesterList)
                {
                    <li class="nav-item">
                        <a class="nav-link text-center" href="@Url.Action("Courses", new {moduleId =Model.Id, semId=sem.Id})"><i class="fas fa-microphone fa-fw"></i><br />Lehrangebot @sem.Name</a>
                    </li>
                }
            </ul>

            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <h5>Hinweis:</h5>
                    <p>Der Inhalt auf dieser Seite sollte der Modulbeschreibung aus dem Studienplan entsprechen. Aktuell werden diese Daten den Studierenden nicht angezeigt.</p>
                </div>
                <form>
                    <div class="form-group row">
                        <label for="ModuleId" class="col-sm-2 col-form-label">Nummer / ID</label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" id="ModuleId" value="@Model.ModuleId">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Name" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" id="Name" value="@Model.Name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="ShortName" class="col-sm-2 col-form-label">Stundenplankürzel</label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" id="ShortName" value="@Model.ShortName">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">Lehrformat(e)</label>
                        <div class="col-sm-10">
                            @foreach (var c in Model.ModuleCourses)
                            {
                                <input type="text" readonly class="form-control-plaintext" value="@c.Name">
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
