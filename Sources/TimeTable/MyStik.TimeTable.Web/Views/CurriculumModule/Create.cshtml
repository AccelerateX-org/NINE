@model MyStik.TimeTable.Web.Models.CurriculumModuleCreateModel
@{
    ViewBag.Title = "Neues Modul";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4>Neues Modul anlegen</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm(null, null, FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.catalogId)
                    <div class="row">
                        <label for="Tag" class="col-sm-2 col-form-label">Tag (muss innerhalb des Katalogs eindeutig sein)</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Tag, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <label for="Name" class="col-sm-2 col-form-label">Bezeichnung <img src="~/Assets/img/flags/de.png" /></label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <label for="Name" class="col-sm-2 col-form-label">Bezeichnung (englisch) <img src="~/Assets/img/flags/gb.png" /></label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.NameEn, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <label for="Prequisites" class="col-sm-2 col-form-label">Voraussetzungen</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m => m.Prequisites, new { @class = "form-control", rows = 5 })
                        </div>
                    </div>
                    <div class="row">
                        <label for="Applicableness" class="col-sm-2 col-form-label">Anwendbarkeit</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m => m.Applicableness, new { @class = "form-control", rows = 5 })
                        </div>
                    </div>
                    <div class="row">
                        <label for="TeachingFormatId" class="col-sm-2 col-form-label">Lehrform</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(model => model.TeachingFormatId, (IEnumerable<SelectListItem>)ViewBag.TeachingFormats, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <label for="SWS" class="col-sm-2 col-form-label">SWS</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.SWS, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <label for="ExamFormatId" class="col-sm-2 col-form-label">Prüfungsform</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(model => model.ExamFormatId, (IEnumerable<SelectListItem>)ViewBag.ExamFormats, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-outline-primary"><i class="bi-save"></i> Anlegen</button>
                            <a href="@Url.Action("Details", "Catalogs", new{id=Model.catalogId})" class="btn btn-outline-secondary">Abbrechen</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
