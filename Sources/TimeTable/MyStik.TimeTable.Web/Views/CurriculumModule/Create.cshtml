@model MyStik.TimeTable.Web.Models.CurriculumModuleCreateModel
@{
    ViewBag.Title = "Neues Modul";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                Neues Modul anlegen
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <h5>Hinweis:</h5>
                    <p>Wann immer möglich, sollten hier die Daten entsprechend der Modulbeschreibungen aus dem Modulhandbuch eingetragen werden. Aktuell werden diese Daten den Studierenden nicht angezeigt.</p>
                </div>
                @using (Html.BeginForm(null, null, FormMethod.Post))
                {
                    <div class="form-group row">
                        <label for="ShortName" class="col-sm-2 col-form-label">Nummer / ID</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.ModuleId, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Name" class="col-sm-2 col-form-label">Bezeichnung</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="ShortName" class="col-sm-2 col-form-label">Stundenplankürzel</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.ShortName, new { @class = "form-control" })
                        </div>
                    </div>
                    <fieldset class="form-group">
                        <div class="row">
                            <legend class="col-form-label col-sm-2 pt-0">Primäre Lehrform</legend>
                            <div class="col-sm-10">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="LectureType" id="gridRadios1" value="1" checked>
                                    <label class="form-check-label" for="gridRadios1">
                                        Seminaristischer Unterricht
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="LectureType" id="gridRadios2" value="2">
                                    <label class="form-check-label" for="gridRadios2">
                                        Seminar
                                    </label>
                                </div>
                                <div class="form-check disabled">
                                    <input class="form-check-input" type="radio" name="LectureType" id="gridRadios3" value="3">
                                    <label class="form-check-label" for="gridRadios3">
                                        Vorlesung
                                    </label>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <div class="form-group row">
                        <div class="col-sm-2">Weitere Lehrformen</div>
                        <div class="col-sm-10">
                            <div class="form-check">
                                @Html.CheckBoxFor(item => item.HasPractice, new { @class = "form-check-input" })
                                <label class="form-check-label" for="HasPractice">
                                    Übung
                                </label>
                            </div>
                            <div class="form-check">
                                @Html.CheckBoxFor(item => item.HasTutorium, new { @class = "form-check-input" })
                                <label class="form-check-label" for="HasTutorium">
                                    Tutorium
                                </label>
                            </div>
                            <div class="form-check">
                                @Html.CheckBoxFor(item => item.HasLaboratory, new { @class = "form-check-input" })
                                <label class="form-check-label" for="HasLaboratory">
                                    Laborpraktikum
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Anlegen</button>
                            <a href="@Url.Action("Index")" class="btn btn-default">Abbrechen</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
