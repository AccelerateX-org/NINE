@model MyStik.TimeTable.Data.CurriculumModule
@{
    ViewBag.Title = "Modulverantwortliche";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4>Modulverantwortliche</h4>
                <p>Modulverantwortliche können nur das jeweilige Modul administrieren. Katalogverantwortliche können zusätzlich auch Modulverantwortliche sein. Keine Veränderung in Bezug auf Rechte. Verwendung rein nachrichtlich gedacht.</p>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-12">
                        <div id="DozTable">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Fakultät</th>
                                    <th>Name</th>
                                    <th></th>
                                </tr>
                                <tr>
                                    <th>
                                    </th>
                                    <th>
                                        <input type="text" class="form-control" id="DozId">
                                    </th>
                                    <th>
                                    </th>
                                </tr>
                                </thead>
                                <tbody id="dozList">
                                @foreach (var doz in Model.ModuleResponsibilities)
                                {
                                    <tr id="@doz.Member.Id">
                                        <td>@doz.Member.FullName</td>
                                        <td>
                                            <button class="btn btn-danger btn-sm" onclick="deleteRow('@doz.Member.Id')">
                                                <i class="bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="btn-group">
                        <a href="javascript:save()" class="btn btn-outline-primary"><i class="bi-save"></i> Änderungen übernehmen</a>
                        <a href="@Url.Action("Details", "ModuleDescription" , new { id = Model.Id })" class="btn btn-outline-secondary"><i class="bi-x"></i> Abbrechen</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(function() {
            $('#DozId').autocomplete({
                source: function(request, response) {
                    var org = '@Model.Catalog.Organiser.Id';

                    $.ajax({
                        url: '@Url.Action("LecturerList", "Curriculum")',
                        type: 'POST',
                        //dataType: "json",

                        data: {
                            orgId: org,
                            name: request.term
                        },

                        success: function(data, success, xhr) {
                            response($.map(data, function(item) {

                                return {
                                    text: item.id,
                                    label: item.name,
                                    value: item.name
                                };
                            }));

                        },

                        error: function(data) { alert(data); },
                    });

                },
                select: function(event, ui) {

                    $("#dozList").append("<tr id=\""
                        + ui.item.text + "\"><td>"
                        + ui.item.value + "</td><td><button class=\"btn btn-danger btn-sm\" onclick=\"deleteRow('"
                        + ui.item.text + "');\"><i class=\"bi-trash\"></i></button></td></tr>");

                }
            });


        });


        function deleteRow(id) {
            $("#" + id).remove();
        }


        function save() {

            $("#loading").show();

            var dozList = new Array();

            var list = $("#DozTable > table > tbody > tr").get();
            var n = list.length;
            if (n > 0) {
                for (var i = 0; i < n; i++) {
                    dozList[i] = list[i].id;
                }
            }

            $.ajax(
                {
                    type: "POST",
                    url: '@Url.Action("SaveResponsibilities", "CurriculumModule")',
                    data: {
                        moduleId: '@Model.Id',
                        DozIds: dozList
                    },
                    success: function(data, success, xhr) {
                        window.location.replace("@Url.Action("Details", "ModuleDescription", new {id = Model.Id})");
                    }
                });

        }



    </script>
}
