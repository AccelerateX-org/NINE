@model MyStik.TimeTable.Data.Assessment
@{
    ViewBag.Title = "Einwilligung";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h4 class="card-header">
                Einwilligungserklärung für die Teilnahme an der Eignungsprüfung "@Model.Name"
            </h4>
            <div class="card-body">
                @using (Html.BeginForm(null, null, FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <input type="checkbox" required="" name="disc" />
                            <label for="disc" class="col-sm-8 col-form-label">Hiermit bestätige ich, dass ich die hochgeladenen Arbeiten selbstständig erstellt habe.</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <input type="checkbox" required="" name="tac" />
                            <label for="tac" class="col-sm-8 col-form-label">Hiermit willige ich ein, dass meine hier gemachten Informationen während der Eignungsprüfgung von der Fakultät für Design verwendet werden dürfen.</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Ich stimme zu</button>
                            <a href="@Url.Action("Start", "Assessment", new {id = Model.Id})" class="btn btn-default">Abbrechen</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
