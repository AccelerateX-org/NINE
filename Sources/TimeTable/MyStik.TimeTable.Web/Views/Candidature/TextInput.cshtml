@model MyStik.TimeTable.Data.Candidature
@{
    ViewBag.Title = "Anschreiben";
    var maxLength = 1500;
}

@Html.Partial("_Watermark")

<div class="row" style="margin-top: 20px">
    <div class="col-12">
        <div class="card">
            <div class="card-header">Anschreiben für Aufnahmeverfahren @Model.Assessment.Name</div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h5>Hinweuise</h5>
                    <ul>
                        <li>Bitte geben Sie hier keine sensiblen personenbezogene Daten ein, z.B. Adresse, Telefonnummer, Geburtsdatum oder -ort ein.</li>
                        <li>Es können pro Eingabefeld max. @maxLength Zeichen eingegeben werden.</li>
                    </ul>

                </div>
                @using (Html.BeginForm(null, null, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group row">
                        <label for="Name" class="col-sm-2 col-form-label">Kurzbiografie in Stichpunkten</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m => m.Characteristics, new { @class = "form-control", rows = 10, maxlength = maxLength })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Description" class="col-sm-2 col-form-label">Motivationsschreiben</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m => m.Motivation, new { @class = "form-control", rows = 10, maxlength = maxLength })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-outline-primary"><i class="fas fa-save"></i> Speichern</button>
                            <a href="@Url.Action("MyRoom", new {id = Model.Id})" class="btn btn-outline-secondary"><i class="fas fa-times"></i> Abbrechen</a>
                        </div>
                    </div>
                }




            </div>
        </div>
    </div>
</div>
