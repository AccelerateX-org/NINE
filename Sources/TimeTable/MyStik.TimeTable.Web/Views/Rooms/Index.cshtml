@using MyStik.TimeTable.Web.Helpers
@model ICollection<MyStik.TimeTable.Data.ActivityOrganiser>

@{
    ViewBag.Title = "Raumverzeichnis";
}


<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")"><i class="bi bi-grid"></i></a></li>
            <li class="breadcrumb-item active" aria-current="page">Raumverzeichnis</li>
        </ol>
    </nav>

    <div class="col-md-12">
        <div class="card">
            <ul class="list-group">
                @foreach (var org in Model.OrderBy(x => x.ShortName))
                {
                    <a href="@Url.Action("Organiser", new { id=org.Id})" class="list-group-item list-group-item-action">
                        @Html.FacultyLabel(org) @org.Name
                    </a>
                }
            </ul>
        </div>
    </div>
</div>


