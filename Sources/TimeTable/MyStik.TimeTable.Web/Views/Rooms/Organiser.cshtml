@using MyStik.TimeTable.Web.Helpers
@model MyStik.TimeTable.Web.Models.OrganiserViewModel

@{
    ViewBag.Title = "Raumverzeichnis";
}


@section styles
{
    <link href="@Url.Content("~/Assets/libs/datatables/dataTables.min.css")" rel="stylesheet" type="text/css" />

}

@section scripts
{
    <script src="@Url.Content("~/Assets/libs/datatables/dataTables.min.js")" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            var t = $('#tabRooms').DataTable(
                {
                    "paging": false,
                    "columnDefs": [{
                        "searchable": false,
                        "orderable": false,
                        "targets": 0
                    }],
                    "order": [[1, 'asc']]
                }
            );

            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();

        });

    </script>
}


<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")"><i class="bi-grid"></i></a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Rooms")">Raumverzeichnis</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Organiser.ShortName</li>
        </ol>
    </nav>


    <div class="col-md-12">
        <div class="card">
            <table class="table table-sm" id="tabRooms">
                <thead>
                    <tr>
                        <th></th>
                        <th>Nummer</th>
                        <th>Bezeichnung</th>
                        <th>Plätze</th>
                        <th>Beschreibung</th>
                        <th>Zuordnungen</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model.Rooms.OrderBy(x => x.Number))
                    {
                        <tr>
                            <td></td>
                            <td>
                                <a href="@Url.Action("Details", "Room", new {id = room.Id})">
                                    @room.Number
                                </a>
                            </td>
                            <td>@room.Name</td>
                            <td>@room.Capacity</td>
                            <td>@room.Description</td>
                            <td>
                                @foreach (var assign in room.Assignments)
                                {
                                    <div>@Html.FacultyLabel(assign.Organiser) (@assign.InternalNeedConfirmation | @assign.ExternalNeedConfirmation)</div>
                                }
                            </td>
                        </tr>
                    }

                </tbody>
            </table>



