@model MyStik.TimeTable.Web.Models.OrganiserViewModel
@{
    ViewBag.Title = "Events";
}

<h4>Veranstaltungen</h4>

<div class="panel panel-default">
    <div class="panel panel-default">
        <div class="panel-heading">Alle Veranstaltungen</div>
        <div class="panel-body">
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Bezeichnung</th>
                        <th>Beschreibung</th>
                        <th>Sichtbar für</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.Events)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(c.Event.Name + " (" + c.Event.ShortName + ")", "Index", "Event", new { id = c.Event.Id }, null)
                            </td>
                            <td>
                                @c.Event.Description
                            </td>
                            <td>
                                @foreach (var group in c.Event.SemesterGroups)
                                {
                                    if (group.CurriculumGroup != null)
                                    {
                                        var label = group.FullName;
                                        @Html.ActionLink(label, "Group", "Semester", new { id = group.Id }, null)
                                        if (group != c.Event.SemesterGroups.Last())
                                        {
                                            @Html.Raw(", ")
                                        }
                                    }
                                }
                            </td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (ViewBag.UserRight.IsOrgMember)
            {
                <div class="well well-sm">
                    <a href="@Url.Action("CreateEvent", "Event", new { id = Model.Organiser.ShortName })" class="btn btn-default"><i class="fa fa-tag fa-2x text-primary"></i> Veranstaltung anlegen</a>
                    <a href="@Url.Action("CreateSeriesEvent", "Event", new { id = Model.Organiser.ShortName })" class="btn btn-default"><i class="fa fa-tag fa-2x text-primary"></i>Serie anlegen </a>
                </div>
            }
        </div>
    </div>
</div>
