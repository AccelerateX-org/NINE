@model ICollection<MyStik.TimeTable.Data.Room>
@{
    ViewBag.Title = "Rooms";
}

@section styles
{
    <link href="@Url.Content("~/Assets/global/plugins/datatables/datatables.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css")" rel="stylesheet" type="text/css" />
}



<div class="panel panel-default">
    <div class="panel-body bg-fillter-rooms">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Verfügbare Räume für @ViewBag.Organiser.ShortName</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-list"></i> Übersicht 
                    </div>
                    <div class="actions">
                        <i class="fa fa-group"></i> Kann frei belegt werden <i class="fa fa-legal"></i> Belegung nur über die jeweiligen Raum-Admins möglich
                    </div>
                </div>
                <div class="portlet-body">
                    <table id="tabRooms" class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Raumnummer</th>
                                <th>Name</th>
                                <th>Beschreibung / Ausstattung</th>
                                <th>Plätze</th>
                                <th>Belegbar von</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var room in Model)
                            {

                                var assignment = room.Assignments.FirstOrDefault(x => x.Organiser.Id == ViewBag.Organiser.Id);



                                     <tr>
                                    <td>@room.Number</td>
                                    <td>@room.Name</td>
                                    <td>@room.Description</td>
                                    <td>@room.Capacity</td>
                                         <td>
                                             @if (room.Assignments.Any())
                                             {
                                                 foreach (var roomAssignment in room.Assignments.OrderBy(x => x.Organiser.ShortName))
                                                 {
                                                     var color = roomAssignment.Organiser.HtmlColor;
                                                     if (roomAssignment.InternalNeedConfirmation)
                                                     {
                                                         <span class="label" style="background-color: @color; color: white"><i class="fa fa-fw fa-legal"></i> @roomAssignment.Organiser.ShortName</span>
                                                     }
                                                     else
                                                     {
                                                        <span class="label" style="background-color: @color; color: white"><i class="fa fa-fw fa-group"></i> @roomAssignment.Organiser.ShortName</span>
                                                     }
                                                 }
                                             }
                                             else
                                             {
                                                 <div>keine Zuordnung</div>
                                             }
                                         </td>
                                    <td>
                                        <a href="@Url.Action("Calendar", "Room", new {id = room.Id})" class="btn btn-default btn-xs"><i class="fa fa-calendar-o"></i></a>
                                        <a href="@Url.Action("RoomSchedule", "Print", new { id = room.Id })"
                                           onclick="window.open(this.href, 'mywin', 'left=20,top=20,width=1000,height=500,toolbar=0,resizable=1'); return false;"
                                           class="btn btn-default btn-xs"><i class="fa fa-print"></i></a>
                                        @if (ViewBag.UserRight.IsRoomAdmin)
                                        {
                                            <a href="@Url.Action("Edit", "Room", new {id = room.Id})" class="btn btn-default btn-xs"><i class="fa fa-edit"></i></a>
                                            if (assignment != null)
                                            {
                                                if (assignment.InternalNeedConfirmation)
                                                {
                                                    <a href="@Url.Action("EnableRoomAssignment", new {id=assignment.Id})" class="btn btn-danger btn-xs"><i class="fa fa-unlock"></i></a>
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action("DisableRoomAssignment", new {id=assignment.Id})" class="btn btn-default btn-xs"><i class="fa fa-lock"></i></a>
                                                }
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="@Url.Content("~/Assets/global/scripts/datatable.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/global/plugins/datatables/datatables.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js")" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $('#tabRooms').DataTable({
                paging: false
            });
        });
    </script>
}