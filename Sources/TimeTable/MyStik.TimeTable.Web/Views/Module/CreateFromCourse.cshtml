@model MyStik.TimeTable.Web.Models.ModuleCreateViewModel
@{
    ViewBag.Title = "Modul anlegen";
}

<div class="panel panel-default">
    <div class="panel-body bg-fillter-study">
        <div class="row">
            <div class="col-md-12">
                <h1>Modul für @Model.Course.Name anlegen</h1>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4><i class="fa fa-info-circle"></i> Modulbeschreibung</h4>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                    <fieldset>
                        @Html.HiddenFor(m => m.Course.Id)
                        @Html.HiddenFor(m => m.Curriculum.Id)
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Bezeichnung des Moduls" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ShortName, new { @class = "col-md-2 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.ShortName, new { @class = "form-control", placeholder = "Kurzbezeichnung des Moduls" })
                                @Html.ValidationMessageFor(model => model.ShortName)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.CatalogId, new { @class = "col-md-2 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.CatalogId, new { @class = "form-control", placeholder = "Kennung nach Studienplan / SPO" })
                                @Html.ValidationMessageFor(model => model.CatalogId)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Modulverantwortung</label>
                            <div class="col-md-8">
                                <p class="form-control-static">@Model.MV.FullName</p>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                            <div class="col-md-8">
                                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Beschreibung des Kurses", rows = "10" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Ects, new { @class = "col-md-2 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Ects, new { @class = "form-control", placeholder = "URL des Moodle-Kurses" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Sws, new { @class = "col-md-2 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Sws, new { @class = "form-control", placeholder = "URL des Moodle-Kurses" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.UsCredits, new { @class = "col-md-2 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.UsCredits, new { @class = "form-control", placeholder = "URL des Moodle-Kurses" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-8">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Speichern</button>
                            </div>
                        </div>
                    </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


@section styles
{
    <link rel="stylesheet" href="@Url.Content("~/Assets/global/plugins/Jquery-ui/jquery-ui.min.css")" />
    <link href="@Styles.Url("~/Assets/global/plugins/cleditor/jquery.cleditor.css")" rel="stylesheet" type="text/css" />

}

@section scripts
{
    <script src="@Url.Content("~/Assets/global/plugins/cleditor/jquery.cleditor.min.js")" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $("#Description").cleditor();
        });
    </script>
}






