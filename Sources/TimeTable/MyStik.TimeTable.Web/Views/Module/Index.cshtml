@model ICollection<MyStik.TimeTable.Web.Models.ModuleCatalogViewModel>
@{
    ViewBag.Title = Resources.ModuleCatalogString;
}

@section styles
{
    <link href="@Url.Content("~/Assets/global/plugins/datatables/datatables.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css")" rel="stylesheet" type="text/css" />
}


<div class="panel panel-default">
    <div class="panel-body bg-fillter-study">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Resources.GlobalCatalogString <small>@Resources.StudyProcessComment</small></h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-calendar"></i>@Resources.AllModules
                    </div>
                    <div class="actions">
                    </div>
                </div>
                <div class="portlet-body">
                    <table id="tabModules" class="table table-condensed">
                        <thead>
                            <tr>
                                <th>@Resources.Name</th>
                                <th>@Resources.MVString</th>
                                <th>@Resources.ECTSString</th>
                                <th>@Resources.LVsString</th>
                                <th>@Resources.AccreditationsString</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var curr in Model)
                            {
                                <tr>
                                    <td><a href="@Url.Action("Details", new {id=curr.Module.Id})">@curr.Module.Name</a></td>
                                    @if (curr.Module.MV != null)
                                    {
                                        <td>@curr.Module.MV.ShortName</td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    <td>@curr.Module.ECTS</td>
                                    <td>
                                        @foreach (var lv in curr.Module.ModuleCourses)
                                        {
                                            <div>@lv.CourseType (@lv.ExternalId)</div>
                                            foreach (var course in lv.Courses)
                                            {
                                                foreach (var semesterGroup in course.SemesterGroups)
                                                {
                                                    <div>@semesterGroup.Semester.Name - @semesterGroup.FullName</div>

                                                }
                                            }
                                        }
                                    </td>
                                    @if (curr.Module.Accreditations.Any())
                                    {
                                        <td>
                                            @foreach (var accreditation in curr.Module.Accreditations)
                                            {
                                                <div>@accreditation.Criteria.Curriculum.ShortName - @accreditation.Criteria.Name</div>
                                            }
                                        </td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts
{
    <script src="@Url.Content("~/Assets/global/scripts/datatable.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/global/plugins/datatables/datatables.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js")" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $('#tabModules').DataTable();
        });
    </script>
}


