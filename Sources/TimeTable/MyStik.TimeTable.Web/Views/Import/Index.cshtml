@model MyStik.TimeTable.Web.Models.OrganiserViewModel
@{
    ViewBag.Title = "Import";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4>Import von Stundenplandaten für @Model.Organiser.ShortName</h4>
            </div>
            <div class="list-group">
                <div class="list-group-item">
                    <h5 class="mb-1">Untis</h5>
                    <p class="mb-3">6 Textdateien aus Untis plus 3 individuell an die jeweilige Situation angepasste Konfigurationsdateien.</p>
                    <form class="form-inline" action="@Url.Action("Index", "Untis")">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" required=""> Mir ist bewusst, dass das eine wichtige Aufgabe ist!
                            </label>
                        </div>
                        <button type="submit" class="btn btn-outline-primary"><i class="bi-upload"></i> Import starten</button>
                    </form>
                </div>
                <div class="list-group-item">
                    <h5 class="mb-1">Allgemeine Schnittstelle</h5>
                    <p class="mb-3">Eine Datei im JSON-Format.</p>
                    <form class="form-inline" action="@Url.Action("Select")">
                        <input type="text" name="format" value="JSON" hidden />
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" required=""> Mir ist bewusst, dass das eine wichtige Aufgabe ist!
                            </label>
                        </div>
                        <button type="submit" class="btn btn-outline-primary"><i class="bi-upload"></i> Import starten</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
