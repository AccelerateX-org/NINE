@model MyStik.TimeTable.Web.Models.CurriculumModuleCreateModel
@{
    ViewBag.Title = "CreateModule";
    }

@section styles
{
    <link href="@Styles.Url("~/Assets/global/plugins/cleditor/jquery.cleditor.css")" rel="stylesheet" type="text/css" />
}

<div class="panel panel-default">
    <div class="panel-body bg-fillter-study">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Neues Modul erstellen</h1>
                </div>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group">
            @Html.LabelFor(m => m.ModuleId, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-2">
                @Html.TextBoxFor(m => m.ModuleId, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ShortName, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-2">
                @Html.TextBoxFor(m => m.ShortName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.MV, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.MV, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Lecturer, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-6">
                @Html.TextAreaFor(m => m.Lecturer, new { @class = "form-control datepicker", rows = "5" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Language, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-6">
                @Html.TextAreaFor(m => m.Language, new { @class = "form-control datepicker", rows = "2" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Groups, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-6">
                @Html.TextAreaFor(m => m.Groups, new { @class = "form-control datepicker", rows = "5" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.SWS, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-6">
                @Html.TextAreaFor(m => m.SWS, new { @class = "form-control datepicker", rows = "2" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Work, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-6">
                @Html.TextAreaFor(m => m.Work, new { @class = "form-control datepicker", rows = "3" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ECTS, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-2">
                @Html.TextBoxFor(m => m.ECTS, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Requirements, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-6">
                @Html.TextAreaFor(m => m.Requirements, new { @class = "form-control datepicker", rows = "5" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Skills, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-6">
                @Html.TextAreaFor(m => m.Skills, new { @class = "form-control datepicker", rows = "10" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-6">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control datepicker", rows = "10" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Leistung, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.Leistung, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Books, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-6">
                @Html.TextAreaFor(m => m.Books, new { @class = "form-control datepicker", rows = "10" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <input type="submit" value="Anlegen" class="btn btn-primary" />
                <input type="submit" value="Abrechen" class="btn btn-danger" />
            </div>
        </div>
    </fieldset>
}

@section scripts
{
    <script src="@Url.Content("~/Assets/global/plugins/cleditor/jquery.cleditor.min.js")" type="text/javascript"></script>



    <script>
        jQuery(document).ready(function () {
            $("#Lecturer").cleditor();
        });
    </script>

    <script>
        jQuery(document).ready(function () {
            $("#Language").cleditor();
        });
    </script>

    <script>
        jQuery(document).ready(function () {
            $("#Groups").cleditor();
        });
    </script>

    <script>
        jQuery(document).ready(function () {
            $("#SWS").cleditor();
        });
    </script>


    <script>
        jQuery(document).ready(function () {
            $("#Requirements").cleditor();
        });
    </script>

    <script>
        jQuery(document).ready(function () {
            $("#Skills").cleditor();
        });
    </script>

    <script>
        jQuery(document).ready(function () {
            $("#Description").cleditor();
        });
    </script>

    <script>
        jQuery(document).ready(function () {
            $("#Leistung").cleditor();
        });
    </script>

    <script>
        jQuery(document).ready(function () {
            $("#Books").cleditor();
        });
    </script>

}