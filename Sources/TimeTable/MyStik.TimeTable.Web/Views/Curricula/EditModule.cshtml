@model MyStik.TimeTable.Web.Models.CurriculumModuleCreateModel
@{
    ViewBag.Title = "EditModule";
}


@section styles
{
    <link href="@Styles.Url("~/Assets/global/plugins/cleditor/jquery.cleditor.css")" rel="stylesheet" type="text/css" />

}
<div class="panel panel-default">
    <div class="panel-body bg-fillter-hm">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Modul bearbeiten</h1>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="row">

        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.ValidationSummary(true)
            <fieldset>
                @Html.ValidationSummary()

                <div class="form-group">
                    @Html.LabelFor(model => model.ModuleId, new { @class = "col-sm-2 control-label" })
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => model.ModuleId, new { @class = "form-control" })
                    </div>
                </div>   

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    </div>
                </div>   

                <div class="form-group">
                    @Html.LabelFor(model => model.ShortName, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.ShortName, new { @class = "form-control" })
                    </div>
                </div>    

                <div class="form-group">
                    @Html.LabelFor(model => model.MV, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.MV, new { @class = "form-control" })
                    </div>
                </div>  

                <div class="form-group">
                    @Html.LabelFor(model => model.Lecturer, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-6">
                        @Html.TextAreaFor(model => model.Lecturer, new { @class = "form-control datepicker", rows = "5" })
                    </div>
                </div>              

                <div class="form-group">
                    @Html.LabelFor(model => model.Language, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-6">
                        @Html.TextAreaFor(model => model.Language, new { @class = "form-control datepicker", rows = "2" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Groups, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-6">
                        @Html.TextAreaFor(model => model.Groups, new { @class = "form-control datepicker", rows = "5" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SWS, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-6">
                        @Html.TextAreaFor(model => model.SWS, new { @class = "form-control datepicker", rows = "2" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Work, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-6">
                        @Html.TextAreaFor(model => model.Work, new { @class = "form-control datepicker", rows = "3" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ECTS, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.ECTS, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Requirements, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-6">
                        @Html.TextAreaFor(model => model.Requirements, new { @class = "form-control datepicker", rows = "5" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Skills, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-6">
                        @Html.TextAreaFor(model => model.Skills, new { @class = "form-control datepicker", rows = "10" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-6">
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control datepicker", rows = "10" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Leistung, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Leistung, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Books, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-6">
                        @Html.TextAreaFor(model => model.Books, new { @class = "form-control datepicker", rows = "10" })
                    </div>
                </div>
                 
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <input type="submit" value="Speichern" class="btn btn-primary" />
                        <input type="submit" value="Abrechen" class="btn btn-danger" />
                    </div>
                </div>
              
            </fieldset>
        }
    </div>
</div>

@section scripts
{
    <script src="@Url.Content("~/Assets/global/plugins/cleditor/jquery.cleditor.min.js")" type="text/javascript"></script>

    

    <script>
        jQuery(document).ready(function () {
            $("#Lecturer").cleditor();
        });
    </script>

    <script>
        jQuery(document).ready(function () {
            $("#Language").cleditor();
        });
    </script>

    <script>
        jQuery(document).ready(function () {
            $("#Groups").cleditor();
        });
    </script>

    <script>
        jQuery(document).ready(function () {
            $("#SWS").cleditor();
        });
    </script>


    <script>
        jQuery(document).ready(function () {
            $("#Requirements").cleditor();
        });
    </script>

    <script>
        jQuery(document).ready(function () {
            $("#Skills").cleditor();
        });
    </script>

    <script>
        jQuery(document).ready(function () {
            $("#Description").cleditor();
        });
    </script>

    <script>
        jQuery(document).ready(function () {
            $("#Leistung").cleditor();
        });
    </script>

    <script>
        jQuery(document).ready(function () {
            $("#Books").cleditor();
        });
    </script>

}