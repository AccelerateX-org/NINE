@using MyStik.TimeTable.Data
@using RazorEngine.Text
@model MyStik.TimeTable.Web.Models.SubscriptionEmail

Content-Type: text/html; charset=utf-8

<!DOCTYPE html>
<html>
<head>
    <meta content="de" http-equiv="Content-Language">
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
    <title></title>
    <style type="text/css">
        .mail-warning-style {
            font-family: Arial, Helvetica, sans-serif;
            color: #0000FF;
        }

        .mail-text-style {
            font-family: Arial, Helvetica, sans-serif;
        }

        .mail-stationary-style {
            font-family: Arial, Helvetica, sans-serif;
            font-size: xx-small;
        }
    </style>
</head>
<body>
    <div class="mail-text-style">

        <p>Sehr geehrte(r) @Model.Student.FullName,</p>

        @if (Model.Subscription != null)
        {
            if (Model.Subscription.OnWaitingList)
            {
                <p>für die Lehrveranstaltung "@Model.Course.Name (@Model.Course.ShortName)" wurden Sie von @Model.Actor.FullName auf die Warteliste gesetzt.</p>
            }
            else
            {
                <p>für die Lehrveranstaltung "@Model.Course.Name (@Model.Course.ShortName)" wurden Sie von @Model.Actor.FullName auf die Teilnehmerliste gesetzt.</p>
            }
        }
        else
        {
                <p>für die Lehrveranstaltung "@Model.Course.Name (@Model.Course.ShortName)" wurden Sie von  @Model.Actor.FullName ausgetragen.</p>
        }

        <hr />
    </div>
<div class="mail-stationary-style">Dies ist eine systemseitig erstellte E-Mail. Bitte antworten Sie nicht auf diese Nachricht.</div>
<div class="mail-stationary-style">Missbrauch melden: Sollten Sie diese E-Mail fälschlicherweise erhalten haben, melden Sie dies bitte an den <a href="mailto:support-nine@hm.edu ">NINE Support</a>.</div>
</body>
</html>
