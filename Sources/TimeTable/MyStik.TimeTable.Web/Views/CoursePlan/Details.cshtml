        .container {
            width: 200px;
            margin: 0 auto;
            text-align: center;
        }

        .gauge {
            width: 200px;
            height: 200px;
        }



        /*----- Tab Links -----*/
        /* Clearfix */
        .tab-links:after {
            display: block;
            clear: both;
            content: '';
        }

        .tab-links li {
            margin: 0 5px;
            float: left;
            list-style: none;
        }

        .tab-links a {
            padding: 9px 15px;
            display: inline-block;
            border-radius: 3px 3px 0 0;
            background: #7FB5DA;
            font-size: 16px;
            font-weight: 600;
            color: #4c4c4c;
            transition: all linear 0.15s;
        }

            .tab-links a:hover {
                background: #a7cce5;
                text-decoration: none;
            }

        li.active a, li.active a:hover {
            background: #fff;
            color: #4c4c4c;
        }

        /*----- Content of Tabs -----*/
        .tab-content {
            padding: 15px;
            border-radius: 3px;
            box-shadow: -1px 1px 1px rgba(0,0,0,0.15);
            background: #fff;
        }

        .tab {
            display: none;
        }

            .tab.active {
                display: block;
            }
    </style>
}


<h2>View</h2>

@{
    var DataUsedSem1 = 34;
    var DataTotalSem1 = 30;
    var DataThemeSem1 = "DarkGreen-LightGreen";
    var DataTextSem1 = DataUsedSem1; 
    
    
    if (DataUsedSem1 > DataTotalSem1 + 5)
    {
        DataUsedSem1 = DataTotalSem1;
        DataThemeSem1 = "DarkRed-LightRed";
    }
    else if (DataUsedSem1 < DataTotalSem1 - 6)
    {
        DataThemeSem1 = "DarkRed-LightRed";
    }
    else if (DataUsedSem1 < DataTotalSem1 && DataUsedSem1 >= DataTotalSem1 -6)
    {
        DataThemeSem1 = "DarkGold-LightGold";
    }
    else if (DataUsedSem1 > DataTotalSem1 && DataUsedSem1 <= DataTotalSem1 + 5)
    {
        DataUsedSem1 = DataTotalSem1;
        DataThemeSem1 = "DarkGold-LightGold";
    }
    else
    {
        DataThemeSem1 = "DarkGreen-LightGreen";
    }
}


