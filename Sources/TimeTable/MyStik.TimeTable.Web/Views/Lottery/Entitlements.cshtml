@using MyStik.TimeTable.Web.Helpers
@model MyStik.TimeTable.Web.Models.LotteryLotPotModel
@{
    ViewBag.Title = "Platzverlosung für " + Model.Lottery.Name;
}

<div class="row">
    <div class="col-md-12">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Faculty", "University", new {id = Model.Lottery.Organiser.Id})">@Model.Lottery.Organiser.ShortName</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Lottery", new {id = Model.Lottery.Semester.Id})">Wahlverfahren</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Details", "Lottery", new {id = Model.Lottery.Id})">@Model.Lottery.Name</a></li>
                <li class="breadcrumb-item active" aria-current="page">Zulassungen</li>
            </ol>
        </nav>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">
                    Wahlverfahren "@Model.Lottery.Name" - Zulassungen
                </h4>
            </div>
            <div class="card-body">
                Hier aufgeführte Studierende können am Wahlverfahren mit individuellen Einstellungen (Zeitraum, Umfang Wahlmöglichkeiten) teilnehmen.
            </div>
            <div class="list-group">
                <div class="list-group-item">
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("Details", new {id = Model.Lottery.Id})" class="btn btn-outline-primary"><i class="bi bi-chevron-left"></i> zurück</a>
                        <a href="@Url.Action("SelectStudents", new {id = Model.Lottery.Id})" class="btn btn-outline-primary"><i class="bi bi-basket"></i> Studierende hinzufügen / entfernen</a>
                    </div>
                </div>
            </div>
            <div id="CourseTable">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Nachname</th>
                            <th>Vorname</th>
                            <th>Studiengang</th>
                            <th>Kohorte(n)</th>
                            <th>Studienbeginn</th>
                            <th>Status</th>
                            <th>E-Mail</th>
                        </tr>
                    </thead>
                    <tbody id="activityTable">
                        @foreach (var user in Model.Entitlements)
                        {
                            <tr id="@user.Student.Id">
                                @if (user.Student != null && user.Student.Curriculum != null)
                                {
                                    <td>@Html.FacultyLabel(user.Student.Curriculum.Organiser)</td>
                                }
                                else
                                {
                                    <td></td>

                                }
                                <td>
                                    @user.User.LastName
                                </td>
                                <td>@user.User.FirstName</td>
                                @if (user.Student != null)
                                {
                                    if (user.Student.Curriculum != null && user.Student.FirstSemester != null)
                                    {
                                        <td>@user.Student.Curriculum.ShortName</td>
                                        <td>
                                            @if (user.Student.LabelSet != null)
                                            {
                                                foreach (var label in user.Student.LabelSet.ItemLabels)
                                                {
                                                    <div>@label.Name</div>
                                                }
                                            }
                                        </td>
                                        <td>@user.Student.FirstSemester.Name</td>
                                        if (user.Student.LastSemester != null)
                                        {
                                            <td>@user.Student.LastSemester.Name</td>
                                        }
                                        else
                                        {
                                            <td>aktiv</td>
                                        }
                                    }
                                    else
                                    {
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    }
                                }
                                else
                                {
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                }
                                <td>@user.User.Email</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts {

    <script>

    </script>
}



