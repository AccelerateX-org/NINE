@model MyStik.TimeTable.Web.Models.LotteryTestModel
@{
    ViewBag.Title = "InitTest";
}

<div class="panel panel-default">
    <div class="panel-body bg-fillter-study">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Wahlverfahren "@Model.Lottery.Name" - Einstellungen Testlauf</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <h4 class="panel-heading">
                    <i class="fa fa-cog"></i> Angaben für alle Lehrveranstaltungen ändern
                </h4>
                <div class="panel-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }
))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(m => m.Lottery.Id)
                        <div class="form-group">
                            @Html.LabelFor(m => m.Capacity, new { @class = "col-md-6 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.Capacity, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-8">
                                @Html.CheckBoxFor(item => item.IsCoterie)
                                @Html.LabelFor(item => item.IsCoterie, new { @class = "control-label" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-8">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Speichern</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



