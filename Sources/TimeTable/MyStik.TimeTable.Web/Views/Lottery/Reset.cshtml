@model MyStik.TimeTable.Data.Lottery
@{
    ViewBag.Title = "Zurücksetzen";
}


<div class="panel panel-default">
    <div class="panel-body bg-fillter-study">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Wahlverfahren "@Model.Name"</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-danger">
                <h4><i class="fa fa-bomb"></i> Zurücksetzen des Wahlverfahrens</h4>
                <p>Alle Informationen werden unwiederbringlich verändert. Alle Einträge werden wieder auf die Warteliste gesetzt. Die Aktion kann nicht rückgängig gemacht werden.</p>
                <a class="btn btn-danger" href="@Url.Action("ResetConfirmed", new {id = Model.Id})"> Ja, das Wahlverfahren soll zurückgesetzt werden</a>
                <a class="btn btn-default" href="@Url.Action("Details", new {id = Model.Id})"> Abbrechen und zurück</a>
            </div>
        </div>
    </div>
</div>
