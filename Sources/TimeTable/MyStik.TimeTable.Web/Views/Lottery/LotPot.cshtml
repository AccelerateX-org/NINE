@using MyStik.TimeTable.Web.Services
@model MyStik.TimeTable.Data.Course
@{
    ViewBag.Title = "Lostopf";
    var userService = new UserInfoService();
    var i = 0;
}

<div class="panel panel-default">
    <div class="panel-body bg-fillter-lecturer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Losttopf von @Model.Name (@Model.ShortName)</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet light bordered">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-random"></i>
                                <span class="caption-subject bold uppercase"> Eintragungen</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div id="CourseTable">
                                <table class="table table-condensed">
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Runde</th>
                                    </tr>
                                    </thead>
                                    <tbody id="activityTable">
                                    @foreach (var subscription in Model.Occurrence.Subscriptions.OrderByDescending(x => x.LapCount))
                                    {
                                        var userName = userService.GetUserName(subscription.UserId);
                                        i++;
                                        <tr>
                                            <td>@i</td>
                                            <td>@userName</td>
                                            <td>@subscription.LapCount</td>
                                        </tr>
                                    }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
