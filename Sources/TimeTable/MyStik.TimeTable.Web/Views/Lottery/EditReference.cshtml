@model MyStik.TimeTable.Web.Models.CourseReferenceModel
@{
    ViewBag.Title = "Bewerbungsschreiben";
}

<div class="container-fluid">
    <div class="row" style="margin-top: 20px">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Bewerbungsschreiben für @Model.Course.Name</h4>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }
                        ))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(m => m.Lottery.Id)
                        @Html.HiddenFor(m => m.Subscription.Id)
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.TextAreaFor(m => m.Message, new { @class = "form-control", rows = "10" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="submit" value="Speichern" class="btn btn-primary btn-block" />
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</div>


