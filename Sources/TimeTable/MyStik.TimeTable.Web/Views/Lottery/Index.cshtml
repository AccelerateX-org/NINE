@using MyStik.TimeTable.Web.Helpers
@using MyStik.TimeTable.Web.Models
@model ICollection<MyStik.TimeTable.Data.Lottery>
@{
    ViewBag.Title = "Platzverlosungen";
}

<div class="panel panel-default">
    <div class="panel-body bg-fillter-lecturer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Platzverlosungen</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            @if ((ViewBag.UserRight.IsOrgMember && ViewBag.UserRight.User.MemberState == MemberState.Staff) || User.IsInRole("SysAdmin"))
            {
                <div class="row">
                    <div class="col-md-12">

                        <div class="panel panel-default">
                            <ul class="nav">
                                <li>
                                    <a href="@Url.Action("Create")"><i class="fa fa-plus"></i> Verlosung anlegen</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

            }


        </div>

        <div class="col-md-10">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>JobID</th>
                                        <th>Beschreibung</th>
                                        <th>Zeitraum</th>
                                        <th># Kurse</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var lottery in Model)
                                    {
                                        <tr>
                                            <td>@lottery.Name</td>
                                            <td>@lottery.JobId</td>
                                            <td>@lottery.Description</td>
                                            <td>@lottery.FirstDrawing.ToShortDateString() bis @lottery.LastDrawing.ToShortDateString() um @lottery.DrawingTime</td>
                                            <td>@lottery.Occurrences.Count</td>
                                            @if (User.IsInRole("SysAdmin"))
                                            {
                                                <td>
                                                    <a href="@Url.Action("Edit", new {id = lottery.Id})" class="btn btn-default btn-xs">Edit</a>
                                                    <a href="@Url.Action("Details", new {id = lottery.Id})" class="btn btn-default btn-xs">Details</a>
                                                    <a href="@Url.Action("State", new {id = lottery.Id})" class="btn btn-default btn-xs">Status</a>
                                                    <a href="@Url.Action("List", new {id = lottery.Id})" class="btn btn-default btn-xs">Liste</a>
                                                    <a href="@Url.Action("Subscribers", new {id = lottery.Id})" class="btn btn-default btn-xs">Eintragungen</a>
                                                    <a href="@Url.Action("Drawing", new {id = lottery.Id})" class="btn btn-default btn-xs">Verlosung</a>
                                                    <a href="@Url.Action("Delete", new {id = lottery.Id})" class="btn btn-default btn-xs">Löschen</a>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <a href="@Url.Action("State", new {id = lottery.Id})" class="btn btn-default btn-xs">Status</a>
                                                    <a href="@Url.Action("Subscribers", new {id = lottery.Id})" class="btn btn-default btn-xs">Eintragungen</a>
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>

    </script>
}


