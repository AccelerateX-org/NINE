@model MyStik.TimeTable.Data.LotteryBudget
@{
    ViewBag.Title = "Budget ändern";
}

<div class="panel panel-default">
    <div class="panel-body bg-fillter-study">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Punktebudget @Model.Name</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">

    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-university"></i> Anzahl Punkte und Beschreibung
                    </div>
                    <div class="actions">
                    </div>
                </div>
                <div class="portlet-body">


                    @using (Html.BeginForm("EditBudget", "Lottery", FormMethod.Post, new { @class = "form-horizontal", role = "form" }
))
    {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.HiddenFor(item => item.Lottery.Id)
                    @Html.HiddenFor(item => item.Id)
                </div>
                <div class="form-group">
                    @Html.LabelFor(item => item.Name, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(item => item.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(item => item.Description, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(item => item.Description, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(item => item.Size, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.EditorFor(item => item.Size, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(item => item.Fraction, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.EditorFor(item => item.Fraction, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        @Html.CheckBoxFor(item => item.IsRestricted)
                        @Html.LabelFor(item => item.IsRestricted, new { @class = "control-label" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <input type="submit" value="Speichern" class="btn btn-primary" />
                    </div>
                </div>
}
                </div>
            </div>
        </div>
    </div>
</div>
