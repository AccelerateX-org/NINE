@model MyStik.TimeTable.Web.Models.LotteryCreateModel
@{
    ViewBag.Title = "Platzverlosung ändern";
}

@section styles
{
    <link rel="stylesheet" href="@Url.Content("~/Assets/global/plugins/Jquery-ui/jquery-ui.min.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Assets/global/plugins/bootstrap-timepicker/css/bootstrap-timepicker.min.css")" />


}




<div class="panel panel-default">
    <div class="panel-body bg-fillter-study">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Wahlverfahren "@Model.Name" - Einstellungen</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <h4 class="panel-heading">
                        <i class="fa fa-cog"></i> Einstellungen
                </h4>
                <div class="panel-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }
))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(m => m.LotteryId)
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name, new { @class = "col-md-6 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Description, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 10 })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.IsAvailableFrom, new { @class = "col-md-6 control-label" })
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.IsAvailableFrom, new { @class = "form-control datepicker" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.IsAvailableUntil, new { @class = "col-md-6 control-label" })
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.IsAvailableUntil, new { @class = "form-control datepicker" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.MinSubscription, new { @class = "col-md-6 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.MinSubscription, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.MaxSubscription, new { @class = "col-md-6 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.MaxSubscription, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.MaxConfirm, new { @class = "col-md-6 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.MaxConfirm, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.MaxConfirmException, new { @class = "col-md-6 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.MaxConfirmException, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.FirstDrawing, new { @class = "col-md-6 control-label" })
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.FirstDrawing, new { @class = "form-control datepicker" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.LastDrawing, new { @class = "col-md-6 control-label" })
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.LastDrawing, new { @class = "form-control datepicker" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.DrawingTime, new { @class = "col-md-6 control-label" })
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.DrawingTime, new { @class = "form-control timepicker timepicker-24" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-8">
                                @Html.CheckBoxFor(item => item.IsScheduled)
                                @Html.LabelFor(item => item.IsScheduled, new { @class = "control-label" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-8">
                                @Html.CheckBoxFor(item => item.IsAvailable)
                                @Html.LabelFor(item => item.IsAvailable, new { @class = "control-label" })
                            </div>
                        </div>

                        @*
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    @Html.CheckBoxFor(item => item.AllowManualSubscription)
                    @Html.LabelFor(item => item.AllowManualSubscription, new { @class = "control-label" })
                </div>
            </div>
                        *@
                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-8">
                                @Html.CheckBoxFor(item => item.LoIneeded)
                                @Html.LabelFor(item => item.LoIneeded, new { @class = "control-label" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-8">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Speichern</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/Assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Assets/global/plugins/bootstrap-datepicker/locales/bootstrap-datepicker.de.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Assets/global/plugins/bootstrap-timepicker/js/bootstrap-timepicker.min.js")"></script>

    <script>


        $(document).ready(function () {
            $('.datepicker').datepicker({
                orientation: "left",
                autoclose: true,
                format: "dd.mm.yyyy",
                weekStart: 1,
                calendarWeeks: true,
                language: "de"
            });

            $('.timepicker-24').timepicker({
                autoclose: true,
                minuteStep: 15,
                showSeconds: false,
                showMeridian: false
            });

            $('.timepicker').parent('.input-group').on('click', '.input-group-btn', function(e) {
                e.preventDefault();
                $(this).parent('.input-group').find('.timepicker').timepicker('showWidget');
            });

        });

    </script>
}


