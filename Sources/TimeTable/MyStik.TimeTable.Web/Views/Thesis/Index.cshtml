@using MyStik.TimeTable.Web.Services
@model ICollection<MyStik.TimeTable.Web.Models.ThesisStateModel>
@{
    ViewBag.Title = "Abschlussarbeiten";
}

<div class="panel panel-default">
    <div class="panel-body bg-fillter-study">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Laufende Abschlussarbeiten</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Laufende Arbeiten</h4>
                </div>
                <div class="panel-body">
                    <table class="table table-condensed">
                        <thead>
                        <tr>
                            <th>Studierende(r)</th>
                            <th>Studiengang</th>
                            <th>Aktueller Stand</th>
                            <th>Status</th>
                            <th>Letzte Aktion</th>
                            <th>Ausgeführt von</th>
                            <th>Abgabedatum</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var thesis in Model)
                        {
                            <tr>
                                <td><a href="@Url.Action("Details", new {id=thesis.Thesis.Id})">@thesis.User.FullName</a></td>
                                <td>@thesis.Student.Curriculum.ShortName</td>
                                <td>@thesis.StageText</td>
                                <td>@thesis.StateText</td>
                                <td>@thesis.LastActionDate.ToString()</td>
                                <td>@thesis.LastActionUser</td>
                                <td>@thesis.Thesis.ExpirationDate</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        @if (ViewBag.UserRight.IsCurriculumAdmin)
        {
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>Verwaltung</h4>
                    </div>
                    <div class="list-group">
                        <a href="@Url.Action()" class="list-group-item">
                            <h5 class="list-group-item-heading"><i class="fa fa-plus"></i> Arbeit erfassen</h5>
                            <div class="list-group-item-text">
                                Erfassung einer Arbeit, z.B. wenn kein Betreuungsangebot gefunden wurde
                            </div>
                        </a>
                        <a href="@Url.Action()" class="list-group-item">
                            <span class="badge badge-danger">6</span>
                            <h5 class="list-group-item-heading"><i class="fa fa-exclamation-triangle"></i> Fristen</h5>
                            <div class="list-group-item-text">
                                Alle Arbeiten, die kurz vor Abgabefrist stehen oder darüber sind
                            </div>
                        </a>
                        <a href="@Url.Action()" class="list-group-item">
                            <h5 class="list-group-item-heading"><i class="fa fa-list"></i> Listen</h5>
                            <div class="list-group-item-text">
                                Liste aller Absolventen in einem Zeitraum, etc.
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
