@model MyStik.TimeTable.Web.Models.ThesisAcceptModel
@{
    ViewBag.Title = "Bearbeiten";
}



@section styles
{
    <link rel="stylesheet" href="@Url.Content("~/Assets/global/plugins/Jquery-ui/jquery-ui.min.css")" />
    <link href="@Styles.Url("~/Assets/global/plugins/cleditor/jquery.cleditor.css")" rel="stylesheet" type="text/css" />
}

<h2>Annahme</h2>

<div class="container-fluid">
    <div class="row">

        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
        <fieldset>
            @Html.HiddenFor(m => m.Exam.Id)
            @Html.HiddenFor(m => m.Paper.Id)
            <div class="form-group">
                @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Titel der Arbeit" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Beschreibung der Arbeit", rows = "10" })
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <button type="submit" class="btn btn-success">Speichern</button>
                </div>
            </div>
        </fieldset>
        }
    </div>
</div>



        @section scripts
{
            <script src="@Url.Content("~/Assets/global/plugins/cleditor/jquery.cleditor.min.js")" type="text/javascript"></script>

            <script>
                $(document).ready(function () {
                    $("#Description").cleditor();
                });
            </script>
        }

