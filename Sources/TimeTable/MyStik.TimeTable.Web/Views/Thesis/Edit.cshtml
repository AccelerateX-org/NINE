@model MyStik.TimeTable.Web.Models.ThesisEditModel
@{
    ViewBag.Title = "Edit";
}


<div class="panel panel-default">
    <div class="panel-body bg-fillter-lecturer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Abschlussarbeit</h1>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Allgemeine Angaben</h4>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                    <fieldset>
                        @Html.ValidationSummary()
                        @Html.HiddenFor(m => m.Thesis.Id)
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Titel (deutsch)</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.TitleDe, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Titel (englisch)</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.TitleEn, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-4 col-md-6">
                                <input type="submit" value="speichern" class="btn btn-primary" />
                            </div>
                        </div>
                    </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

