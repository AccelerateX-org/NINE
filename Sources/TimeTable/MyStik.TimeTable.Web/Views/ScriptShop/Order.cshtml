@model MyStik.TimeTable.Data.ScriptPublishing
@{
    ViewBag.Title = "Bestellung";
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                Skript bestellen
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    Hiermit möchte ich folgendes Skript verbindlich bestellen
                    <ul>
                        <li>@Model.ScriptDocument.Title (@Model.ScriptDocument.Version)</li>
                        <li>für Lehrveranstaltung: @Model.Course.Name</li>
                    </ul>
                </div>
                    <div class="form-group row">
                        <div class="col-sm-6">
                            <a href="@Url.Action("OrderConfirmed", new {id=Model.Id})" class="btn btn-outline-primary"><i class="fas fa-save"></i> Skript bestellen</a>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary"><i class="fas fa-times"> </i>Abbrechen</a>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>

