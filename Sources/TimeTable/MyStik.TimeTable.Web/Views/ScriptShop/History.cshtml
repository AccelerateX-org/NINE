@model ICollection<MyStik.TimeTable.Data.OrderBasket>
@{
    ViewBag.Title = "Meine Skripte";
}


@section styles
{
    <link href="@Url.Content("~/Assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css")" rel="stylesheet" type="text/css" />
}


@section scripts
{
    <script src="@Url.Content("~/Assets/libs/datatables.net/js/jquery.dataTables.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/libs/datatables.net-bs4/js/dataTables.bootstrap4.min.js")" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $('#tabCourses').DataTable({
                "paging": false
            });
        });
    </script>
}


<div class="row">
    <div class="col-md-12">
        <div class="alert alert-danger" role="alert">
            <h5>Achtung Experimentierphase:</h5>
            <p>Aktuell wird die Möglichkeit aufgebaut, die Skriptbestellung über NINE zu organisieren. Hier wird gerade experimentiert.</p>
            <ul>
                <li>Auf dieser Seite sehe ich welche Skripte ich wann bestellt habe</li>
                <li>Von dieser Seite aus kann ich neue Bestellungen machen </li>
            </ul>
        </div>

        <div class="card">
            <div class="card-header">
                Meine Skripte
            </div>
            <table id="tabCourses" class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Titel</th>
                        <th>Bestellnummer</th>
                        <th>Skripte</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var doc in Model)
                {
                    <tr>
                        <td>@doc.OrderPeriod.Title</td>
                        <td>@doc.OrderNumber</td>
                        <td>
                            @foreach (var pub in doc.Orders)
                            {
                                <div>@pub.ScriptDocument.Title (@pub.ScriptDocument.Version)</div>
                            }
                        </td>
                    </tr>
                }

                </tbody>
            </table>
        </div>
    </div>
</div>

