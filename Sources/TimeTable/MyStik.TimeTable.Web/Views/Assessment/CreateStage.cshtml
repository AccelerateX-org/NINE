@model MyStik.TimeTable.Web.Models.AssessmentStageCreateModel
@{
    ViewBag.Title = "Stufe im Aufnahmeverfahren";
}

@Html.Partial("_Watermark")

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                Stufe bearbeiten
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <h5>Hinweis:</h5>
                    <p>Aktuell müssen alle Referenzen und Datumsangaben als reiner Text eingegegben werden. Datum muss deutsches Format sein.</p>
                </div>
                @using (Html.BeginForm(null, null, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(m => m.AssessmentId)
                    <div class="form-group row">
                        <label for="Name" class="col-sm-2 col-form-label">Bezeichnung</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Description" class="col-sm-2 col-form-label">Beschreibung</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="FileTypes" class="col-sm-2 col-form-label">Dateitypen (.png,.jpg,.gif,image/*,.png)</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.FileTypes, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="MaxFileCount" class="col-sm-2 col-form-label">Maximale Anzahl</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.MaxFileCount, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="NaxPxSize" class="col-sm-2 col-form-label">Maximale Bildgröße (in px)</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.NaxPxSize, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Start" class="col-sm-2 col-form-label">Von</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Start, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="End" class="col-sm-2 col-form-label">Bis</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.End, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Publish" class="col-sm-2 col-form-label">Publikation</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Publish, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12">
                            @Html.CheckBoxFor(m => m.IsAvailable)
                            <label for="IsAvailable" class="col-sm-10 col-form-label">Allgemein verfügbar (sonst nur für angenommene BewerberInnen sichtbar)</label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-outline-primary"><i class="fas fa-save"></i> Speichern</button>
                            <a href="@Url.Action("Details", new {id=Model.AssessmentId})" class="btn btn-outline-secondary"><i class="fas fa-times"> </i>Abbrechen</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
