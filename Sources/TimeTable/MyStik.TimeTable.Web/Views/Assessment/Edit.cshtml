@model MyStik.TimeTable.Web.Models.AssessmentCreateModel
@{
    ViewBag.Title = "Einstellungen Aufnahmeverfahren";
}

@Html.Partial("_Watermark")


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                Einstellungen Aufnahmeverfahren
            </div>
            <div class="card-body">
                @using (Html.BeginForm(null, null, FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.AssessmentId)
                    <div class="form-group row">
                        <label for="Name" class="col-sm-2 col-form-label">Bezeichnung</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Description" class="col-sm-2 col-form-label">Beschreibung</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Anlegen</button>
                            <a href="@Url.Action("Details", new {id = Model.AssessmentId})" class="btn btn-default">Abbrechen</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
