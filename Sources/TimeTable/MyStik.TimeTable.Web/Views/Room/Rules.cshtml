@using MyStik.TimeTable.Web.Helpers
@model MyStik.TimeTable.Data.Room
@{
    ViewBag.Title = "Belegungsregeln";
}

@section styles
{
    <link rel="stylesheet" href="@Url.Content("~/Assets/global/plugins/Jquery-ui/jquery-ui.min.css")" />
}


@{
    var user = ViewBag.User;
    var assignment = Model.Assignments.FirstOrDefault(x => x.IsOwner);
    var owner = assignment.Organiser.Members.Where(m => !string.IsNullOrEmpty(m.UserId) && m.UserId == user.Id).FirstOrDefault();
    var isOwner = false;
    if (owner != null && owner.IsRoomAdmin)
    {
        isOwner = true;
    }

}




<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">
                    Belegungsregeln für Raum @Model.Number
                </h5>
            </div>
            <div class="list-group">
                <div class="list-group-item">
                    <div class="btn-group">
                        <a href="@Url.Action("Details", new {id=Model.Id})" class="btn btn-outline-primary">
                            <i class="bi bi-chevron-left"></i> zurück zur Detailseite
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-sm table-striped">
                            <thead>
                                <tr>
                                    <th>Einrichtung</th>
                                    <th>Status</th>
                                    <th>Wer darf Raum belegen</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var asgn in Model.Assignments)
                                {
                                    var member = asgn.Organiser.Members.Where(m => !string.IsNullOrEmpty(m.UserId) && m.UserId == user.Id).FirstOrDefault();
                                    var isAdmin = false;
                                    if (member != null && member.IsRoomAdmin)
                                    {
                                        isAdmin = true;
                                    }
                                    var btnAllActive = "btn-outline-primary";
                                    var btnAdminActive = "btn-outline-secondary";
                                    if (asgn.InternalNeedConfirmation)
                                    {
                                        btnAllActive = "btn-outline-secondary";
                                        btnAdminActive = "btn-outline-primary";
                                    }
                                    <tr>
                                        <td>@Html.FacultyLabel(asgn.Organiser)</td>
                                        @if (asgn.IsOwner)
                                        {
                                            <td><i class="bi bi-building-exclamation text-primary-emphasis"</td>
                                        }
                                        else
                                        {
                                            <td></td>
                                        }

                                        @if (isAdmin)
                                        {
                                            <td>
                                                <a href="@Url.Action("UnLockRoom", new { id = asgn.Id })" class="btn @btnAllActive">alle</a>
                                                <a href="@Url.Action("LockRoom", new { id = asgn.Id })" class="btn @btnAdminActive">nur Admins</a>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <div class="btn @btnAllActive disabled">alle</div>
                                                <div class="btn @btnAdminActive disabled">nur Admins</div>
                                            </td>

                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    Freigaben für andere Einrichtungen
                                </h5>
                                @if (isOwner)
                                {
                                    <form class="mt-3">
                                        <fieldset>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <label for="FacId" class="form-label">Veranstalter hinzufügen</label>
                                                </div>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" id="FacId" placeholder="Kurzname Einrichtung">
                                                </div>
                                            </div>
                                        </fieldset>
                                    </form>
                                }
                                <table class="table mt-3">
                                    <thead>
                                        <tr>
                                            <th>Kurzname</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody id="linkList">
                                            @foreach (var link in Model.Assignments.Where(x => x.Id != assignment.Id))
                                            {
                                                <tr id="@link.Id">
                                                    <td>@link.Organiser.ShortName</td>
                                                    @if (isOwner)
                                                    {
                                                        <td>
                                                            @Ajax.ActionButton("bi bi-trash", "Löschen", "DeleteLink", "Room",
                                                                new { id = link.Id },
                                                                new AjaxOptions
                                                                {
                                                                    HttpMethod = "Post",
                                                                    InsertionMode = InsertionMode.Replace,
                                                                    UpdateTargetId = link.Id.ToString()
                                                                },
                                                                new { @class="btn btn-outline-primary"})
                                                        </td>
                                                    }
                                                </tr>
                                            }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





@section scripts
{
    <script>


        $('#FacId').autocomplete({
            source: function(request, response) {
                var id = "@ViewBag.Organiser.Id.ToString()";
                $.ajax({
                    url: '@Url.Action("OrgList", "Curriculum")',
                    type: 'POST',

                    data: {
                        orgId: id,
                        number: request.term
                    },

                    success: function(data, success, xhr) {
                        response($.map(data, function(item) {

                            return {
                                text: item.id,
                                label: item.name,
                                value: item.name
                            };
                        }));

                    },

                    error: function(data) { alert(data); }
                });

            },
            select: function(event, ui) {

                var id = "@Model.Id.ToString()";

                $.ajax(
                    {
                        type: 'POST',
                        url: '@Url.Action("LinkOrganiser")',
                        data: {
                            roomId: id,
                            orgId: ui.item.text
                        },
                        success: function (data, success, xhr) {
                            $('#linkList').append(data);

                        },
                        error: function (data, type, ex) {
                            alert("Fehler beim laden der Daten." + ex);
                        },
                    });


            }
        });



        function lockRoom(id) {
            $.ajax(
                {
                    type: "POST",
                    url: '@Url.Action("LockRoom")',
                    data: {
                        id: id
                    },
                    success: function (data, success, xhr) {
                    }
                });

        }

        function unLockRoom(id) {
            $.ajax(
                {
                    type: "POST",
                    url: '@Url.Action("UnLockRoom")',
                    data: {
                        id: id
                    },
                    success: function (data, success, xhr) {
                    }
                });

        }

    </script>
}