@model ICollection<MyStik.TimeTable.Web.Models.FreeRoomModel>

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th colspan="2">Raum</th>
            <th>Wie lange ist der Raum noch frei?</th>
            <th colspan="2">Wann ist die nächste Belegung?</th>
        </tr>
        <tr>
            <th>Nummer</th>
            <th>Anzahl Plätze</th>
            <th>[Tage:Stunden:Minuten]</th>
            <th>Datum</th>
            <th>Bezeichnung</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td><strong>@c.Room.Number</strong></td>
                <td>@c.Room.Capacity</td>
                @if (c.NextDate == null)
                {
                    <td colspan="3">derzeit keine Belegung</td>
                }
                else
                {
                    <td><small>@c.DurationText</small></td>
                    <td><small>@c.NextDate.Begin.ToShortDateString() @c.NextDate.Begin.TimeOfDay.ToString(@"hh\:mm")</small></td>
                    <td><small>@c.NextDate.Activity.Name</small></td>
                }
            </tr>
        }
    </tbody>
</table>


