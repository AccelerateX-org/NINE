@model MyStik.TimeTable.Web.Models.FreeRoomSummaryModel

@{
    ViewBag.Title = "Freie Räume";
}



<div class="panel panel-default">
    <div class="panel-body bg-fillter-rooms">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Freie Räume für @ViewBag.Organiser</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <span class="caption-subject bold uppercase"> Diese Räume sind jetzt (@DateTime.Now) frei</span>
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse">
                        </a>
                    </div>
                </div>
                <div class="portlet-body">

                    <table class="table table-striped table-bordered table-condensed">
                        <thead>
                            <tr>
                                <th>Nummer</th>
                                <th>Plätze</th>
                                <th>Frei bis</th>
                                <th>Nächste Belegung</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var c in Model.AvailableRooms)
                            {
                                <tr>
                                    <td>@c.Room.Number</td>
                                    <td>@c.Room.Capacity</td>
                                    @if (c.NextDate != null)
                                    {
                                        if (c.NextDate.Begin > DateTime.Today.AddDays(1))
                                        {
                                            <td>frei bis Abends</td>
                                            <td></td>
                                        }
                                        else
                                        {
                                            <td>frei bis @c.NextDate.Begin.TimeOfDay.ToString("hh\\:mm")</td>
                                            <td>@c.NextDate.Activity.Name</td>
                                        }
                                    }
                                    else
                                    {
                                        <td>frei bis Abends</td>
                                        <td></td>
                                    }
                                    <td>
                                        <a href="@Url.Action("Calendar", "Room", new {id = c.Room.Id})" class="btn btn-default btn-xs"><i class="fa fa-calendar-o"></i></a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <span class="caption-subject bold uppercase"> Diese Räume werden demnächst (@DateTime.Now) frei</span>
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse">
                        </a>
                    </div>
                </div>
                <div class="portlet-body">

                    <table class="table table-striped table-bordered table-condensed">
                        <thead>
                            <tr>
                                <th>Nummer</th>
                                <th>Plätze</th>
                                <th>Frei ab</th>
                                <th>Frei bis</th>
                                <th>Nächste Belegung</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var c in Model.FutureRooms)
                            {
                                <tr>
                                    <td>@c.Room.Number</td>
                                    <td>@c.Room.Capacity</td>
                                    @if (c.CurrentDate != null)
                                    {
                                        <td>@c.CurrentDate.End.TimeOfDay.ToString("hh\\:mm")</td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    @if (c.NextDate != null)
                                    {
                                        if (c.NextDate.Begin > DateTime.Today.AddDays(1))
                                        {
                                            <td>frei bis Abends</td>
                                            <td></td>
                                        }
                                        else
                                        {
                                            <td>frei bis @c.NextDate.Begin.TimeOfDay.ToString("hh\\:mm")</td>
                                            <td>@c.NextDate.Activity.Name</td>
                                        }
                                    }
                                    else
                                    {
                                        <td>frei bis Abends</td>
                                        <td></td>
                                    }
                                    <td>
                                        <a href="@Url.Action("Calendar", "Room", new {id = c.Room.Id})" class="btn btn-default btn-xs"><i class="fa fa-calendar-o"></i></a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
