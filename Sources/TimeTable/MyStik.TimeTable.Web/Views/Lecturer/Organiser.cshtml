    List<OrganiserMember> memberList = null;
    if (ViewBag.UserRight.IsMemberAdmin || ViewBag.UserRight.IsOrgMember)
    {
        memberList = Model.Organiser.Members
            .OrderBy(x => x.Name)
            .ToList();
    }
    else
    {
        memberList = Model.Organiser.Members
            .Where(x => x.IsAssociated)
            .OrderBy(x => x.Name)
            .ToList();
    }
