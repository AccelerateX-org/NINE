@using MyStik.TimeTable.Web.Helpers
@model MyStik.TimeTable.Data.ActivityDate
@{
    ViewBag.Title = "EditDate";
}

<div class="panel panel-default">
    <div class="panel-body bg-fillter-lecturer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Infos für Sprechstundentermin @Html.TimeSpanWithDate(Model)</h1>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Informationen</h4>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                    <fieldset>
                        @Html.ValidationSummary()
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            @Html.LabelFor(m => m.Title, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-6">
                                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-4 col-md-6">
                                <input type="submit" value="Speichern" class="btn btn-primary" />
                            </div>
                        </div>
                    </fieldset>
                    }

                </div>
            </div>

        </div>
    </div>
</div>


