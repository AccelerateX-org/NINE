@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/Assets/libs/bootstrap-timepicker/js/bootstrap-timepicker.min.js")"></script>
    <script src="@Url.Content("~/Assets/libs/datatables/dataTables.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/libs/moment/moment.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/libs/datatables/plugins/sorting/datetime-moment.js")" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $.fn.dataTable.moment('DD.MM.YYYY');
            $.fn.dataTable.moment('(DD.MM.YYYY)');

            $('#loading').hide();

            $('.timepicker-24').timepicker({
                autoclose: true,
                minuteStep: 15,
                showSeconds: false,
                showMeridian: false
            });

            $('.timepicker').parent('.input-group').on('click',
                '.input-group-btn',
                function (e) {
                    e.preventDefault();
                    $(this).parent('.input-group').find('.timepicker').timepicker('showWidget');
                });

            onDay();
        });

        function initDateTable() {
            $('#tabDates').DataTable({
                "paging": false,
                "order": [[1, 'asc']]
            });
        }


        function onCreateDates() {
            $('#loading').show();

            var values = $("input[name='mytime']")
                .map(function () { return $(this).val(); }).get();
            var n = values.length;

            var orgId = $("#organiserId option:selected").val();
            var segmentId = $("#segmentId option:selected").val();

            $.ajax(
                {
                    type: "POST",
                    url: '@Url.Action("CreateDates")',
                    data: {
                        timeArray: values,
                        orgId: orgId,
                        segmentId: segmentId
                    },
                    success: function(data, success, xhr) {
                        $('#loading').hide();
                        window.location.replace("@Url.Action("PersonalDates", new {id = Model.Semester.Id})");
                    }
                });
        }

        function onClearDates() {
            $('.timepicker-24').val('00:00');
        }

        function onDay() {
            onClearDates();
            $('.b1min').val('08:00');
            $('.b1max').val('21:00');
        }

        function onAM() {
            onClearDates();
            $('.b1min').val('08:00');
            $('.b1max').val('14:00');
        }

        function onPM() {
            onClearDates();
            $('.b1min').val('14:00');
            $('.b1max').val('21:00');
        }

    </script>
