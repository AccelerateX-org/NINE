@using MyStik.TimeTable.Web.Helpers
@model MyStik.TimeTable.Data.OfficeHour
@{
    ViewBag.Title = "Sprechstunde";
}

<div class="panel panel-default">
    <div class="panel-body bg-fillter-lecturer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Meine Sprechstundentermine im @Model.Semester.Name - nach Vereinbarung</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default panel-menu">
    <div class="panel-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-inline">
                        <div class="form-group">
                            <a href="@Url.Action("EditByAgreement", "OfficeHour", new {id = Model.Id})" class="btn btn-default">
                                <i class="fa fa-cog"></i> Einstellungen
                            </a>
                        </div>
                        <div class="form-group">
                            <a href="@Url.Action("DeleteOfficeHour", "OfficeHour", new {id = Model.Id})" class="btn btn-default">
                                <i class="fa fa-trash-o"></i> Sprechstunde löschen
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet light bordered">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-calendar"></i>
                                <span class="caption-subject bold uppercase"> Termine nach Vereinbarung
                                </span>
                            </div>
                            <div class="actions">
                            </div>
                        </div>

                        <div class="portlet-body">
                            @if (string.IsNullOrEmpty(Model.Description))
                            {
                                <h4>Keine Beschreibung.</h4>
                            }
                            else
                            {
                                <h4>Zusatzinformation</h4>
                                <div>@Html.Raw(Model.Description)</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







@section scripts{

    <script>
        $(document).ready(function() {
        });
    </script>
}


