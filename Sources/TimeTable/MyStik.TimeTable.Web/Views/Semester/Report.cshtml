@using MyStik.TimeTable.Web.Helpers
@model ICollection<MyStik.TimeTable.Web.Models.SemesterCourseViewModel>
@{
    ViewBag.Title = "Report";
}

<div class="panel panel-default">
    <div class="panel-body bg-fillter-study">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Zusammenfassung</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">


            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-calendar"></i>Alle Lehrveranstaltungen nach Studiengang und Dozent
                    </div>
                    <div class="actions">
                        <a href="@Url.Action("ReportFile", "Semester", new { id = ViewBag.Semester.Id })" class="btn btn-circle btn-icon-only btn-default"><i class="fa fa-download"></i></a>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Studiengang</th>
                                <th>Gruppe</th>
                                <th>Dozent</th>
                                <th>Name</th>
                                <th>Eintragungen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Curriculum.ShortName</td>
                                    <td>@item.Lecturer.Name</td>
                                    <td>@item.Group.FullName</td>
                                    <td>@item.Course.Name</td>
                                    <td>@item.Course.Occurrence.Subscriptions.Count</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
