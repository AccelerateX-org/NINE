@model ICollection<MyStik.TimeTable.Data.Semester>

@{
}

@section styles
{
}


@section scripts
{
}


<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")"><i class="bi-grid"></i></a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Faculty", "University", new {id=ViewBag.Organiser.Id})">@ViewBag.Organiser.ShortName</a></li>
                <li class="breadcrumb-item active" aria-current="page">Semesterplanung</li>
            </ol>
        </nav>
        <div class="card">
            <div class="list-group">
                @foreach (var sem in Model.OrderByDescending(x => x.StartCourses))
                {
                    <a href="@Url.Action("Details", new {orgId=ViewBag.Organiser.Id, semId=sem.Id})" class="list-group-item list-group-item-action">@sem.Name</a>
                }
            </div>
        </div>
    </div>
</div>
