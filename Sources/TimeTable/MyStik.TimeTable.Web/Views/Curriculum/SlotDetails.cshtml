@using System.Net.Configuration
@using RazorEngine.Compilation
@model MyStik.TimeTable.Data.CurriculumSlot
@{
    ViewBag.Title = "Slot";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="list-group">
                <div class="list-group-item">
                    <div class="btn-group">
                        <a href="@Url.Action("ModulePlan", "Curriculum", new {id = Model.CurriculumSection.Curriculum.Id})" class="btn btn-outline-primary">
                            <i class="bi-chevron-left"></i> Zurück
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <h4 class="card-title">@Model.Tag: @Model.Name</h4>
                <h5 class="card-subtitle">@Model.CurriculumSection.Name | @Model.CurriculumSection.Curriculum.Name (@Model.CurriculumSection.Curriculum.ShortName)</h5>
                <ul>
                    <li>ECTS: @Model.ECTS</li>
                </ul>
            </div>
            <div class="list-group">
                @foreach (var module in Model.ModuleAccreditations)
                {
                    <div class="list-group-item list-group-item-action">
                        <h5>@module.Module.Name (@module.Module.Tag)</h5>
                            @foreach (var subject in module.Module.ModuleSubjects)
                            {
                                <h6>@subject.Name (@subject.Tag)</h6>
                                <ul>
                                    <li>Lehrformat: @subject.TeachingFormat.Tag</li>
                                    <li>SWS: @subject.SWS</li>
                                </ul>
                            }
                            <div class="btn-group btn-group-sm d-flex justify-content-center" role="group" aria-label="Basic outlined example">
                                <button type="button" class="btn btn-outline-secondary"><i class="bi-book"></i></button>
                                <button type="button" class="btn btn-outline-secondary">SoSe 2022</button>
                                <button type="button" class="btn btn-outline-secondary">WiSe 2022</button>
                            </div>
                    </div>
                }
            </div>
           
        </div>
    </div>
</div>
