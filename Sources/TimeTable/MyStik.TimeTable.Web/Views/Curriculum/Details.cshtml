@using MyStik.TimeTable.Data
@using MyStik.TimeTable.DataServices
@model MyStik.TimeTable.Web.Models.CurriculumViewModel

@{
    ViewBag.Title = "Modulplan";
    var showFilter = false;
    if (ViewBag.FilterLabels != null)
    {
        var numLabels = 0;
        foreach (var label in ViewBag.FilterLabels)
        {
            numLabels++;
        }
        if (numLabels > 0)
        {
            showFilter = true;
        }
    }

    var pk = Model.Curriculum.Organiser.Autonomy != null ?
        Model.Curriculum.Organiser.Autonomy.Committees.FirstOrDefault(x => x.Name.Equals("PK") &&
                                                                                   x.Curriculum != null &&
                                                                                   x.Curriculum.Id == Model.Curriculum.Id) : null;

    var pkv = pk != null ? pk.Members.FirstOrDefault(x => x.HasChair) : null;

    var db = new TimeTableDbContext();

}

@section styles
{
    <style>
        .slot {
            position: relative;
            display: inline-block;
            margin-top: 2px;
            margin-bottom: 2px;
            margin-right: 0px;
            margin-left: 0px;
        }

        .slot-option {
        }
    </style>

}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-10">
                        <h4 class="card-title">@Model.Curriculum.Name (@Model.Curriculum.ShortName | primuss-code: XXX)</h4>
                        <h5 class="card-subtitle">
                            <a href="@Url.Action("Index", "Curricula")">HM</a>
                            |
                            <a href="@Url.Action("Index", "Curricula", new {id = Model.Curriculum.Organiser.Id})">
                                @Model.Curriculum.Organiser.Name (@Model.Curriculum.Organiser.ShortName)
                            </a>
                        </h5>

                    </div>
                    <div class="col-md-2">
                        @if (ViewBag.UserRight.IsCurriculumAdmin)
                        {
                            <div class="d-md-flex justify-content-md-end">
                                <a href="@Url.Action("Admin", new {id = Model.Curriculum.Id})" class="btn btn-outline-primary">
                                    <i class="bi-gear"></i> Verwaltung
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <h5>Allgemeine Informationen</h5>
                <div class="row">
                    <div class="col-md-6">
                        @if (Model.Curriculum.Degree != null)
                        {
                            <div class="row">
                                <div class="col-4">
                                    Abschluss
                                </div>
                                <div class="col-8">
                                    @Model.Curriculum.Degree.Name
                                </div>
                            </div>
                        }
                        <div class="row">
                            <div class="col-4">
                                ECTS
                            </div>
                            <div class="col-8">
                                @Model.Curriculum.EctsTarget
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                Dokumente
                            </div>
                            <div class="col-8">
                                <a href="#">SPO</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                Prüfungskommission
                            </div>
                            <div class="col-8">
                                @if (pkv != null)
                                {
                                    @pkv.Member.FullName
                                }
                                else
                                {
                                    <div>N.N.</div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-12">
                                <a href="#">Stundenplan @Model.Semester.Name</a>
                            </div>
                        </div>
                        @if (ViewBag.NextSemester != null)
                        {
                            <div class="row">
                                <div class="col-12">
                                    <a href="#">Stundenplan @ViewBag.NextSemester.Name</a>
                                </div>
                            </div>
                        }
                        <div class="row">
                            <div class="col-12">
                                @if (Model.Assessments.Any())
                                {
                                    <a href="@Url.Action("Index", "Assessment")" class="">
                                        Auswahlverfahren
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                @if (Model.Curriculum.Areas.Any())
                {
                    <h5>Aufbau</h5>
                        var optionsSelected = new List<AreaOption>();

                        foreach (var area in Model.Areas)
                        {
                            optionsSelected.Add(area.Option);
                            <div class="row">
                                <div class="col-2">
                                    @area.Area.Name
                                </div>
                                <div class="col-10">
                                    <select class="form-select slot-option" id="@area.Area.Id" onchange="onFilterChanged()">
                                        @foreach (var option in area.Area.Options)
                                        {
                                            if (option.Id == area.Option.Id)
                                            {
                                                <option selected value="@option.Id">@option.Tag</option>
                                            }
                                            else
                                            {
                                                <option value="@option.Id">@option.Tag</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        }
                        <div id="ModulePlan" class="card-body">
                            @{
                                var allSlots = db.CurriculumSlots.Where(x =>
                                    x.AreaOption != null && x.AreaOption.Area.Curriculum.Id == Model.Curriculum.Id).ToList();

                                var minSem = allSlots.Min(x => x.Semester);
                                var maxSem = allSlots.Max(x => x.Semester);

                                var allOptions = db.AreaOptions.Where(x => x.Area.Curriculum.Id == Model.Curriculum.Id).ToList();

                                for (var s = minSem; s <= maxSem; s++)
                                {
                                    var semSlots = allSlots.Where(x => x.Semester == s).ToList();
                                    <div class="row">
                                        <div class="col-md-2">
                                            <h5>Semester @s</h5>
                                        </div>
                                        <div class="col-md-10">
                                            @foreach (var slot in semSlots)
                                            {
                                                var showSlot = false;
                                                var inOptionArea = Model.Areas.Count(x => x.Area.Id == slot.AreaOption.Area.Id);

                                                if (inOptionArea == 0)
                                                {
                                                    showSlot = true;
                                                }
                                                else
                                                {
                                                    var inSelectedOption = optionsSelected.Count(x => x.Id == slot.AreaOption.Id);
                                                    if (inSelectedOption > 0)
                                                    {
                                                        showSlot = true;
                                                    }
                                                }
                                                if (showSlot)
                                                {
                                                    var w = (int)(slot.ECTS / 30 * 100);
                                                    <a class="btn btn-outline-secondary slot text-truncate" style="width: @w%" href="@Url.Action("SlotDetails", new { id = slot.Id })">
                                                        <strong>@slot.Tag</strong> <span class="badge bg-secondary">@slot.ModuleAccreditations.Count</span>
                                                        <br />
                                                        @if (slot.AreaOption.Area.Options.Count() > 1)
                                                        {
                                                            <small>@slot.Name (@slot.AreaOption.Tag)</small>
                                                        }
                                                        else
                                                        {
                                                            <small>@slot.Name</small>
                                                        }
                                                    </a>
                                                }

                                            }
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                }
                else
                        {
                        if (showFilter)
                        {
                        var i = 0;
                        <div class="form-floating">
                            <select id="labelSelect" class="form-select" id="floatingSelect" aria-label="Floating label select example" onchange="onLabelSelected(this.value)">
                                @foreach (var label in ViewBag.FilterLabels)
                                {
                                    i++;
                                    if (i == 1)
                                    {
                                        <option selected value="@label.Name">@label.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@label.Name">@label.Name</option>
                                    }

                                }
                            </select>
                            <label for="floatingSelect">Filterkriterium</label>
                        </div>
                        <div id="loading" class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <div id="ModulePlan">

                        </div>
                        }
                        else
                        {
                        @Html.Partial("_ModulePlan", Model)
                        }

                        }
                    </div>
        
        </div>
    </div>
</div>


@section scripts
{
    <script>
        $(function() {
            $("#loading").hide();

            var label = $("#labelSelect").val();
            if (label != null) {
                onLabelSelected(label);
            }
        });


        function onLabelSelected(value) {

            var currId = "@Model.Curriculum.Id";
            var label = value;

            $("#loading").show();

            $.ajax(
                {
                    type: "POST",
                    url: '@Url.Action("LoadModulePlan")',
                    data: {
                        currId: currId,
                        label: label
                    },
                    success: function(data, success, xhr) {
                        $("#ModulePlan").html(data);
                        $("#loading").hide();
                    }
                });

        }

        function onFilterChanged() {

            var currId = "@Model.Curriculum.Id";
            var optionIds = new Array();
            $(".slot-option").each(
                function(index, value) {
                     //alert(index);
                    //alert(value.value);
                     optionIds.push(value.value);
                });

            $("#loading").show();

            $.ajax(
                {
                    type: "POST",
                    url: '@Url.Action("LoadModulePlanAreas")',
                    data: {
                        currId: currId,
                        optIds: optionIds
                    },
                    success: function(data, success, xhr) {
                        $("#ModulePlan").html(data);
                        $("#loading").hide();
                    }
                });

        }

    </script>
}
