@model MyStik.TimeTable.Web.Models.ModuleAssignViewModel
@{
    ViewBag.Title = "Modul auswählen";
}

<div class="panel panel-default">
    <div class="panel-body bg-fillter-study">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Modul auswählen - @Model.Accreditation.Number</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>
                        <i class="fa fa-cube"></i> Liste aller Module
                    </h4>
                </div>
                <div class="list-group">
                    @foreach (var module in Model.Modules)
                    {
                        <a href="@Url.Action("SelectModule", new {accId=Model.Accreditation.Id, modId=module.Id})" class="list-group-item">
                            <div class="list-group-item-heading">
                                <h5>@module.Name</h5>
                                <div class="list-group-item-text">
                                    <ul>
                                        <li>@module.Description</li>
                                    </ul>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


