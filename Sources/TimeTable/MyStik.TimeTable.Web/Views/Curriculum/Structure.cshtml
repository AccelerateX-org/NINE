@model MyStik.TimeTable.Data.Curriculum
@{
    ViewBag.Title = "Aufbau";
}

<div class="panel panel-default">
    <div class="panel-body bg-fillter-study">
        <div class="row">
            <div class="col-md-12">
                <h1>Aufbau @Model.Name</h1>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.UserRight != null && ViewBag.UserRight.IsCurriculumAdmin)
{
    <div class="panel panel-default panel-menu">
        <div class="panel-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-inline">
                            <div class="form-group">
                                <a href="@Url.Action("Edit", "Curriculum", new {id = Model.Id})" class="btn btn-default">
                                    <i class="fa fa-cog"></i> Einstellungen
                                </a>
                            </div>
                            <div class="form-group">
                                <a href="@Url.Action("CreateGroup", "Curricula", new {id = Model.Id})" class="btn btn-default">
                                    <i class="fa fa-plus"></i> Gruppe hinzufügen
                                </a>
                            </div>
