@model MyStik.TimeTable.Web.Models.CurriculumTransferModel
@{
    ViewBag.Title = "Transfer";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                Studierende von einem Studiengang zum anderen transferieren
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <h5>Hinweis:</h5>
                    <p>Es werden nur die Einträge umgehängt. Konsistenzprüfungen etc. werden nicht gemacht</p>
                </div>
                @using (Html.BeginForm(null, null, FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.Curriculum.Id)
                    <div class="form-group row">
                        <label for="Name" class="col-sm-2 col-form-label">Kurzname des Zielstudiengangs</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(model => model.TargetCurrId, (IEnumerable<SelectListItem>)ViewBag.Curricula, new { @class = "form-control"})

                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-outline-primary"><i class="fas fa-recycle"></i> Ausführen</button>
                            <a href="@Url.Action("Students", new {id=Model.Curriculum.Id})" class="btn btn-outline-secondary"><i class="fas fa-times"> </i>Abbrechen</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
