@using System.Data.Entity
@using ImageMagick
@using MyStik.TimeTable.Data
@using MyStik.TimeTable.Web.Models
@model MyStik.TimeTable.Web.Models.OrgAutonomyModel
@{
    ViewBag.Title = "Gremien";

    var db = new MyStik.TimeTable.Data.TimeTableDbContext();

    foreach (var curr in Model.Organiser.Curricula)
    {
        if (curr.Autonomy == null)
        {
            var aut = new MyStik.TimeTable.Data.Autonomy
            {
                Committees = new List<MyStik.TimeTable.Data.Committee>(),
                Competences = new List<MyStik.TimeTable.Data.CommitteeCompetence>()
            };
            curr.Autonomy = aut;
            db.Autonomy.Add(aut);

        }
        else
        {
            if (curr.Autonomy.Competences == null)
            {
                curr.Autonomy.Competences = new List<MyStik.TimeTable.Data.CommitteeCompetence>();
            }
        }
    }

    db.SaveChanges();
}




@section styles
{
    <link href="@Url.Content("~/Assets/libs/datatables/dataTables.min.css")" rel="stylesheet" type="text/css" />
}


@section scripts
{
    <script src="@Url.Content("~/Assets/libs/datatables/dataTables.min.js")" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $('#tabCourses').DataTable({
                "paging": false
            });
        });
    </script>
}

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")"><i class="bi bi-grid"></i></a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Campus", "University")">HM</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Faculty", "University", new {id = Model.Organiser.Id})">@Model.Organiser.ShortName</a></li>
                <li class="breadcrumb-item active" aria-current="page">Gremien</li>
            </ol>
        </nav>
    </div>
</div>

@if (Model.Organiser.Autonomy == null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4>Keine Gremienstruktur vorhanden</h4>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4>Gremien der @Model.Organiser.ShortName</h4>
            </div>
            <div class="list-group">
                <div class="list-group-item">
                    <div class="btn-group">
                        @if (ViewBag.UserRight.IsMemberAdmin)
                        {
                            <a class="btn btn-outline-primary" href="@Url.Action("CreateCommittee", "Autonomy", new {id = Model.Organiser.Id})"><i class="bi bi-folder-plus"></i>Hinzufügen</a>
                        }
                    </div>
                </div>
            </div>

            <table id="tabCourses" class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Bezeichnung</th>
                        <th>Beschreibung</th>
                        <th>Studiengang</th>
                        <th>Mitglieder</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.Organiser.Autonomy.Competences)
                    {
                        <tr>
                            <td><a href="@Url.Action("Committee", new {id=c.Id})">@c.Committee.Name</a></td>
                            <td>@c.Committee.Description</td>
                            <td>
                            </td>
                            <td>@c.Committee.Members.Count</td>
                        </tr>
                    }
                    @foreach (var curr in Model.Organiser.Curricula)
                    {
                        foreach (var c in curr.Autonomy.Competences)
                        {
                            <tr>
                                <td><a href="@Url.Action("Committee", new {id=c.Id})">@c.Committee.Name</a></td>
                                <td>@c.Committee.Description</td>
                                <td>
                                    @curr.ID
                                </td>
                                <td>@c.Committee.Members.Count</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
}

