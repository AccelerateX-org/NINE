<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4>

                Gremien der @Model.Organiser.ShortName
            </h4>
        </div>
        <div class="list-group">
            <div class="list-group-item">
                <div class="btn-group">
                    @if (ViewBag.UserRight.IsMemberAdmin)
                    {
                            <a class="btn btn-outline-primary text-center" href="@Url.Action("CreateCommittee", "Autonomy")"> <i class="bi bi-folder-plus"></i><br />Hinzufügen</a>
                    }
                </div>
            </div>
        </div>

        <table id="tabCourses" class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Bezeichnung</th>
                    <th>Beschreibung</th>
                    <th>Studiengang</th>
                    <th>Mitglieder</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.Autonomy.Committees)
                {
                    <tr>
                        <td><a href="@Url.Action("Committee", new {id=c.Id})">@c.Name</a></td>
                        <td>@c.Description</td>
                        @if (c.Curriculum != null)
                        {
                            <td>@c.Curriculum.ShortName</td>
                        }
                        else
                        {
                            <td></td>
                        }

                        <td>@c.Members.Count</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




