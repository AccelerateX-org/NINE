@using ImageMagick
@using MyStik.TimeTable.Web.Models
@model MyStik.TimeTable.Web.Models.OrgAutonomyModel
@{
    ViewBag.Title = "Gremien";

    var db = new MyStik.TimeTable.Data.TimeTableDbContext();
    var bwms = db.Curricula.Where(x => x.ShortName.Equals("BWM")).ToList();
    var bwmOld = bwms.SingleOrDefault(x => x.ID.Equals("BWM_20250314"));
    var bwmNew = bwms.SingleOrDefault(x => x.ID.Equals("BWM_20260314"));

    foreach (var c in bwmNew.Autonomy.Committees)
    {
        bwmOld.Autonomy.Committees.Add(c);
    }

    db.SaveChanges();

    var badCurrs = db.Curricula.Where(x => x.Autonomy == null).ToList();
}




@section styles
{
    <link href="@Url.Content("~/Assets/libs/datatables/dataTables.min.css")" rel="stylesheet" type="text/css" />
}


@section scripts
{
    <script src="@Url.Content("~/Assets/libs/datatables/dataTables.min.js")" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $('#tabCourses').DataTable({
                "paging": false
            });
        });
    </script>
}

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")"><i class="bi bi-grid"></i></a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Campus", "University")">HM</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Faculty", "University", new {id = Model.Organiser.Id})">@Model.Organiser.ShortName</a></li>
                <li class="breadcrumb-item active" aria-current="page">Gremien</li>
            </ol>
        </nav>
    </div>
</div>


<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4>Gremien der @Model.Organiser.ShortName</h4>
        </div>
        <div class="list-group">
            <div class="list-group-item">
                <div class="btn-group">
                    @if (ViewBag.UserRight.IsMemberAdmin)
                    {
                        <a class="btn btn-outline-primary" href="@Url.Action("CreateCommittee", "Autonomy", new {id = Model.Organiser.Id})"><i class="bi bi-folder-plus"></i>Hinzufügen</a>
                    }
                </div>
            </div>
        </div>

        <table id="tabCourses" class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Bezeichnung</th>
                    <th>Beschreibung</th>
                    <th>Studiengang</th>
                    <th>Mitglieder</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.Committees)
                {
                    var currs = db.Curricula.Where(x => x.Autonomy != null && x.Autonomy.Committees.Any(y => y.Id == c.Id)).ToList();
                    <tr>
                        <td><a href="@Url.Action("Committee", new {id=c.Id})">@c.Name</a></td>
                        <td>@c.Description</td>
                        <td>
                            @foreach (var curr in currs.ToList())
                            {
                                <div>@curr.ID</div>
                            }
                        </td>
                        <td>@c.Members.Count</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <ul>
            @foreach (var bc in badCurrs)
            {
                <li>@bc.ID</li>
            }
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <ul>
            @foreach (var curr in Model.Organiser.Curricula)
            {
                <li>@curr.ID</li>
                <ul>
                    @foreach (var c in curr.Autonomy.Committees)
                    {
                        if (c.Curriculum != null)
                        {
                            <li>@c.Curriculum.ID</li>
                        }
                        else
                        {
                            <li>@c.Name (0)</li>
                        }
                    }
                </ul>
            }
        </ul>
    </div>
</div>


