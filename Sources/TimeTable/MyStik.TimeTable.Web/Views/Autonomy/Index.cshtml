@using System.Data.Entity
@using ImageMagick
@using MyStik.TimeTable.Data
@using MyStik.TimeTable.Web.Models
@model MyStik.TimeTable.Web.Models.OrgAutonomyModel
@{
    ViewBag.Title = "Gremien";

    var db = new MyStik.TimeTable.Data.TimeTableDbContext();

    var bwms = db.Curricula.Where(x => x.ShortName.Equals("BWM")).Include(curriculum => curriculum.Autonomy.Competences.Select(committeeCompetence => committeeCompetence.Committee)).ToList();
    var bwmOld = bwms.SingleOrDefault(x => x.ID.Equals("BWM_20250314"));
    var bwmNew = bwms.SingleOrDefault(x => x.ID.Equals("BWM_20260314"));

    var slots = new List<CurriculumSlot>();

    foreach (var areaOld in bwmOld.Areas.ToList())
    {
        var areNew = bwmNew.Areas.SingleOrDefault(x => x.Tag.Equals(areaOld.Tag));
        if (areNew != null)
        {
            foreach (var optionOld in areaOld.Options.ToList())
            {
                var optionNew = areNew.Options.SingleOrDefault(x => x.Tag.Equals(optionOld.Tag));
                if (optionNew != null)
                {
                    foreach (var slotOld in optionOld.Slots.ToList())
                    {
                        var slotNew = optionNew.Slots.SingleOrDefault(x => x.Tag.Equals(slotOld.Tag));
                        if (slotNew != null)
                        {
                            slots.Add(slotNew);

                            foreach (var accreditationOld in slotOld.SubjectAccreditations.ToList())
                            {
                                var accreditationNew = slotNew.SubjectAccreditations.SingleOrDefault(x => x.Subject.Id.Equals(accreditationOld.Subject.Id));
                                if (accreditationNew == null)
                                {
                                    accreditationNew = new SubjectAccreditation
                                    {
                                        Slot = slotNew,
                                        Subject = accreditationOld.Subject,
                                    };
                                    db.SubjectAccreditations.Add(accreditationNew);
                                }
                            }

                        }
                    }
                }
            }
        }
    }

    db.SaveChanges();
}




@section styles
{
    <link href="@Url.Content("~/Assets/libs/datatables/dataTables.min.css")" rel="stylesheet" type="text/css" />
}


@section scripts
{
    <script src="@Url.Content("~/Assets/libs/datatables/dataTables.min.js")" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $('#tabCourses').DataTable({
                "paging": false
            });
        });
    </script>
}

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")"><i class="bi bi-grid"></i></a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Campus", "University")">HM</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Faculty", "University", new {id = Model.Organiser.Id})">@Model.Organiser.ShortName</a></li>
                <li class="breadcrumb-item active" aria-current="page">Gremien</li>
            </ol>
        </nav>
    </div>
</div>


<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4>Gremien der @Model.Organiser.ShortName</h4>
        </div>
        <div class="list-group">
            <div class="list-group-item">
                <div class="btn-group">
                    @if (ViewBag.UserRight.IsMemberAdmin)
                    {
                        <a class="btn btn-outline-primary" href="@Url.Action("CreateCommittee", "Autonomy", new {id = Model.Organiser.Id})"><i class="bi bi-folder-plus"></i>Hinzufügen</a>
                    }
                </div>
            </div>
        </div>

        <table id="tabCourses" class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Bezeichnung</th>
                    <th>Beschreibung</th>
                    <th>Studiengang</th>
                    <th>Mitglieder</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.Organiser.Autonomy.Competences)
                {
                    <tr>
                        <td><a href="@Url.Action("Committee", new {id=c.Id})">@c.Committee.Name</a></td>
                        <td>@c.Committee.Description</td>
                        <td>
                        </td>
                        <td>@c.Committee.Members.Count</td>
                    </tr>
                }
                @foreach (var curr in Model.Organiser.Curricula)
                {
                    foreach (var c in curr.Autonomy.Competences)
                    {
                        <tr>
                            <td><a href="@Url.Action("Committee", new {id=c.Id})">@c.Committee.Name</a></td>
                            <td>@c.Committee.Description</td>
                            <td>
                                @curr.ID
                            </td>
                            <td>@c.Committee.Members.Count</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <ul>
            @foreach (var slot in slots)
            {
                <li>@slot.Tag | @slot.AreaOption.Tag | @slot.AreaOption.Area.Tag</li>
            }
        </ul>
    </div>
</div>