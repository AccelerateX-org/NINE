<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")"><i class="bi bi-grid"></i></a></li>
            <li class="breadcrumb-item active">Mein Benutzerkonto</li>
        </ol>
    </nav>
</div>


<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="list-group">
                <div class="list-group-item">
                    <div class="row">
                        <div class="col-md-4">
                            <h5 class="card-title">Profilbild</h5>
                            @if (ViewBag.HasImage == true)
                            {
                                <img src="@Url.Action("GetProfileImage")" class="card-img-top" alt="Profile image" />
                            }
                            else
                            {
                                <span class="text-muted">Kein Profilbild vorhanden</span>
                            }
                        </div>
                        <div class="col-md-8">
                            <h5 class="card-title">Persönliche Angaben</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <div>Vorname</div>
                                </div>
                                <div class="col-md-6">
                                    <div>@Model.User.FirstName</div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">Nachname</div>
                                <div class="col-md-6">@Model.User.LastName</div>
                            </div>
                            @if (Model.User.LikeEMails)
                            {
                                <div class="row">
                                    <div class="col-md-6">Benachrichtigungen</div>
                                    <div class="col-md-6"><i class="bi bi-check text-success"></i> Ich möchte Nachrichten über Rundmails erhalten.</div>
                                </div>
                            }
                            else
                            {
                                <div class="row">
                                    <div class="col-md-6">Benachrichtigungen</div>
                                    <div class="col-md-6"><i class="bi bi-x text-danger"></i> Ich möchte <strong>keine</strong> Nachrichten über Rundmails erhalten.</div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <div class="btn-group">
                                <a href="@Url.Action("EditPersonalData", "UserProfile")" class="btn btn-outline-primary"><i class="bi bi-gear"></i> Angaben ändern</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="list-group-item">
                    <div class="row">
                        <div class="col-md-12">
                            <div>
                                URL für iCal Feed: <span class="text-primary">@Url.Action("Feed", "Calendar", new { token = ViewBag.CalendarToken }, "https")</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="list-group-item">
                    <div class="row">
                        <div class="col-md-6">
                            <div>
                                Claims
                            </div>
                        </div>
                        <div class="col-md-6">
                            <ul>
                                @foreach (var claim in Model.User.Claims)
                                {
                                    <li>@claim.ClaimType | @claim.ClaimValue</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Login Optionen</h5>
            </div>
            <div class="list-group">
                <div class="list-group-item">
                    <div class="row">
                        <div class="col-md-6">
                            <div>NINE User Account</div>
                        </div>
                        <div class="col-md-6">
                            <div class="btn-group-vertical">
                                @if (Model.HasPassword)
                                {
                                    <a href="@Url.Action("ChangePassword")" class="btn btn-outline-primary">
                                        <i class="bi bi-key"></i> @Resources.ChangePasswordButton
                                    </a>
                                    <a href="@Url.Action("ChangeEMail")" class="btn btn-outline-primary">
                                        <i class="bi bi-envelope"></i> @Resources.ChangeEMailButton
                                    </a>
                                }
                                else
                                {
                                    <a href="@Url.Action("SetPassword")" class="btn btn-outline-primary">
                                        <i class="bi bi-key"></i> @Resources.SetPasswordButton
                                    </a>
                                }
                                <a href="@Url.Action("DeleteAccount", "Account")" class="btn btn-outline-primary">
                                    <i class="bi bi-trash"></i> @Resources.DeleteAccountButton
                                </a>
                            </div>
                        </div>
                    </div>
                </div>


                @if (Model.CurrentLogins.Count > 0)
                {
                    foreach (var account in Model.CurrentLogins)
                    {
                        var provider = loginProviders.FirstOrDefault(x => x.AuthenticationType == account.LoginProvider);

                        <div class="list-group-item">
                            <div class="row">
                                <div class="col-md-6">
                                    <div>@provider.Caption | @account.LoginProvider</div>
                                </div>
                                <div class="col-md-6">
                                    @if (ViewBag.ShowRemoveButton)
                                    {
                                        using (Html.BeginForm("RemoveLogin", "Manage"))
                                        {
                                            @Html.AntiForgeryToken()
                                            <div>
                                                @Html.Hidden("loginProvider", account.LoginProvider)
                                                @Html.Hidden("providerKey", account.ProviderKey)
                                                <button type="submit" class="btn btn-outline-primary" title="Remove this @account.LoginProvider login from your account">
                                                    <i class="bi bi-trash"> Remove from my account</i>
                                                </button>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        @: &nbsp;
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
