@model MyStik.TimeTable.Web.Models.ManageLoginsViewModel
@using Microsoft.Owin.Security
@{
    ViewBag.Title = "Manage your external logins";
}

@if (@ViewBag.LoginInfo != null)
{
    <h4>Login Info</h4>
    <ul>
        <li>@ViewBag.LoginInfo.Email</li>
        <li>@ViewBag.UserName</li>
        <li>@ViewBag.EMail</li>
        <li>@ViewBag.UserData</li>
        <li>@ViewBag.LoginInfo.ExternalIdentity.AuthenticationType</li>
    </ul>
}
else
{
    <h4>Kein Logininfo</h4>
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Nachricht vom externen Login Provider</h5>
                <p class="text-success">@ViewBag.StatusMessage</p>
                <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                    Weiter zum Benutzerprofil <i class="bi bi-chevron-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>


