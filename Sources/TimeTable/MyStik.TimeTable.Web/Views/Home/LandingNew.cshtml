@using MyStik.TimeTable.Web.Helpers
@model MyStik.TimeTable.Web.Models.HomeViewModel
@{
    Layout = "~/Views/Shared/_LayoutPublicNew.cshtml";
    ViewBag.Title = "Willkommen";
}

<div class="container" style="margin-top: 20px">
    <div class="row">
        <div class="col-md-12">
            <h3>Willkommen bei nine</h3>
            <div class="row">
                <div class="col-md-4">
                    <h4>Was ist nine?</h4>
                    <p>nine ist ein Informationssystem für die Organisation des Lehrbetriebs. nine wurde im Rahmen von Lehrveranstaltungen an der Fakultät für Wirtschaftsingenieurwesen entwickelt und steht als Open Source Lösung zur Verfügung.</p>
                    <a href="https://www.acceleratex.org" target="_blank">Mehr zu nine findet sich bei AccelerateX</a>
                </div>
                <div class="col-md-4">
                    <h4>Was ist shortcut?</h4>
                    <p>shortcut ist das zugehörige Lehrprojekt. Hier entstehen innovative Lösungen für digitales Lernen und Lehren. Studierende werden projektbasiert in Entwurf, Umsetzung, Betrieb und Nutzung soziotechnischer Systeme eingeführt.</p>
                    <a href="https://mahara.hm.edu/view/view.php?id=16789" target="_blank">Mehr zum Projekt shortcut findet sich auf Mahara</a>
                </div>
                <div class="col-md-4">
                    <h4>Kann / darf / muss ich nine benutzen?</h4>
                    <p>Jeder kann und darf nine benutzen. Das "MUSS" ist eine ungeklärte Frage. Datenschutz, Umgang mit personenbezogenen Daten sind aktuelle gesellschaftliche Fragen. nine und shortcut sind ein Beitrag zu dieser wichtigen Diskussion.</p>
                    <a href="@Url.Action("TermsOfUse")">Mehr dazu steht in den Nutzungsbedingungen</a>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <h4>Was gibt es hier ohne Login?</h4>
                    <ul class="fa-ul">
                        <li><i class="fa fa-li fa-book"></i><a href="@Url.Action("Index", "Dictionary")">Vorlesungsverzeichnisse</a></li>
                        <li>
                            <i class="fa fa-li fa-link"></i>Links zu wichtigen Seiten der HM
                            <ul>
                                <li><a href="https://www.hm.edu/studierende/mein_studium/verlauf/termine.de.html" target="_blank">Fristen und Termine</a></li>
                                <li><a href="https://www.hm.edu/studierende/mein_studium/recht/verordnungen_satzungen.de.html" target="_blank">Studien- & Prüfungsordnungen</a></li>
                                <li><a href="https://bib.hm.edu/" target="_blank">Bibliothek</a></li>
                                <li><a href="https://moodle.hm.edu/" target="_blank">Moodle</a></li>
                                <li><a href="https://mahara.hm.edu/" target="_blank">Mahara</a></li>
                                <li><a href="http://jobs.hm.edu/" target="_blank">Hochschul-Jobbörse</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h4>Welche Projekte gibt es noch?</h4>
                    <div class="media">
                        <div class="media-left">
                            <a href="@Url.Action("Fillter")">
                                <img src="@Url.Content("~/Assets/fillter/img/logo_fillter.svg")" style="background-color: #080808; width: 40px; padding-bottom: 5px">
                            </a>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">fillter</h4>
                            Die App fürs Smartphone. Verfügbar für Android und iOS.
                        </div>
                    </div>
                    @*
                    <div class="media">
                        <div class="media-left">
                            <a href="http://vsl006.wi.private.hm.edu" target="_blank">
                                <i class="fa fa-3x fa-map-signs"></i>
                            </a>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">Das H.O.R.S.T.</h4>
                            Ein Studienverlaufstool. Planung des eigenen Studienwegs. Ein <a href="https://www.hm.edu/allgemein/lehren/zug/index.de.html" target="_blank">ZUG-Projekt</a>. Zugang nur über VPN.
                        </div>
                    </div>
                    *@
                </div>
                <div class="col-md-4">
                    <h4>Welche Reichweite hat nine@shortcut?</h4>
                    <ul class="fa-ul">
                        <li><i class="fa fa-li fa-user-o"></i>@Model.Students Studierende</li>
                        <li><i class="fa fa-li fa-user-md"></i>@Model.Lecturers Lehrende</li>
                        <li><i class="fa fa-li fa-book"></i>@Model.Curricula Studiengänge</li>
                        <li><i class="fa fa-li fa-building-o"></i>@Model.Rooms Räume</li>
                    </ul>
                </div>
            </div>
            <hr />
        </div>
    </div>
</div>



@section login
{
    <form class="navbar-form navbar-right" role="search" action="@Url.Action("Login", "Account")" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input name="Email" type="text" class="form-control" placeholder = "@Resources.EmailPlaceholder">
        </div>
        <div class="form-group">
            <input name="Password" type="password" class="form-control" placeholder="@Resources.PasswordPlaceholder">
        </div>
        <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> @Resources.LoginButton</button>
        <a href="@Url.Action("Register", "Account")" class="btn btn-info"><i class="fa fa-pencil"></i> @Resources.RegisterLink</a>
    </form>            
    
}
