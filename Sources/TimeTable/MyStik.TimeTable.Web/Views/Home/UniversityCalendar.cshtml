@using MyStik.TimeTable.Web.Helpers
@model MyStik.TimeTable.Web.Models.HomeViewModel

@{
    Layout = "~/Views/Shared/_LayoutDashboardNew.cshtml";
    ViewBag.Title = "Vorlesungsverzeichnisse";
}

<div class="container" style="margin-top: 20px">
    <div class="row">
        <div class="col-md-12">
            <h3>Vorlesungsverzeichnis</h3>
            <p>Auf dieser Seite sind getrennt nach Semestern und Fakultäten die verfügbaren Lehrangebote aufgeführt.</p>
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="list-group">
                            @foreach (var sem in Model.ActiveSemester)
                            {
                                <a href="@Url.Action("Semester", new {id = sem.Semester.Id})" class="list-group-item">
                                    <h5 class="list-group-item-heading"><strong>@sem.Semester.Name</strong></h5>
                                    <p class="list-group-item-text">
                                        @foreach (var organiser in sem.Organisers.OrderBy(x => x.ShortName))
                                        {
                                            @Html.FacultyLabel(organiser)
                                        }

                                    </p>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

