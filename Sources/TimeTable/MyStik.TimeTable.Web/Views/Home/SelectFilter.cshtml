@model ICollection<MyStik.TimeTable.Data.Semester>
@{
    ViewBag.Title = "SelectFilter";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h4>Semester wählen</h4>
            </div>
            <div class="list-group">
                @foreach (var semester in Model)
                {
                    var contextState = "";
                    if (semester.Id == ViewBag.CurrentSemnester.Id)
                    {
                        contextState = "list-group-item-primary";
                    }

                    <a href="@Url.Action("SelectFilterConfirmed", "Home", new {semId = semester.Id, ReturnUrl = ViewBag.ReturnUrl})" 
                       class="list-group-item list-group-item-action @contextState">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@semester.Name</h5>
                            <small>@semester.StartCourses.ToShortDateString() - @semester.EndCourses.ToShortDateString()</small>
                        </div>
                        <p class="mb-1">Text</p>
                        <small>Noch mehr Text</small>
                    </a>
                }

            </div>
        </div>
    </div>
</div>

