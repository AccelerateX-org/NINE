@using MyStik.TimeTable.Web.Services
@model MyStik.TimeTable.Data.ModuleDescription
@{
    ViewBag.Title = "Details";

    var subjects = Model.Module.ModuleSubjects.ToList();

    var itsMe = false;
    var userId = ViewBag.UserRight.User.Id;

    foreach (var mv in Model.Module.ModuleResponsibilities)
    {
        if (!string.IsNullOrEmpty(mv.Member.UserId) && mv.Member.UserId.Equals(userId))
        {
            itsMe = true;
        }
    }

    var userService = new UserInfoService();

}

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Inhalt / Lernziele / Literatur</h5>
                @if (Model.ChangeLog != null)
                {
                    var user = userService.GetUser(Model.ChangeLog.UserIdAmendment);
                    var userName = "unbekannt";
                    if (user != null)
                    {
                        userName = user.FullName;
                    }
                    if (Model.ChangeLog.Approved != null)
                    {
                        <h6 class="card-subtitle">
                            zuletzt geändert am @Model.ChangeLog.LastEdited von @userName - veröffentlicht am @Model.ChangeLog.Approved
                        </h6>
                    }
                    else
                    {
                        <h6 class="card-subtitle">
                            zuletzt geändert am @Model.ChangeLog.LastEdited von @userName - unveröffentlicht
                        </h6>
                    }
                }
            </div>
            <div class="list-group">
                <div class="list-group-item">
                    @Html.Raw(Model.Description.Trim())
                </div>
            </div>
            <div class="card-body">
                @if (ViewBag.UserRight.IsCurriculumAdmin || itsMe)
                {
                    <a href="@Url.Action("ContentChange", null, new { id = Model.Id })" class="btn btn-outline-primary">
                        <i class="bi-keyboard"></i> Ändern
                    </a>
                }
            </div>

        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Lehrangebote</h5>
            </div>

            @foreach (var subject in subjects)
            {
                var opportunities = subject.Opportunities.Where(x => x.Semester.Id == Model.Semester.Id).ToList();

                <div class="list-group-item">
                    <div class="row">
                        <div class="col-4">
                            @subject.Name (@subject.Tag)
                            @*
                            @if (ViewBag.UserRight.IsCurriculumAdmin || itsMe)
                            {
                                <a href="@Url.Action("Edit",null, new {id = Model.Id})" class="btn btn-outline-primary">
                                    <i class="bi-pen"></i> Ändern
                                </a>
                            }
                            *@
                        </div>
                        <div class="col-8">
                            @foreach (var opportunity in opportunities)
                            {
                                <div>
                                    <a href="@Url.Action("Details", "Course", new { id = opportunity.Course.Id })">
                                        @opportunity.Course.Name (@opportunity.Course.ShortName)
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
            <div class="card-body">
                @if (ViewBag.UserRight.IsCurriculumAdmin || itsMe)
                {
                    <a href="@Url.Action("ContentChange", null, new { id = Model.Id })" class="btn btn-outline-primary">
                        <i class="bi-pen"></i> Ändern
                    </a>
                    <a href="@Url.Action("ContentChange", null, new { id = Model.Id })" class="btn btn-outline-primary">
                        <i class="bi-pen"></i> Neues Angebot hinzufügen
                    </a>
                }

            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Prüfungsangebote</h5>
            </div>
            <div class="list-group">
                <div class="list-group-item">
                    <div class="row">
                        <div class="col-4">
                            <div>Erstprüfer:in</div>
                        </div>
                        <div class="col-8">
                        </div>
                    </div>
                </div>
                <div class="list-group-item">
                    <div class="row">
                        <div class="col-4">
                            <div>Zweitprüfer:in</div>
                        </div>
                        <div class="col-8">
                        </div>
                    </div>
                </div>
                <div class="list-group-item">
                    <div class="row">
                        <div class="col-4">
                            <div>Prüfungsform</div>
                        </div>
                        <div class="col-8">
                            @{
                                var i = 0;
                            }
                            @foreach (var option in Model.Module.ExaminationOptions)
                            {
                                i++;

                                if (i == 1)
                                {
                                    <div>
                                        @option.Name:
                                        @foreach (var fraction in option.Fractions)
                                        {
                                            if (fraction.MinDuration > 0)
                                            {
                                                var str = string.Format("{0} {1} Minuten {2:P}. ", fraction.Form.ShortName, fraction.MinDuration, fraction.Weight);
                                                @str
                                            }
                                            else
                                            {
                                                var str = string.Format("{0} {1:P}. ", fraction.Form.ShortName, fraction.Weight);
                                                @str
                                            }
                                        }
                                    </div>
                                }
                                else
                                {
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="list-group-item">
                    <div class="row">
                        <div class="col-4">
                            <div>Details zur Prüfung</div>
                        </div>
                        <div class="col-8">
                            z.B. genaue Anzahl an Minuten, geforderte Seitenzahl
                        </div>
                    </div>
                </div>
                <div class="list-group-item">
                    <div class="row">
                        <div class="col-4">
                            <div>Hilfsmittel</div>
                            @*
                        @if (ViewBag.UserRight.IsCurriculumAdmin || itsMe)
                        {
                            <a href="@Url.Action("Edit",null, new {id = Model.Id})" class="btn btn-outline-primary">
                                <i class="bi-pen"></i> Ändern
                            </a>
                        }
                        *@
                        </div>
                        <div class="col-8">
                            Alles erlaubt
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @if (ViewBag.UserRight.IsCurriculumAdmin || itsMe)
                {
                    <a href="@Url.Action("ContentChange", null, new { id = Model.Id })" class="btn btn-outline-primary">
                        <i class="bi-pen"></i> Ändern
                    </a>
                    <a href="@Url.Action("CreateExamination", null, new { moduleId = Model.Module.Id, semId=Model.Semester.Id })" class="btn btn-outline-primary">
                        <i class="bi-plus"></i> Neues Angebot hinzufügen
                    </a>
                }

            </div>
        </div>
    </div>
</div>






