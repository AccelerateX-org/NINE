@model MyStik.TimeTable.Data.CurriculumModule
@{
    ViewBag.Title = "Details";

    var itsMe = false;
    var userId = ViewBag.UserRight.User.Id;

    foreach (var mv in Model.ModuleResponsibilities)
    {
        if (!string.IsNullOrEmpty(mv.Member.UserId) && mv.Member.UserId.Equals(userId))
        {
            itsMe = true;
        }
    }
    foreach (var kv in Model.Catalog.CatalogResponsibilities)
    {
        if (!string.IsNullOrEmpty(kv.Member.UserId) && kv.Member.UserId.Equals(userId))
        {
            itsMe = true;
        }
    }

}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-12">
                        <h4 class="card-title">Modul @Model.Tag: @Model.Name</h4>
                        <div id="loading" class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        @if (ViewBag.UserRight.IsCurriculumAdmin)
                        {
                            <div class="button-group">
                                <a href="@Url.Action("TeachingForms", new { id = Model.Id })" class="btn btn-outline-primary disabled" aria-current="true">
                                        Lehr- und Lernformen
                                </a>
                                <a href="@Url.Action("ExaminationForms", new { id = Model.Id })" class="btn btn-outline-primary" aria-current="true">
                                        Prüfungsformen
                                </a>
                                @if (!Model.Accreditations.Any())
                                {
                                <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-outline-primary" aria-current="true">
                                        Modul endgültig löschen
                                </a>
                                }
                                else
                                {
                                if (Model.Descriptions.Any() || Model.Accreditations.Any(x => x.ExaminationDescriptions.Any()))
                                {
                                <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-outline-primary" aria-current="true">
                                    Modulbeschreibungen löschen
                                </a>
                                }
                                else
                                {
                                <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-outline-primary" aria-current="true">
                                    Modul aus allen Studiengängen entfernen
                                </a>
                                }
                                }

                            </div>
                        }
                        </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-4">
                                <div>Zugehörigkeit zu Curriculum</div>
                            </div>
                            <div class="col-8">
                                @foreach (var acc in Model.Accreditations)
                                {
                                    if (acc.Slot.CurriculumSection != null)
                                    {
                                        <div>
                                            <a href="@Url.Action("Details", "Curriculum", new {id = acc.Slot.CurriculumSection.Curriculum.Id})">
                                                @acc.Slot.CurriculumSection.Curriculum.Name
                                            </a>
                                            |
                                            @acc.Slot.CurriculumSection.Name <span class="badge bg-secondary">@acc.Slot.ECTS ECTS</span>
                                        </div>
                                    }
                                    else if (acc.Slot.AreaOption != null)
                                    {
                            <div>
                                <a href="@Url.Action("Details", "Curriculum", new {id = acc.Slot.AreaOption.Area.Curriculum.Id})">
                                    @acc.Slot.AreaOption.Area.Curriculum.Name
                                </a> | 
                                <a href="@Url.Action("Slot", "Curriculum", new {id = acc.Slot.Id})">
                                    @acc.Slot.Tag
                                </a> | 
                                <span class="badge bg-secondary">@acc.Slot.ECTS ECTS</span>
                            </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-warning">Modul ohne Zuordnung</div>
                                    }

                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div>Katalog-/Modulverantwortung</div>
                                @if (ViewBag.UserRight.IsCurriculumAdmin || itsMe)
                                {
                                    <a href="@Url.Action("EditResponsibilities", "CurriculumModule", new {id = Model.Id})" class="btn btn-outline-primary">
                                        <i class="bi-keyboard"></i> Ändern
                                    </a>
                                }
                            </div>
                            <div class="col-8">
                                @foreach (var mv in Model.Catalog.CatalogResponsibilities)
                                {
                                    <div>@mv.Member.FullName</div>
                                }
                                @foreach (var mv in Model.ModuleResponsibilities)
                                {
                                    <div>@mv.Member.FullName</div>
                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div>Prüfungsformen</div>
                            </div>
                            <div class="col-8">
                                @foreach (var option in Model.ExaminationOptions)
                                {
                                    <div>@option.FullName</div>
                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div>Lehr- und Lernformen</div>
                            </div>
                            <div class="col-8">
                                @foreach (var subject in Model.ModuleSubjects)
                                {
                                    if (subject.TeachingFormat != null)
                                    {
                                        <div>@subject.Name (@subject.Tag) <span class="badge bg-secondary">@subject.TeachingFormat.Tag</span> <span class="badge bg-secondary">@subject.SWS SWS</span></div>
                                    }
                                    else
                                    {
                                        <div>@subject.Name (@subject.Tag) <span class="badge bg-secondary">N.N.</span> <span class="badge bg-secondary">@subject.SWS SWS</span></div>
                                    }
                                }

                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-4">
                                <div>Voraussetzungen für die Teilnahme</div>
                            </div>
                            <div class="col-8">
                                @Model.Prerequisites
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div>Verwendbarkeit</div>
                            </div>
                            <div class="col-8">
                                @Model.Applicableness
                            </div>
                        </div>
                        @if (ViewBag.UserRight.IsCurriculumAdmin || itsMe)
                        {
                            <div class="row">
                                <div class="col-12">
                                    <a href="@Url.Action("EditGeneral", "CurriculumModule",new {id = Model.Id})" class="btn btn-outline-primary">
                                        <i class="bi-keyboard"></i> Ändern
                                    </a>
                                </div>
                            </div>
                        }

                    </div>
                </div>

                </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <h5>Gültig für Semester</h5>
                    </div>
                    <div class="col-md-8">
                        @Html.DropDownList("Semester", (IEnumerable<SelectListItem>)ViewBag.SemesterList, new { @class = "form-select", onchange = "onSemesterChanged()" })
                    </div>
                </div>
                <div id="moduleDesc"></div>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script>

        $(document).ready(function() {
            $('#loading').hide();
            onSemesterChanged();
        });


        function onSemesterChanged() {
            var semId = $('#Semester option:selected').val();

            $('#moduleDesc').html('');
            $('#loading').show();
            $.ajax(
                {
                    type: 'POST',
                    url: '@Url.Action("Description")',
                    data: {
                        moduleId: '@Model.Id',
                        semId: semId
                    },
                    success: function(data, success, xhr) {
                        $('#moduleDesc').html(data);
                        $('#loading').hide();
                    },
                    error: function(data, type, ex) {
                        alert("Fehler beim laden der Daten." + ex);
                        $('#loading').hide();
                    }
                });
        }
    </script>
}


