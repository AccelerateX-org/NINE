@using System.Globalization
@using MyStik.TimeTable.Web.Helpers
@model MyStik.TimeTable.Web.Models.SemesterActiveViewModel
@{
    ViewBag.Title = "Semester";
}


@section styles
{
    <link href="@Url.Content("~/Assets/global/plugins/datatables/datatables.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css")" rel="stylesheet" type="text/css" />
}

<div class="panel panel-default">
    <div class="panel-body bg-fillter-events">
        <div class="row">
            <div class="col-md-12">
                <h1>@Resources.SubMenuCurrentEvents @Model.Organiser.ShortName im @Model.Semester.Name</h1>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>
                        <i class="fa fa-list"></i> @Resources.AllEventsString
                    </h4>
                </div>
                <table id="tabEvents" class="table table-striped table-bordered table-condensed">
                    <thead>
                    <tr>
                        <th>@Resources.Description</th>
                        <th>Angelegt von</th>
                        <th>Lehrende</th>
                        <th>Gruppen</th>
                        <th>Erster Termin</th>
                        <th>Letzter Termin</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var c in Model.Events)
                    {
                        var firstDate = c.Dates.OrderBy(x => x.Begin).FirstOrDefault();
                        var lastDate = c.Dates.OrderBy(x => x.Begin).LastOrDefault();

                        <tr>
                            <td>
                                @Html.ActionLink(c.Name, "Admin", "Event", new { id = c.Id }, null)
                            </td>
                            <td>
                                @foreach (var owner in c.Owners)
                                {
                                    <div>@owner.Member.FullName</div>
                                }
                            </td>
                            <td></td>
                            <td>
                                @if (c.SemesterGroups.Count > 3)
                                {
                                    var groups = c.SemesterGroups.Take(3).ToList();
                                    var more = c.SemesterGroups.Count - 3;
                                    @Html.GroupList(groups)
                                    <span> und @more weitere</span>

                                }
                                else
                                {
                                    @Html.GroupList(c.SemesterGroups)
                                }
                            </td>
                            <td>
                                @Html.TimeSpanWithDate(firstDate)
                            </td>
                            <td>
                                @Html.TimeSpanWithDate(lastDate)
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



@section scripts
{
    <script src="@Url.Content("~/Assets/global/scripts/datatable.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/global/plugins/datatables/datatables.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/global/plugins/datatables/plugins/sorting/date-de.js")" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $('#tabEvents').DataTable({
                "paging": false,
                "columnDefs": [
                    {
                        "type": "de_datetime",
                        "targets": [4, 5]
                    }],
                "order": [[0, 'asc']]
            });
        });
    </script>
}