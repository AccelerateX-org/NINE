@model MyStik.TimeTable.Web.Models.CourseSelectModel

@{
    ViewBag.Title = "Card";
}

<div class="row" style="margin-bottom: 20px">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.Summary.Course.ShortName</h5>
                <h6 class="card-subtitle">@Model.Summary.Course.Name</h6>
                <p class="card-text">@Model.Summary.Course.Description</p>
            </div>
            <div class="list-group list-group-flush">
                <div class="list-group">
                    <div class="list-group-item">
                        Termine
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
