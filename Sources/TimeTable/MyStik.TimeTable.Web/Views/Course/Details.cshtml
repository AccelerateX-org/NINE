@using System.Web.ModelBinding
@using MyStik.TimeTable.Web.Helpers
@using MyStik.TimeTable.Web.Models
@model MyStik.TimeTable.Web.Models.CourseSelectModel
@{
    ViewBag.Title = "Lehrveranstaltung";
}

@section styles {
    <style>
        #wikitext img {
            max-width: 100%;
            height: auto;
        }
    </style>
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4>@Model.Summary.Course.Name (@Model.Summary.Course.ShortName)</h4>
                @foreach (var opp in Model.Summary.Course.Opportunities)
                {
                    <div>
                        Modul: <a href="@Url.Action("Details", "ModuleDescription", new {id = opp.Subject.Module.Id})">@opp.Subject.Module.Name</a>

                        @foreach (var acc in opp.Subject.Module.Accreditations)
                        {
                            if (acc.Slot.CurriculumSection != null)
                            {
                                <span> | <a href="@Url.Action("Details", "Curriculum", new {id = acc.Slot.CurriculumSection.Curriculum.Id})">@acc.Slot.CurriculumSection.Curriculum.ShortName</a> </span>
                            }
                            else
                            {
                                <span> | <a href="@Url.Action("Details", "Curriculum", new {id = acc.Slot.AreaOption.Area.Curriculum.Id})">@acc.Slot.AreaOption.Area.Curriculum.ShortName</a> </span>
                            }
                        }
                    </div>
                }
                @foreach (var teaching in Model.Summary.Course.Teachings)
                {
                    <div>
                        Modul:
                        @if (Model.Summary.Course.Semester != null)
                        {
                            <a href="@Url.Action("Semester", "ModuleDescription", new { moduleId = teaching.Subject.Module.Id, semId = Model.Summary.Course.Semester.Id })">@teaching.Subject.Module.Name</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Details", "ModuleDescription", new { id = teaching.Subject.Module.Id })">@teaching.Subject.Module.Name</a>
                        }

                        @foreach (var acc in teaching.Subject.Module.Accreditations)
                        {
                            if (acc.Slot.CurriculumSection != null)
                            {
                                <span> | <a href="@Url.Action("Details", "Curriculum", new { id = acc.Slot.CurriculumSection.Curriculum.Id })">@acc.Slot.CurriculumSection.Curriculum.ShortName</a> </span>
                            }
                            else
                            {
                                <span> | <a href="@Url.Action("Details", "Curriculum", new { id = acc.Slot.AreaOption.Area.Curriculum.Id })">@acc.Slot.AreaOption.Area.Curriculum.ShortName</a> </span>
                            }
                        }
                    </div>
                }
            </div>
            <div class="list-group">
                @if (ViewBag.UserRight.IsHost || ViewBag.UserRight.IsOwner || ViewBag.UserRight.IsCourseAdmin)
                {

                    @Html.Partial("_CourseSummarySubscription", Model.Summary)
                    if (Model.Summary.Course.IsInternal)
                    {
                        <div class="list-group-item list-group-item-info">
                            <h5><i class="fa fa-lock"></i> Gesperrt - Aktuell können nur Administratoren Änderungen vornehmen.</h5>
                        </div>
                    }

                    <div class="list-group-item">
                        <div class="btn-group" role="group">
                            <a href="@Url.Action("CustomOccurrenceMail", "Mailing", new {id=Model.Summary.Course.Occurrence.Id})" class="btn btn-outline-primary">
                                <i class="bi-envelope"></i> Mail senden
                            </a>
                            <a href="@Url.Action("Download", new {id = Model.Summary.Course.Id})" class="btn btn-outline-primary"><i class="bi-download"></i> Listen</a>
                            <a href="@Url.Action("AdminNewDates", new {id = Model.Summary.Course.Id})" class="btn btn-outline-primary"><i class="bi-calendar"></i> Termine</a>
                            <a href="@Url.Action("AdminNewParticipients", new {id = Model.Summary.Course.Id})" class="btn btn-outline-primary"><i class="bi-person"></i> Teilnehmende</a>
                            @if (Model.Summary.Course.IsInternal && !ViewBag.UserRight.IsCourseAdmin)
                            {
                                <a href="@Url.Action("AdminNewInfos", new {id = Model.Summary.Course.Id})" class="btn btn-outline-primary"><i class="bi-pen"></i> Beschreibung</a>
                                <a href="@Url.Action("ChangeGroups", new {id = Model.Summary.Course.Id})" class="btn btn-outline-primary"><i class="bi-book"></i> Semestergruppen</a>
                                <a href="@Url.Action("ChangeTopics", new {id = Model.Summary.Course.Id})" class="btn btn-outline-primary"><i class="bi-tag"></i> Themengebiet ("Modul")</a>
                                <a href="@Url.Action("AdminNewRules", new {id = Model.Summary.Course.Id})" class="btn btn-outline-primary"><i class="bi-exclamation-circle"></i> Zugangsbeschränkungen, Platzkontigente</a>
                            }

                            @if (!Model.Summary.Course.IsInternal || ViewBag.UserRight.IsCourseAdmin)
                            {
                                <a href="@Url.Action("AdminNewInfos", new {id = Model.Summary.Course.Id})" class="btn btn-outline-primary"><i class="bi-pen"></i> Beschreibung</a>
                                <a href="@Url.Action("ChangeGroups", new {id = Model.Summary.Course.Id})" class="btn btn-outline-primary"><i class="bi-book"></i> Semestergruppen</a>
                                <a href="@Url.Action("ChangeTopics", new {id = Model.Summary.Course.Id})" class="btn btn-outline-primary"><i class="bi-tag"></i> Themengebiet ("Modul")</a>
                                <a href="@Url.Action("AdminNewRules", new {id = Model.Summary.Course.Id})" class="btn btn-outline-primary"><i class="bi-exclamation-circle"></i> Zugangsbeschränkungen, Platzkontigente</a>
                                if (Model.Summary.Course.Occurrence.IsAvailable)
                                {
                                    <a href="@Url.Action("Lock", new {id = Model.Summary.Course.Occurrence.Id})" class="btn btn-outline-primary"><i class="bi-lock"></i> Eintragung für Studierende sperren</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("UnLock", new {id = Model.Summary.Course.Occurrence.Id})" class="btn btn-outline-primary"><i class="bi-unlock"></i> Eintragung für Studierende ermöglichen</a>
                                }
                                if (ViewBag.UserRight.IsCourseAdmin)
                                {
                                    if (Model.Summary.Course.IsInternal)
                                    {
                                        <a href="@Url.Action("UnFreeze", new {id = Model.Summary.Course.Id})" class="btn btn-outline-primary"><i class="bi-unlock"></i> Änderungen durch Lehrende erlauben</a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Freeze", new {id = Model.Summary.Course.Id})" class="btn btn-outline-primary"><i class="bi-lock"></i> Änderungen durch Lehrende sperren</a>
                                    }
                                }
                            }

                            @if (ViewBag.UserRight.IsOwner || ViewBag.UserRight.IsCourseAdmin)
                            {
                                <a href="@Url.Action("Owners", new {id = Model.Summary.Course.Id})" class="btn btn-outline-primary">
                                    <i class="bi-person-bounding-box"></i> Besitzer
                                </a>
                                <a href="@Url.Action("DeleteCourse", new {id = Model.Summary.Course.Id})" class="btn btn-danger">
                                    <i class="bi-trash"></i> Löschen
                                </a>
                            }


                        </div>
                    </div>
                }

            </div>
            <div>
                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Zusammenfassung</button>
                        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Beschreibung</button>
                        <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-contact" type="button" role="tab" aria-controls="nav-contact" aria-selected="false">Termine</button>
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                        @Html.Partial("_CourseSummaryHead", Model.Summary)
                        @Html.Partial("_CourseSummaryCapacity", Model.Summary)
                        @if (Request.IsAuthenticated && (ViewBag.UserRight.User.MemberState == MemberState.Student || ViewBag.UserRight.User.MemberState == MemberState.Staff))
                        {
                            @Html.Partial("_CourseSummaryBooking", Model)
                        }

                    </div>
                    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                        @Html.Partial("_CourseSummaryDescription", Model.Summary)
                    </div>
                    <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
                        @Html.Partial("_CourseSummaryDates", Model.Summary)
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
@if (ViewBag.UserRight.IsHost || ViewBag.UserRight.IsOwner || ViewBag.UserRight.IsCourseAdmin)
{
    <div class="alert alert-info">
        Achtung Baustelle: Versuch eines neuen Aufbaus der Seite - aktuell sichtbar nur für Lehrende / Admins
    </div>

    <div class="row">
    <div class="col-md-12">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            @if (Model.Summary.Course.Organiser != null)
            {
                <li class="breadcrumb-item"><a href="@Url.Action("Faculty", "University", new { id = Model.Summary.Course.Organiser.Id })">@Model.Summary.Course.Organiser.ShortName</a></li>
            }
            @if (Model.Summary.Course.Semester != null)
            {
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Catalogs", new { id = Model.Summary.Course.Semester.Id })">@Model.Summary.Course.Semester.Name</a></li>
            }
            <li class="breadcrumb-item active" aria-current="page">@Model.Summary.Course.ShortName</li>
        </ol>
    </nav>
    <div class="row">
    @if (ViewBag.UserRight.IsHost || ViewBag.UserRight.IsOwner || ViewBag.UserRight.IsCourseAdmin)
    {
        <div class="col-md-2">
            <div class="card mb-3">
                <div class="list-group">
                    @Html.Partial("_CourseSummarySubscription", Model.Summary)
                    @if (Model.Summary.Course.IsInternal)
                    {
                        <div class="list-group-item list-group-item-info">
                            <h5><i class="fa fa-lock"></i> Gesperrt - Aktuell können nur Administratoren Änderungen vornehmen.</h5>
                        </div>
                    }
                </div>
            </div>
            <div class="card">
                <div class="list-group">
                    <div class="list-group-item list-group-item-action">
                        <i class="bi-envelope"></i> Nachricht senden
                    </div>
                    <div class="list-group-item list-group-item-action">
                        <i class="bi-people"></i> Teilnehmende
                    </div>
                    <div class="list-group-item list-group-item-action">
                        <i class="bi-calendar"></i> Terminverwaltung
                    </div>
                    <div class="list-group-item list-group-item-action">
                        <i class="bi-gear"></i> Allgemeine Angaben
                    </div>
                    <div class="list-group-item list-group-item-action">
                        <i class="bi-book"></i> Semestergruppen
                    </div>
                    <div class="list-group-item list-group-item-action">
                        <i class="bi-tag"></i> Themengebiet ("Modul")
                    </div>
                    <div class="list-group-item list-group-item-action">
                        <i class="bi-exclamation"></i> Zugangsbeschränkungen, Platzkontingente
                    </div>
                    <div class="list-group-item list-group-item-action">
                        <i class="bi-lock"></i> Eintragung für Studierende sperren
                    </div>
                    <div class="list-group-item list-group-item-action">
                        <i class="bi-lock"></i> Änderung durch Lehrende sperren
                    </div>
                    <div class="list-group-item list-group-item-action">
                        <i class="bi-person"></i> Besitzer
                    </div>
                    <div class="list-group-item list-group-item-action list-group-item-danger">
                        <i class="bi-trash"></i> Löschen
                    </div>

                </div>
            </div>
        </div>
    }
    <div class="col-md-10">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <strong>@Model.Summary.Course.Name</strong>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                Inhalt
                            </div>
                            <div class="col-8">
                                @foreach (var teaching in Model.Summary.Course.Teachings)
                                {
                                    <div>
                                        @if (Model.Summary.Course.Semester != null)
                                        {
                                            <a href="@Url.Action("Semester", "ModuleDescription", new { moduleId = teaching.Subject.Module.Id, semId = Model.Summary.Course.Semester.Id })">Modulbeschreibung</a>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("Details", "ModuleDescription", new { id = teaching.Subject.Module.Id })">Modulbeschreibung</a>
                                        }

                                        @foreach (var acc in teaching.Subject.Module.Accreditations)
                                        {
                                            if (acc.Slot.CurriculumSection != null)
                                            {
                                                <span> | <a href="@Url.Action("Details", "Curriculum", new { id = acc.Slot.CurriculumSection.Curriculum.Id })">@acc.Slot.CurriculumSection.Curriculum.ShortName</a> </span>
                                            }
                                            else
                                            {
                                                <span> | <a href="@Url.Action("Details", "Curriculum", new { id = acc.Slot.AreaOption.Area.Curriculum.Id })">@acc.Slot.AreaOption.Area.Curriculum.ShortName</a> </span>
                                            }
                                        }
                                    </div>
                                }
                                <div>
                                    <a href="#cardDetails">Details zur Lehrveranstaltung</a>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                Ressourcen
                            </div>
                            <div class="col-8">
                                @if (string.IsNullOrEmpty(Model.Summary.Course.UrlMoodleCourse) && string.IsNullOrEmpty(Model.Summary.Course.KeyMoodleCourse))
                                {
                                    <div><i>Kein moodle-Kurs hinterlegt</i></div>
                                }
                                else
                                {
                                    <div>
                                        <a href="@Model.Summary.Course.UrlMoodleCourse" target="_blank">Moodle</a>
                                        @if (!string.IsNullOrEmpty(Model.Summary.Course.KeyMoodleCourse))
                                        {
                                            <span>(Zugangsschlüssel <strong>@Model.Summary.Course.KeyMoodleCourse</strong>)</span>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                Nächster Termin
                            </div>
                            <div class="col-8">
                                @if (Model.Summary.CurrentDate != null)
                                {
                                    <div>
                                        @Html.TimeSpanWithDate(Model.Summary.CurrentDate) | @Html.RoomList(Model.Summary.CurrentDate.Rooms) | @Html.LecturerList(Model.Summary.CurrentDate.Hosts)
                                    </div>
                                    <div><<strong>@Model.Summary.CurrentDate.Title</strong></div>
                                    <div>@Model.Summary.CurrentDate.Description</div>
                                }
                                else
                                {
                                    <div><i>keine zukünftigen Termine</i></div>
                                }
                                <div>
                                    <a href="#cardDates">Alle Termine</a>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                Zugangsbeschränkungen
                            </div>
                            <div class="col-8">
                                <div>
                                    Nur für Studierende der Studiengänge MBA, MBE, WIM, ESADT
                                </div>
                                <div>
                                    Platzkontingent: 40 Plätze
                                </div>
                                <div>
                                    Platzvergabe über Wahlverfahren
                                </div>
                            </div>
                        </div>
                        <div class="row bg-light-subtle">
                            <div class="col-4">
                                Meine Eintragung
                            </div>
                            <div class="col-8">
                                <div>
                                    @if (Request.IsAuthenticated && (ViewBag.UserRight.User.MemberState == MemberState.Student || ViewBag.UserRight.User.MemberState == MemberState.Staff))
                                    {
                                        @Html.Partial("_CourseSummaryBooking", Model)
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div id="cardDates" class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <strong>Alle Termine</strong>
                            </div>
                        </div>
                        @foreach (var date in Model.Summary.Course.Dates.OrderBy(x => x.Begin))
                        {
                            <div class="row">
                                <div class="col-4">
                                    @Html.TimeSpanWithDate(date)
                                </div>
                                <div class="col-8">
                                    <strong>@date.Title</strong>
                                    <div>@date.Description</div>
                                    <div>Raum: @Html.RoomList(date.Rooms) | Dozent:innen: @Html.LecturerList(date.Hosts)</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div id="cardDetails" class="card">
                    <div class="card-body">
                        <strong>Details zur Lehrveranstaltung</strong>
                        @if (string.IsNullOrEmpty(Model.Summary.Course.Description))
                        {
                            <i>Keine weiteren Detailinformationen vorhanden</i>
                        }
                        else
                        {
                            <div>@Html.Raw(Model.Summary.Course.Description)</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
    </div>
}

@section scripts
{
    <script>
        function onSubscribe(e) {
            //alert('#'+e);
            $('#bookingBox').addClass('disabled');
            $('#bookingBox').html('<i class="fa fa-circle-o-notch fa-spin fa-2x"></i>');

            $.ajax(
                {
                    type: "POST",
                    url: '@Url.Action("Subscribe", "Dictionary")',
                    data: {
                        Id: e
                    },
                    success: function(data, success, xhr) {
                        $('#bookingBox').html(data);
                        $('#bookingBox').removeClass('disabled');
                    }
                });

        }
    </script>
}


