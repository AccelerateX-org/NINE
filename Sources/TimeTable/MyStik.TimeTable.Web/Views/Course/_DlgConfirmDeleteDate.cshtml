@using System.Globalization
@using MyStik.TimeTable.Web.Helpers
@model MyStik.TimeTable.Data.ActivityDate
<!-- Modal -->
<div class="modal fade" id="confirmDeleteDate" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span>&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Löschen bestätigen</h4>
            </div>
            <div class="modal-body">
                <p>Soll der Termin am @Model.Begin.ToString("dd.MM.yyyy", new CultureInfo("de-DE")) @Html.TimeSpan(Model) gelöscht werden?</p>
            </div>
            <div class="modal-footer">
                @Ajax.ActionButton("fa-trash-o", "löschen", "DeleteDateConfirmed", "Course",
                                                new { dateId = Model.Id },
                                             new AjaxOptions()
                                             {
                                                 HttpMethod = "Post",
                                                 InsertionMode = InsertionMode.Replace,
                                                 UpdateTargetId = "dateTable",
                                                 OnSuccess = "hideConfirmDeleteDate()" 
                                             },
                                                new { @class = "btn btn-danger btn-sm" }
                                                )
                <button type="button" class="btn btn-default" data-dismiss="modal">Abbrechen</button>
            </div>
        </div>
    </div>
</div>