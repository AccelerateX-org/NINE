@model MyStik.TimeTable.Web.Models.ThesisExtendViewModel
@{
    ViewBag.Title = "Extend";
}


@section styles
{
    <link href="@Url.Content("~/Assets/libs/datatables/dataTables.min.css")" rel="stylesheet" type="text/css" />
}


<div class="container">
    <div class="row" style="margin-top: 50px">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h5>Verlängerung Abschlussarbeit</h5>
                </div>
                <div class="portlet-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <fieldset>
                            @Html.ValidationSummary()
                            @Html.HiddenFor(model => model.Thesis.Id)
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Bisheriges Abgabedatum</label>
                                <div class="col-sm-8">
                                    <p class="form-control-static">@Model.Thesis.ExpirationDate.Value.ToShortDateString()</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Neues Abgabedatum</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model => model.NewDateEnd, new { @class = "form-control datepicker" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-4 col-md-6">
                                    <input type="submit" value="Verlängerung speichern" class="btn btn-primary" />
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>




@section scripts
{
    <script src="@Url.Content("~/Assets/libs/datatables/dataTables.min.js")" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            initDatePicker("datepicker", "@ViewBag.Culture.DateTimeFormat.ShortDatePattern", "@ViewBag.Culture.Name");
        });

    </script>
}
