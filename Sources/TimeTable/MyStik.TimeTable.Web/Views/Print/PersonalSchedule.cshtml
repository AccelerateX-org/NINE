
@{
    /**/

    ViewBag.Title = "PersonalSchedule";
}

@section styles
{
    <link href="~/Assets/libs/fullcalendar/main.min.css" rel="stylesheet" />
}


<h2>Vorlesungsplan (@ViewBag.Name) - Semester @ViewBag.Semester.Name</h2>

<div id="calendar">
</div>


@section scripts
{
    <script src="~/Assets/libs/fullcalendar/main.min.js"></script>
    <script src="~/Assets/libs/fullcalendar/locales/de.js"></script>
    <script src="~/Assets/fillter/scripts/calendar.js"></script>

    <script type="text/javascript">

        $(document).ready(function() {
            $('#loading').hide();

            initPrintCalendar();
            //initCalendar(false);


            $('#calendar').fullCalendar('removeEvents');

            $('#calendar').fullCalendar('addEventSource',
            {
                url: '@Url.Action("ActivityPrintPlan", "Calendar")',
                type: 'POST'
            });
        });

    </script>
}
