@model MyStik.TimeTable.Web.Models.ScriptOrderDetailsModel
@{
    ViewBag.Title = "Details zu Bestellungen";
}

@section styles
 {
    <link href="@Url.Content("~/Assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css")" rel="stylesheet" type="text/css" />
}


@section scripts
{
    <script src="@Url.Content("~/Assets/libs/datatables.net/js/jquery.dataTables.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/libs/datatables.net-bs4/js/dataTables.bootstrap4.min.js")" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $('#tabPersons').DataTable({
                "paging": false
            });

            $('#tabDocs').DataTable({
                "paging": false
            });
        });
    </script>
}

@section menue2nd
{
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #595f64;">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSubMNenu" aria-controls="navbarSubMNenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSubMNenu">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link text-center" href="@Url.Action("ExecuteOrder", new {id = Model.Period.Id})"> <i class="fas fa-cogs"></i><br />Bestllnummern vergeben</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link text-center" href="@Url.Action("SendMails", new {id = Model.Period.Id})"> <i class="fas fa-envelope"></i><br />Abholzettel versenden</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link text-center" href="@Url.Action("OrderDocument", new {id = Model.Period.Id})"> <i class="fas fa-download"></i><br />Packlisten</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link text-center" href="@Url.Action("OrderQuantity", new {id = Model.Period.Id})"> <i class="fas fa-download"></i><br />Bestellmengen</a>
                </li>
            </ul>
        </div>
    </nav>
}



<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4>
                    Bestellung nach Personen
                </h4>
            </div>
            <table id="tabPersons" class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Studium</th>
                        <th>Bestellnummer</th>
                        <th>Dokumente</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Persons)
                    {
                        <tr>
                            @if (p.User != null)
                            {
                                <td>
                                    @p.User.FullName
                                </td>
                            }
                            else
                            {
                                <td>unbekannt</td>
                            }
                            @if (p.Student != null)
                            {
                                <td>
                                    @p.Student.Curriculum.ShortName
                                </td>
                            }
                            else
                            {
                                <td></td>
                            }
                            <td>@p.Basket.OrderNumber</td>
                            <td>
                                @foreach (var doc in p.Basket.Orders)
                                {
                                    <div>@doc.ScriptDocument.Title (@doc.ScriptDocument.Version)</div>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4>
                    Bestellung nach Dokumenten
                </h4>
            </div>
            <table id="tabDocs" class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Titel</th>
                        <th>Version</th>
                        <th>Besteller</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doc in Model.Documents)
                    {
                        <tr>
                            <td>@doc.Document.Title</td>
                            <td>@doc.Document.Version</td>
                            <td>
                                @foreach (var p in doc.Orderers)
                                {
                                    if (p.User != null)
                                    {
                                        if (p.Student != null)
                                        {
                                            <div>@p.User.FullName (@p.Student.Curriculum.ShortName)</div>
                                        }
                                        else
                                        {
                                            <div>@p.User.FullName</div>
                                        }
                                    }
                                    else
                                    {
                                        <div>unbekannt</div>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>







