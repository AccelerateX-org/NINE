@using MyStik.TimeTable.Web.Helpers
@model MyStik.TimeTable.Web.Models.OrganiserViewModel
@{
    ViewBag.Title = "Skriptbestellung";
}

@section styles
{
    <link href="@Url.Content("~/Assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css")" rel="stylesheet" type="text/css" />
}


@section scripts
{
    <script src="@Url.Content("~/Assets/libs/datatables.net/js/jquery.dataTables.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/libs/datatables.net-bs4/js/dataTables.bootstrap4.min.js")" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $('#tabCourses').DataTable({
                "paging": false
            });
        });
    </script>
}


<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4>
                @if (Model.PreviousSemester != null)
                {
                    <a href="@Url.Action("Index", new {id=Model.PreviousSemester.Id})" class="btn btn-outline-secondary btn-sm"><small><< @Model.PreviousSemester.Name</small></a>
                }
                Bestellzeiträume für Skripte der @Model.Organiser.ShortName im @Model.Semester.Name
                @if (Model.NextSemester != null)
                {
                    <a href="@Url.Action("Index", new {id=Model.NextSemester.Id})" class="btn btn-outline-secondary btn-sm"><small>@Model.NextSemester.Name >></small></a>
                }
            </h4>
        </div>
        <div class="list-group">
            <div class="list-group-item">
                <div class="btn-group">
                    <a class="btn btn-outline-primary text-center" href="@Url.Action("Create", new {semId = Model.Semester.Id})"> <i class="fas fa-plus"></i><br />Neuer Bestellzeitraum</a>
                </div>
            </div>
        </div>
        <table id="tabCourses" class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Titel</th>
                    <th>Beschreibung</th>
                    <th>Von</th>
                    <th>Bis</th>
                    <th>Anzahl Bestellungen</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.OrderPeriods)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("Order", new { id = p.Id})">@p.Title</a>
                        </td>
                        <td>
                            @p.Description
                        </td>
                        <td>
                            @p.Begin.ToShortDateString()
                        </td>
                        <td>
                            @p.End.ToShortDateString()
                        </td>
                        <td>@p.Baskets.Count</td>
                        @if (p.LastProcessed != null)
                        {
                            <td>
                                Bestellung am @p.LastProcessed.Value.ToShortDateString() ausgeführt
                            </td>
                        }
                        else
                        {
                            <td>noch keine Bestellung durchgeführt</td>
                        }
                    </tr>
                }
            </tbody>
        </table>


    </div>
</div>

