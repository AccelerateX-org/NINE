@model MyStik.TimeTable.Web.Models.DashboardViewModel


<div class="portlet portlet-sortable light bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-pencil"></i>
                <span class="caption-subject bold uppercase"> Meine Kurse</span>
            </div>
            <div class="actions">
                <a href="@Url.Action("Index", "Activity")" class="btn btn-default btn-sm">
                    <i class="fa fa-calendar"></i>
                </a>
            </div>
        </div>
    <table class="table table-condensed">
        <thead>
        <tr>
            <th>Bezeichnung</th>
            <th>Status</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var act in Model.MyCourseSubscriptions)
        {
            var activityFlag = act.State != null ? "Activity_" + act.State.Occurrence.Id : string.Empty;
            <tr id="@activityFlag">
                <td>
                    @Html.ActionLink(
                        act.Activity.Name,
                        act.Activity.Action, act.Activity.Controller, new {id = act.Activity.Id}, null)
                </td>
                @if (act.State.Subscription.OnWaitingList)
                {
                    <td>Warteliste</td>
                }
                else
                {
                    if (act.State.Subscription.IsConfirmed)
                    {
                        <td>Teilnehmer</td>
                    }
                    else
                    {
                        <td>Platz reserviert</td>
                    }
                }
                @if (act.Lottery != null)
                {
                    <td><a href="@Url.Action("MySelection", "Lottery", new {id = act.Lottery.Id})"><i class="fa fa-random"></i></a></td>
                }
                else
                {
                    <td></td>
                }
            </tr>
        }
        </tbody>
    </table>
    <div class="alert alert-info">
        <p>Über <i class="fa fa-random"></i> geht es zur Platzverlosung</p>
    </div>
</div>

