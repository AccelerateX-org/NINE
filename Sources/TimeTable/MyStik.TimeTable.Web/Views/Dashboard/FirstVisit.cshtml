
@{
    ViewBag.Title = "Erster Besuch";
}

<div class="row justify-content-md-center" style="margin-bottom: 20px; margin-top: 20px">
    <div class="col-md-12">
        <h2 class="text-center">Willkommen bei NINE für...</h2>
    </div>
</div>

<div class="row justify-content-md-center" style="margin-bottom: 20px">
    <div class="col-sm-6 col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">... Studieninteressierte</h5>
                <h6 class="card-subtitle mb-2 text-muted">In Berührung kommen </h6>
                <p class="card-text">Informieren, Ausprobieren, Beraten lassen</p>
                <a href="@Url.Action("Index", "Assessment")" class="btn btn-outline-primary">Aktuelle Eignungsprüfung</a>
            </div>
        </div>
