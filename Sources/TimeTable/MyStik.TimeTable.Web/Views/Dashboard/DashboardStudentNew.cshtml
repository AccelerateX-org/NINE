@using MyStik.TimeTable.Web.Helpers
@model MyStik.TimeTable.Web.Models.DashboardStudentViewModel
@{
    ViewBag.Title = Resources.MenuDashboard;
}

<div class="container-fluid">
    <div class="row" style="margin-top: 20px">
        <div class="col-sm-6 col-md-3 col-lg-2">
            <div class="panel panel-default text-center">
                <a href="@Url.Action("PersonalPlan", "Activity")" class="btn btn-default btn-block">
                    <div><i class="fa fa-3x fa-calendar"></i></div>
                    <h4>Mein Kalender</h4>
                </a>
                <div class="btn-group btn-group-justified">
                    <a href="@Url.Action("PersonalPlanToday", "Activity")" class="btn btn-default">Heute</a>
                    <a href="@Url.Action("PersonalPlanTomorrow", "Activity")" class="btn btn-default">Morgen</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3 col-lg-2">
            <div class="panel panel-default text-center">
                <a href="@Url.Action("Semester", "Planer")" class="btn btn-default btn-block">
                    <div><i class="fa fa-3x fa-map-o"></i></div>
                    <h4>Mein Stundenplan</h4>
                </a>
                <div class="btn-group btn-group-justified">
                    <a href="@Url.Action("Courses", "Planer", new {id=Model.Semester.Id})" class="btn btn-default">@Model.Semester.Name</a>
                    <a href="@Url.Action("Courses", "Planer", new {id=Model.NextSemester.Id})" class="btn btn-default">@Model.NextSemester.Name</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3 col-lg-2">
            <div class="panel panel-default text-center">
                <a href="" class="btn btn-default btn-block">
                    <div><i class="fa fa-3x fa-graduation-cap"></i></div>
                    <h4>Mein Studium</h4>
                </a>
                <div class="btn-group btn-group-justified">
                    <a href="" class="btn btn-default">Praxissemester</a>
                    <a href="" class="btn btn-default">Abschlussarbeit</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3 col-lg-2">
            <div class="panel panel-default text-center">
                <a href="" class="btn btn-default btn-block">
                    <div><i class="fa fa-3x fa-user-md"></i></div>
                    <h4>Meine Ansprechpartner</h4>
                </a>
                <div class="btn-group btn-group-justified">
                    <a href="" class="btn btn-default">Sprechstunden</a>
                    <a href="" class="btn btn-default">XXX</a>
                </div>
            </div>
        </div>

    </div>
</div>












