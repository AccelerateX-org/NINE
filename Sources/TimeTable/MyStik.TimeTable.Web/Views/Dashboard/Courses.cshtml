@model MyStik.TimeTable.Web.Models.TeachingSemesterSummaryModel
@{
    ViewBag.Title = "Courses";
}

<div class="row">
    <div clas="col-md-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")"><i class="bi-grid"></i></a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">@Model.Semester.Name</a></li>
                <li class="breadcrumb-item active" aria-current="page">Meine Lehrveranstaltungen</li>
            </ol>
        </nav>
        <div class="row">
            @foreach (var summary in Model.Courses)
            {
                <div class="col-md-3">
                    <div class="card mb-1">
                        <div class="card-body">
                            @if (summary.IsSubscriber(summary.User.Id))
                            {
                                var subscription = summary.GetSubscription(summary.User.Id);
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="card-title">@summary.Course.Name</h5>
                                    @if (subscription.OnWaitingList)
                                    {
                                        <span><i class="bi-hourglass"></i></span>
                                    }
                                    else
                                    {
                                        <span><i class="bi-people"></i></span>
                                    }
                                </div>
                            }
                            else
                            {
                                <h5 class="card-title">@summary.Course.Name</h5>
                            }
                            @if (summary.IsHost(summary.User.Id))
                            {
                                <a href="@Url.Action("CustomOccurrenceMail", "Mailing", new {id=summary.Course.Occurrence.Id})" class="card-link"><i class="bi-envelope"></i></a>
                                <a href="@Url.Action("AdminNewParticipients", "Course", new {id = summary.Course.Id})" class="card-link"><i class="bi-people"></i></a>
                            }
                            @if (!string.IsNullOrEmpty(summary.Course.UrlMoodleCourse))
                            {
                                <a class="card-link" href="@summary.Course.UrlMoodleCourse" target="_blank"><i class="bi-moon"></i></a>
                            }

                            <a href="@Url.Action("Details", "Course", new { id = summary.Course.Id })" class="card-link">Details...</a>
