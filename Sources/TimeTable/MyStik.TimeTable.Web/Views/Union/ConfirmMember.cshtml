@model MyStik.TimeTable.Data.OrganiserMember
@{
    ViewBag.Title = "ConfirmMember";
}

<h2>ConfirmMember</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }
                ))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group">
        <input name="id" type="text" value="@Model.Id" hidden="" />
    </div>
    <div class="form-group">
        <label for="token" class="col-md-4 control-label">Anmeldecode</label>
        <div class="col-md-8">
            <input name="token" id="token" type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
            <input type="submit" value="Bestätigen" class="btn btn-primary" />
        </div>
    </div>
}

