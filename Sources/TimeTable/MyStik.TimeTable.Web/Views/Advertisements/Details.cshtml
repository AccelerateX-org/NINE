@model MyStik.TimeTable.Data.Advertisement
@{
    ViewBag.Title = "Ausschreibung";
}


<div class="panel panel-default">
    <div class="panel-body bg-fillter-events">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Title</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>
                        Allgemeine Angaben
                    </h4>
                </div>
                <div class="panel-body">
                    <div class="form form-horizontal">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Titel</label>
                            <div class="col-md-8">
                                <p class="form-control-static">@Model.Title</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Beschreibung</label>
                            <div class="col-md-8">
                                <p class="form-control-static">@Html.Raw(Model.Description)</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Angelegt am</label>
                            <div class="col-md-8">
                                <p class="form-control-static">@Model.Created.ToShortDateString()</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Anzeigen bis</label>
                            <div class="col-md-8">
                                <p class="form-control-static">@Model.VisibleUntil.ToShortDateString()</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Kontakt</label>
                            <div class="col-md-8">
                                <p class="form-control-static">@Model.Owner.FullName</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Anhang</label>
                            <div class="col-md-8">
                                @if (Model.Attachment != null)
                                { 
                                    <p class="form-control-static"><a href="@Url.Action("ShowFile", new {id = Model.Attachment.Id})" target="_blank"><i class="fa fa-file-pdf-o"></i> (@Model.Attachment.AccessCount)</a></p>
                                }
                                else
                                {
                                    <p class="form-control-static">Kein Anhang</p>
                                }
                                
                            </div>
                        </div>
                    </div>
                    <div class="btn-group">
                        <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-arrow-left"></i> zurück zur Liste</a>
                        @if (ViewBag.ItsMe)
                        {
                            <a href="@Url.Action("Edit", new {id = Model.Id})" class="btn btn-default"><i class="fa fa-pencil"></i> Ändern</a>
                            <a href="@Url.Action("Delete", new {id = Model.Id})" class="btn btn-danger"><i class="fa fa-trash-o"></i> Löschen</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



